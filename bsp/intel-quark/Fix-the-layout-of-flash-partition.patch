 	},
 	{
 		.name		= "layout.conf",
 		.size		= 4096,
-		.offset		= 0x708000,
+		.offset		= 0x4FF000,
 	},
 	{
 		.name		= "sketch",
 		.size		= 0x40000,
-		.offset		= 0x750000,
+		.offset		= 0x100000,
 	},
 	{
