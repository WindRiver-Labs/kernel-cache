From: Anders Berg <anders.berg@lsi.com>
Date: Wed, 11 Sep 2013 22:13:50 +0200
Subject: [PATCH 30/75] arm/dts: Added device tree nodes for I2C controllers.

Signed-off-by: Anders Berg <anders.berg@lsi.com>
---
 arch/arm/boot/dts/axm55xx.dts |   40 ++++++++++++++++++++++++++++++++++++++++
 1 files changed, 40 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/axm55xx.dts b/arch/arm/boot/dts/axm55xx.dts
index 6c767dd..9c38a77 100644
--- a/arch/arm/boot/dts/axm55xx.dts
+++ b/arch/arm/boot/dts/axm55xx.dts
@@ -279,7 +279,47 @@
 				     <0 52 4>,
 				     <0 53 4>;
 		};
+	};
+
+	I2C0: i2c@0x02010084000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+		compatible = "lsi,api2c";
+		device_type = "i2c";
+		port = <0>;
+		reg = <0x20 0x10084000 0x00 0x1000>;
+		interrupts = <0 19 4>;
+	};
 
+	I2C1: i2c@0x02010085000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+		compatible = "lsi,api2c";
+		device_type = "i2c";
+		port = <1>;
+		reg = <0x20 0x10085000 0x00 0x1000>;
+		interrupts = <0 20 4>;
+	};
+
+	I2C2: i2c@0x02010086000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+		compatible = "lsi,api2c";
+		device_type = "i2c";
+		port = <2>;
+		reg = <0x20 0x10086000 0x00 0x1000>;
+		interrupts = <0 21 4>;
+	};
+
+	SMB: i2c@0x02010087000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+		compatible = "lsi,api2c";
+		device_type = "i2c";
+		port = <3>;
+		bus_name = "smb";
+		reg = <0x20 0x10087000 0x00 0x1000>;
+		interrupts = <0 22 4>;
 	};
 };
 
