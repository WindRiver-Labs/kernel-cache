From: auto commit <unknown@unknown>
Date: Fri, 24 Oct 2008 12:23:00 -0700
Subject: [PATCH] cavium: CONFIG_FAST_ACCESS_TO_THREAD_POINTER on stackframe

Stick the Cavium specific FAST_ACCESS_TO_THREAD_POINTER value on the
stackframe for MIPS (if enabled).

Signed-off-by: Tomaso Paoletti <tpaoletti@caviumnetworks.com>
Signed-off-by: Paul Gortmaker <Paul.Gortmaker@windriver.com>
---
 include/asm-mips/stackframe.h |    3 +++
 1 files changed, 3 insertions(+), 0 deletions(-)

diff --git a/include/asm-mips/stackframe.h b/include/asm-mips/stackframe.h
index 5cb8674..ee81b3f 100644
--- a/include/asm-mips/stackframe.h
+++ b/include/asm-mips/stackframe.h
@@ -454,6 +454,9 @@
 		.macro	RESTORE_SP_AND_RET
 		LONG_L	sp, PT_R29(sp)
 		.set	mips3
+#ifdef CONFIG_FAST_ACCESS_TO_THREAD_POINTER
+		LONG_L	k0, FAST_ACCESS_THREAD_OFFSET($0) /* K0 = thread pointer */
+#endif
 		eret
 		.set	mips0
 		.endm
