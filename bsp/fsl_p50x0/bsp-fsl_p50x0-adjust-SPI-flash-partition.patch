From c9e5b5e1defe1d852611acb9d547c14128f8fd66 Mon Sep 17 00:00:00 2001
From: Jiang Lu <lu.jiang@windriver.com>
Date: Mon, 17 Oct 2011 16:27:21 +0800
Subject: [PATCH] bsp:fsl_p50x0 adjust SPI flash partition

The patch combines all writable area on SPI flash into Rootfs partition.

Signed-off-by: Jiang Lu <lu.jiang@windriver.com>
---
 arch/powerpc/boot/dts/p5020ds.dts |   18 ++++--------------
 1 files changed, 4 insertions(+), 14 deletions(-)

diff --git a/arch/powerpc/boot/dts/p5020ds.dts b/arch/powerpc/boot/dts/p5020ds.dts
index c1ff8ab..f3f96cf 100644
--- a/arch/powerpc/boot/dts/p5020ds.dts
+++ b/arch/powerpc/boot/dts/p5020ds.dts
@@ -675,24 +675,14 @@
 				compatible = "spansion,s25sl12801";
 				reg = <0>;
 				spi-max-frequency = <40000000>; /* input clock */
-				partition@u-boot {
+				partition@0 {
 					label = "u-boot";
 					reg = <0x00000000 0x00100000>;
 					read-only;
 				};
-				partition@kernel {
-					label = "kernel";
-					reg = <0x00100000 0x00500000>;
-					read-only;
-				};
-				partition@dtb {
-					label = "dtb";
-					reg = <0x00600000 0x00100000>;
-					read-only;
-				};
-				partition@fs {
-					label = "file system";
-					reg = <0x00700000 0x00900000>;
+				partition@100000 {
+					label = "fs";
+					reg = <0x00100000 0x00f00000>;
 				};
 			};
 		};
