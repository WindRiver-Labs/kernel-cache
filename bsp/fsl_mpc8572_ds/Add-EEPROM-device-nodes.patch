From 2348bad2a24282a9af37f3354c321f92f366b2ed Mon Sep 17 00:00:00 2001
From: Andrew Liu <shengping.liu@windriver.com>
Date: Thu, 13 May 2010 14:10:30 +0800
Subject: [PATCH] Add EEPROM device nodes

Four EEPROM devices are attached to I2C-0 and I2C-1.
---
 arch/powerpc/boot/dts/mpc8572ds.dts |   24 ++++++++++++++++++++++--
 1 files changed, 22 insertions(+), 2 deletions(-)

diff --git a/arch/powerpc/boot/dts/mpc8572ds.dts b/arch/powerpc/boot/dts/mpc8572ds.dts
index cafc128..595af9b 100644
--- a/arch/powerpc/boot/dts/mpc8572ds.dts
+++ b/arch/powerpc/boot/dts/mpc8572ds.dts
@@ -229,6 +229,11 @@
 			interrupts = <43 2>;
 			interrupt-parent = <&mpic>;
 			dfsrr;
+
+		eeprom@51 {
+				compatible = "atmel,24c64";
+				reg = <0x51>;
+			};
 		};
 
 		i2c@3100 {
@@ -240,9 +245,24 @@
 			interrupts = <43 2>;
 			interrupt-parent = <&mpic>;
 			dfsrr;
-		};
 
-		dma@c300 {
+			eeprom@51 {
+					compatible = "atmel,24c64";
+					reg = <0x51>;
+				};
+
+			eeprom@56 {
+					compatible = "atmel,24c64";
+					reg = <0x56>;
+				};
+
+			eeprom@57 {
+					compatible = "atmel,24c64";
+					reg = <0x57>;
+				};
+			};
+
+			dma@c300 {
 			#address-cells = <1>;
 			#size-cells = <1>;
 			compatible = "fsl,mpc8572-dma", "fsl,eloplus-dma";
-- 
