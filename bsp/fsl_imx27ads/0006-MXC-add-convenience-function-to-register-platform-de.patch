 arch/arm/plat-mxc/include/mach/common.h |    3 ++
 3 files changed, 39 insertions(+), 1 deletions(-)
 create mode 100644 arch/arm/plat-mxc/devices.c

diff --git a/arch/arm/plat-mxc/Makefile b/arch/arm/plat-mxc/Makefile
index 1e65a90..d4adc2b 100644
--- a/arch/arm/plat-mxc/Makefile
+++ b/arch/arm/plat-mxc/Makefile
@@ -11,7 +11,7 @@ else
 obj-y += irq.o
 endif
 
-obj-$(CONFIG_ARCH_MX2) += iomux-mx1-mx2.o
+obj-$(CONFIG_ARCH_MX2) += iomux-mx1-mx2.o devices.o
 obj-$(CONFIG_ARCH_MX3) += cpu_common.o spba.o
 obj-$(CONFIG_MXC_SDMA_API)  += sdma/
 obj-$(CONFIG_MXC_ISP1301) += isp1301.o
diff --git a/arch/arm/plat-mxc/devices.c b/arch/arm/plat-mxc/devices.c
new file mode 100644
index 0000000..9946060
--- /dev/null
+++ b/arch/arm/plat-mxc/devices.c
@@ -0,0 +1,35 @@
