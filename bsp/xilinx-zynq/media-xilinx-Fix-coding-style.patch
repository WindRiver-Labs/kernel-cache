+			 XTPG_HLS_USE_INPUT_VID_STREAM);
 		xvip_set(&xtpg->xvip, XVIP_CTRL_CONTROL,
 			 XHLS_REG_CTRL_AUTO_RESTART |
 			 XVIP_CTRL_CONTROL_SW_ENABLE);
@@ -320,7 +314,7 @@ static int xtpg_s_stream(struct v4l2_subdev *subdev, int enable)
