 		 */
 		bayer_phase = passthrough ? XTPG_BAYER_PHASE_OFF
-			: xtpg_get_bayer_phase(xtpg->formats[0].code);
+			    : xtpg_get_bayer_phase(xtpg->formats[0].code);
