---
 drivers/gpu/drm/amd/amdgpu/amdgpu_dpm.c |    9 +++++++++
 drivers/gpu/drm/amd/amdgpu/amdgpu_dpm.h |    3 +++
 drivers/gpu/drm/amd/amdgpu/ci_dpm.c     |    1 +
 drivers/gpu/drm/amd/amdgpu/kv_dpm.c     |    1 +
 drivers/gpu/drm/amd/amdgpu/si_dpm.c     |    1 +
