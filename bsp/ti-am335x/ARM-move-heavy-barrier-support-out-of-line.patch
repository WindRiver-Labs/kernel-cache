diff --git a/arch/arm/mach-ux500/cache-l2x0.c b/arch/arm/mach-ux500/cache-l2x0.c
index e97ee55..cd6236f 100644
--- a/arch/arm/mach-ux500/cache-l2x0.c
+++ b/arch/arm/mach-ux500/cache-l2x0.c
@@ -7,6 +7,7 @@
 #include <linux/io.h>
 #include <linux/of.h>
 
+#include <asm/outercache.h>
