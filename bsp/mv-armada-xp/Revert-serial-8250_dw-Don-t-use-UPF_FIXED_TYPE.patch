Subject: [PATCH] Revert "serial: 8250_dw: Don't use UPF_FIXED_TYPE"

This reverts commit 586eab512e1bac4caf6d4d47d6f6cfe8da5e8792.
---
 drivers/tty/serial/8250/8250_dw.c |    2 +-
 1 files changed, 1 insertions(+), 1 deletions(-)

diff --git a/drivers/tty/serial/8250/8250_dw.c b/drivers/tty/serial/8250/8250_dw.c
index b1dd4f2..1a87193 100644
--- a/drivers/tty/serial/8250/8250_dw.c
+++ b/drivers/tty/serial/8250/8250_dw.c
@@ -116,7 +116,7 @@ struct plat_serial8250_port *p = pdev->dev.platform_data;
 	port.handle_irq = dw8250_handle_irq;
 	port.type = PORT_8250;
 	port.flags = UPF_SHARE_IRQ | UPF_BOOT_AUTOCONF | UPF_IOREMAP |
-		UPF_FIXED_PORT;
+		UPF_FIXED_PORT | UPF_FIXED_TYPE;
 	port.dev = &pdev->dev;
 
 	port.iotype = UPIO_MEM;
