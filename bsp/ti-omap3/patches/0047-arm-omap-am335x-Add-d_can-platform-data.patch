+static void d_can_init(int evm_id, int profile)
+{
+	switch (evm_id) {
+	case IND_AUT_MTR_EVM:
+		if ((profile == PROFILE_0) || (profile == PROFILE_1)) {
+			setup_pin_mux(d_can_ia_pin_mux);
+			/* Instance Zero */
+			am33xx_d_can_init(0);
+		}
+		break;
+	case GEN_PURP_EVM:
+		if (profile == PROFILE_1) {
+			setup_pin_mux(d_can_gp_pin_mux);
+			/* Instance One */
+			am33xx_d_can_init(1);
+		}
+		break;
+	default:
+		break;
+	}
+}
