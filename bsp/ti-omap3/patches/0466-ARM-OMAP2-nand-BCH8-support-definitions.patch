+#ifndef OMAP_ELM_H
+#define OMAP_ELM_H
+
+enum omap_bch_ecc {
+	OMAP_BCH4_ECC = 0,
+	OMAP_BCH8_ECC,
+	OMAP_BCH16_ECC,
+};
+
+#define BCH8_ECC_BYTES			(512)
+#define BCH8_ECC_OOB_BYTES		(13)
+#define BCH_MAX_ECC_BYTES_PER_SECTOR	(28)
