From 2d498fc7a54ef8b9d4230fc82d2cf5ede9d10848 Mon Sep 17 00:00:00 2001
From: czou <cao.zou@windriver.com>
Date: Wed, 14 Oct 2015 12:59:46 +0800
Subject: [PATCH 1/3] dts: omap3-evm: fix the wrong multiple dss ports

there is wrong multiple dss ports in omap3-evm and
omap3-panel-sharp-ls037v7dw01.dtsi for omapdss display, here configure
them just in omap3-evm file

Signed-off-by: czou <cao.zou@windriver.com>
---
 arch/arm/boot/dts/omap3-evm.dts | 18 ++++++++++++++----
 1 file changed, 14 insertions(+), 4 deletions(-)

diff --git a/arch/arm/boot/dts/omap3-evm.dts b/arch/arm/boot/dts/omap3-evm.dts
index f16eade..ed47aff 100644
--- a/arch/arm/boot/dts/omap3-evm.dts
+++ b/arch/arm/boot/dts/omap3-evm.dts
@@ -20,8 +20,8 @@
 	};
 
 	aliases {
-		display1 = &dvi0;
-		display2 = &tv0;
+		display1 = &tv0;
+		display2 = &dvi0;
 	};
 
 	leds {
@@ -67,7 +67,7 @@
 				reg = <0>;
 
 				tfp410_in: endpoint@0 {
-					remote-endpoint = <&dpi_out>;
+					remote-endpoint = <&dpi_dvi_out>;
 				};
 			};
 
@@ -188,6 +188,10 @@
 	regulator-always-on;
 };
 
+&lcd_in {
+	remote-endpoint = <&dpi_lcd_out>;
+};
+
 &dss {
 	status = "ok";
 
@@ -195,7 +199,13 @@
 	pinctrl-0 = <&dss_dpi_pins>;
 
 	port {
-		dpi_out: endpoint {
+
+		dpi_lcd_out: endpoint@0 {
+			remote-endpoint = <&lcd_in>;
+			data-lines = <18>;
+		};
+
+		dpi_dvi_out: endpoint@1 {
 			remote-endpoint = <&tfp410_in>;
 			data-lines = <24>;
 		};
