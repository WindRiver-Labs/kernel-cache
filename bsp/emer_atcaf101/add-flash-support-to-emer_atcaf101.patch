+#ifdef CONFIG_PPC_PRPMC2800
+	/* Support Flash */
+	np = of_find_node_by_type (NULL, "rom");
+	if (np) {
+		if (!(of_platform_device_create(np, "rom", NULL)))
+			printk(KERN_ERR "Failed to create "
+					"ROM %s: error %d.\n",
+					np->full_name, err);
+		of_node_put(np);
+	}
