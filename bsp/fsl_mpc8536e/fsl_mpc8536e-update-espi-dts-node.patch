From d79f2dd4eab5a2790c3d2ecc5d41733a3ccdb264 Mon Sep 17 00:00:00 2001
From: Weiwei Wang <weiwei.wang@windriver.com>
Date: Mon, 1 Aug 2011 12:03:56 +0800
Subject: [PATCH] fsl_mpc8536e: update espi dts node

fsl espi driver is updated, adjust dts correspondingly.

Signed-off-by: Weiwei Wang <weiwei.wang@windriver.com>
---
 arch/powerpc/boot/dts/mpc8536ds.dts |   12 ++++++------
 1 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/arch/powerpc/boot/dts/mpc8536ds.dts b/arch/powerpc/boot/dts/mpc8536ds.dts
index c4c45b4..9ad5813 100644
--- a/arch/powerpc/boot/dts/mpc8536ds.dts
+++ b/arch/powerpc/boot/dts/mpc8536ds.dts
@@ -236,17 +236,17 @@
 			cell-index = <0>;
 			#address-cells = <1>;
 			#size-cells = <0>;
-			compatible = "fsl,espi";
+			compatible = "fsl,mpc8536-espi";
 			reg = <0x7000 0x1000>;
 			interrupts = <59 0x2>;
 			interrupt-parent = <&mpic>;
-			espi,num-ss-bits = <4>;
+			fsl,espi-num-chipselects = <4>;
 			mode = "cpu";
 
 			fsl_m25p80@0 {
 				#address-cells = <1>;
 				#size-cells = <1>;
-				compatible = "fsl,espi-flash";
+				compatible = "spansion,s25sl12801";
 				reg = <0>;
 				linux,modalias = "fsl_m25p80";
 				spi-max-frequency = <40000000>; /* input clock */
@@ -265,19 +265,19 @@
 				};
 			};
 			fsl_m25p80@1 {
-				compatible = "fsl,espi-flash";
+				compatible = "spansion,s25sl12801";
 				reg = <1>;
 				linux,modalias = "fsl_m25p80";
 				spi-max-frequency = <40000000>;
 			};
 			fsl_m25p80@2 {
-				compatible = "fsl,espi-flash";
+				compatible = "spansion,s25sl12801";
 				reg = <2>;
 				linux,modalias = "fsl_m25p80";
 				spi-max-frequency = <40000000>;
 			};
 			fsl_m25p80@3 {
-				compatible = "fsl,espi-flash";
+				compatible = "spansion,s25sl12801";
 				reg = <3>;
 				linux,modalias = "fsl_m25p80";
 				spi-max-frequency = <40000000>;
