From 93524c964f6408a8c48c52a3a39d06d27e39159c Mon Sep 17 00:00:00 2001
From: henry shao <hshao@netlogicmicro.com>
Date: Wed, 12 May 2010 14:53:05 -0700
Subject: [PATCH 008/565] change NLM_PHOENIX to NLM_COMMON

change NLM_PHOENIX to NLM_COMMON.

Based on Broadcom SDK 2.3.

Signed-off-by: henry shao <hshao@netlogicmicro.com>
Signed-off-by: Yanjiang Jin <yanjiang.jin@windriver.com>
---
 drivers/char/Kconfig     | 4 ++--
 drivers/watchdog/Kconfig | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/drivers/char/Kconfig b/drivers/char/Kconfig
index 8420999..815da30 100644
--- a/drivers/char/Kconfig
+++ b/drivers/char/Kconfig
@@ -250,7 +250,7 @@ source "drivers/char/hw_random/Kconfig"
 
 config NETLOGIC_RMIOS_DEBUGGER
 	bool "RMIOS Debugger support"
-	depends on NLM_PHOENIX!=n
+	depends on NLM_COMMON!=n
 	default n
 	---help---
 	This module provides debugging facility for rmios images loaded on the
@@ -621,7 +621,7 @@ endmenu
 
 config RMICDE
 	tristate "RMI Compression/Decompression Engine"
-	depends on NLM_PHOENIX!=n
+	depends on NLM_COMMON!=n
 	default n
 	help
 	  The CDE allows deflate/inflate through hardware
diff --git a/drivers/watchdog/Kconfig b/drivers/watchdog/Kconfig
index 20ef23d..f3b75ec 100644
--- a/drivers/watchdog/Kconfig
+++ b/drivers/watchdog/Kconfig
@@ -1105,8 +1105,8 @@ config LANTIQ_WDT
 	  Hardware driver for the Lantiq SoC Watchdog Timer.
 
 config NLM_WATCHDOG
-        tristate "RMI XL* Hardware Watchdog"
-        depends on WATCHDOG && NLM_PHOENIX
+        tristate "Netlogic XL* Hardware Watchdog"
+        depends on WATCHDOG && NLM_COMMON
         help
           Hardware driver for the XL* watchdog. This is a watchdog timer
           that will reboot the machine after a 60 second timer expired
