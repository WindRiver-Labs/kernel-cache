From 2d8bdf0c69ad7df37b916cb02967b117e9f59b31 Mon Sep 17 00:00:00 2001
From: Yang Wei <Wei.Yang@windriver.com>
Date: Thu, 20 Feb 2014 15:58:04 +0800
Subject: [PATCH] mips/dts: Add DTC_FLAGS option

Use DTC_FLAGS instead of DTS_FLAGS, and remove #ifdef

Signed-off-by: Yang Wei <Wei.Yang@windriver.com>
---
 arch/mips/boot/Makefile |    4 +---
 1 files changed, 1 insertions(+), 3 deletions(-)

diff --git a/arch/mips/boot/Makefile b/arch/mips/boot/Makefile
index 22ae657..dc0fdac 100644
--- a/arch/mips/boot/Makefile
+++ b/arch/mips/boot/Makefile
@@ -42,9 +42,7 @@ $(obj)/vmlinux.srec: $(VMLINUX) FORCE
 	$(call if_changed,srec)
 
 # Rule to build device tree blobs
-ifndef CONFIG_CPU_XLP
-DTS_FLAGS ?= -p 1024
-endif
+DTC_FLAGS ?= -p 1024
 dtstree		:= $(srctree)/$(src)/dts
 
 $(obj)/%.dtb: $(src)/dts/%.dts FORCE
