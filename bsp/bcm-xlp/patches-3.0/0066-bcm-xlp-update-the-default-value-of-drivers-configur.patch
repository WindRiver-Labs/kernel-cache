From eb9f617fcf974218f680da84999397530542f90e Mon Sep 17 00:00:00 2001
From: Jack Tan <jack.tan@windriver.com>
Date: Mon, 17 Mar 2014 14:22:23 +0800
Subject: [PATCH 4/7] bcm-xlp: update the default value of drivers
 configuration of xlp

Signed-off-by: Jack Tan <jack.tan@windriver.com>
---
 drivers/netlogic/Kconfig |   10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/drivers/netlogic/Kconfig b/drivers/netlogic/Kconfig
index 9d32122..25dacb3 100644
--- a/drivers/netlogic/Kconfig
+++ b/drivers/netlogic/Kconfig
@@ -20,7 +20,7 @@ config XLP_CDE
 config XLP_NETL7
         tristate "Broadcom xlp netl7 driver"
         depends on NLM_XLP_BOARD
-        default y
+        default m
         help
           This driver supports Broadcom regex driver.
           It is only valid on XLP3XX and XLP2XX.
@@ -37,7 +37,7 @@ config XLP_SAE
 	select CRYPTO_AEAD
 	select CRYPTO_BLKCIPHER
 	select CRYPTO_HASH
-        default y
+        default m
         help
           This driver supports broadcom's Security Acceleration Engine.
           For more information on xlp SAE driver, please visit
@@ -49,7 +49,7 @@ config XLP_SAE
 config XLP_CMEM
         tristate "XLP cmem driver"
         depends on NLM_XLP_BOARD
-        default y
+        default m
         help
           This driver supports cmem.
 
@@ -63,14 +63,14 @@ config XLP_FMN_DP
 config XLP_PPM
 	tristate "Broadcom Packet Pool Manager"
         depends on NLM_XLP_BOARD
-        default y
+        default m
 	help
           This driver supports Manage Packet Pool.
 
 config XLP_NMIPROF
 	tristate "XLP NMIProf support"
         depends on NLM_XLP_BOARD
-        default n
+        default m
 	help
           NMIProf is a simple and accurate profiler for XLP cpus.
 
