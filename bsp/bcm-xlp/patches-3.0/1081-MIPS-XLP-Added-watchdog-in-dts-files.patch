Subject: [PATCH 081/160] MIPS:XLP: Added watchdog in dts files

Signed-off-by: Prem Mallappa <pmallapp@broadcom.com>
Signed-off-by: Jack Tan <jack.tan@windriver.com>
Signed-off-by: Jack Tan <jiankemeng@gmail.com>
---
 arch/mips/netlogic/dts/xlp_evp.dts |    4 ++++
 arch/mips/netlogic/dts/xlp_fvp.dts |    4 ++++
 arch/mips/netlogic/dts/xlp_gvp.dts |    4 ++++
 arch/mips/netlogic/dts/xlp_htc.dts |    5 +++++
 arch/mips/netlogic/dts/xlp_svp.dts |    4 ++++
 5 files changed, 21 insertions(+)

diff --git a/arch/mips/netlogic/dts/xlp_evp.dts b/arch/mips/netlogic/dts/xlp_evp.dts
index 94ba529..90d7354 100644
--- a/arch/mips/netlogic/dts/xlp_evp.dts
+++ b/arch/mips/netlogic/dts/xlp_evp.dts
@@ -76,6 +76,10 @@
 			interrupt-controller;
 		};
 
+		watchdog@0 {
+			compatible = "netlogic,nlm-wdt";
+		};
+
 		nor_flash@1,0 {
 			compatible = "cfi-flash";
 			#address-cells = <1>;
diff --git a/arch/mips/netlogic/dts/xlp_fvp.dts b/arch/mips/netlogic/dts/xlp_fvp.dts
index fc1e5c0..ff193c8 100644
--- a/arch/mips/netlogic/dts/xlp_fvp.dts
+++ b/arch/mips/netlogic/dts/xlp_fvp.dts
@@ -75,6 +75,10 @@
 			reg = <0 0x4000 0x200>;
 		};
 
+		watchdog@0 {
+			compatible = "netlogic,nlm-wdt";
+		};
+
 		nand_flash@0,0 {
 			compatible = "netlogic,xlp-nand";
 			#address-cells = <1>;
diff --git a/arch/mips/netlogic/dts/xlp_gvp.dts b/arch/mips/netlogic/dts/xlp_gvp.dts
index 0829df4..78ef1fa 100644
--- a/arch/mips/netlogic/dts/xlp_gvp.dts
+++ b/arch/mips/netlogic/dts/xlp_gvp.dts
@@ -33,6 +33,10 @@
 			reg = <0 0x110000 0x200>;
 		};
 
+		watchdog@0 {
+			compatible = "netlogic,nlm-wdt";
+		};
+
 		spi: xlp_spi@13a000 {
 			compatible = "netlogic,xlp-spi";
 			#address-cells = <1>;
diff --git a/arch/mips/netlogic/dts/xlp_htc.dts b/arch/mips/netlogic/dts/xlp_htc.dts
index f8b380a..72c264f 100644
--- a/arch/mips/netlogic/dts/xlp_htc.dts
+++ b/arch/mips/netlogic/dts/xlp_htc.dts
@@ -24,6 +24,11 @@
 			reg = <0 0x4000 0x200>;
 			interrupt-controller;
 		};
+
+		watchdog@0 {
+			compatible = "netlogic,nlm-wdt";
+		};
+
 		serial00: serial@30000 {
 			device_type = "serial";
 			compatible = "ns16550";
diff --git a/arch/mips/netlogic/dts/xlp_svp.dts b/arch/mips/netlogic/dts/xlp_svp.dts
index fa17f87..219d6c9 100644
--- a/arch/mips/netlogic/dts/xlp_svp.dts
+++ b/arch/mips/netlogic/dts/xlp_svp.dts
@@ -76,6 +76,10 @@
 			interrupt-controller;
 		};
 
+		watchdog@0 {
+			compatible = "netlogic,nlm-wdt";
+		};
+
 		nor_flash@1,0 {
 			compatible = "cfi-flash";
 			#address-cells = <1>;
