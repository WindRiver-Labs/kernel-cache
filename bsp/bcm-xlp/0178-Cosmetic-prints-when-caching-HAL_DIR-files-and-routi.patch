 }
 struct boot_mem_map boot_physaddr_info;
@@ -454,7 +451,7 @@ static int fdt_process(void)
 	/* extract CPU online mask for
 	 * domain 0 (linux)
 	 */
-	sprintf(domstr, "/doms/dom@0/cpu", domain);
