From 0f99a2ec9c658a2d2fdccb71f9ebcd47aa92d4a1 Mon Sep 17 00:00:00 2001
From: Jack Tan <jiankemeng@gmail.com>
Date: Fri, 25 Jul 2014 15:24:08 +0800
Subject: [PATCH] bcm-xlp: update the kconfig

one is to support the numa and the other is to support
to build nae as kernel module.

Signed-off-by: Jack Tan <jack.tan@windriver.com>
---
 arch/mips/Kconfig        |    1 +
 drivers/netlogic/Kconfig |    2 +-
 2 files changed, 2 insertions(+), 1 deletions(-)

diff --git a/arch/mips/Kconfig b/arch/mips/Kconfig
index 2561d74..61dd95e 100644
--- a/arch/mips/Kconfig
+++ b/arch/mips/Kconfig
@@ -826,6 +826,7 @@ config NLM_XLP_BOARD
 	select SYS_SUPPORTS_HIGHMEM
 	select SYS_SUPPORTS_HOTPLUG_CPU
 	select CPU_SUPPORTS_HUGEPAGES
+	select SYS_SUPPORTS_NUMA
 	select DMA_COHERENT
 	select NR_CPUS_DEFAULT_32
 	select CEVT_R4K
diff --git a/drivers/netlogic/Kconfig b/drivers/netlogic/Kconfig
index 6ad7b30..03aceee 100644
--- a/drivers/netlogic/Kconfig
+++ b/drivers/netlogic/Kconfig
@@ -1,5 +1,5 @@
 config XLP_NAE_SUPPORT
-	bool "Enable XLP NAE support"
+	tristate "Enable XLP NAE support"
 	depends on NLM_XLP_BOARD
 	default y
 	help
