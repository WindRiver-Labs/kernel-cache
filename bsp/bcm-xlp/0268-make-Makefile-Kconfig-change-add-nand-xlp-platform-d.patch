From 451f60c1bef219f1cc55c3ca4a8480e84ebbc7ca Mon Sep 17 00:00:00 2001
From: henry shao <hshao@netlogicmicro.com>
Date: Wed, 23 Mar 2011 17:12:25 -0700
Subject: [PATCH 268/762] make Makefile, Kconfig change, add nand-xlp platform device to support xlp_plat_nand driver

Based on Broadcom SDK 2.3.

Signed-off-by: henry shao <hshao@netlogicmicro.com>
Signed-off-by: Yanjiang Jin <yanjiang.jin@windriver.com>
---
 arch/mips/netlogic/xlp/platform.c |    1 +
 drivers/mtd/nand/Kconfig          |    4 ++++
 drivers/mtd/nand/Makefile         |    4 ++++
 3 files changed, 9 insertions(+), 0 deletions(-)

diff --git a/arch/mips/netlogic/xlp/platform.c b/arch/mips/netlogic/xlp/platform.c
index b4240d6..661ba29 100644
--- a/arch/mips/netlogic/xlp/platform.c
+++ b/arch/mips/netlogic/xlp/platform.c
@@ -137,6 +137,7 @@ struct dev2drv dev2drv_table[MAX_DEV2DRV] = {
 	{XLP_DEVID_MMC,	 "mmc-xlp",	8,	0, 	PLAT_DRV},
 	{XLP_DEVID_SPI,	 "spi-xlp",	8,	0, 	PLAT_DRV},
 	{XLP_DEVID_NOR,	 "nor-xlp",	8,	0, 	PLAT_DRV},
+	{XLP_DEVID_NAND, "nand-xlp",	9,	0, 	PLAT_DRV},
 	{0x0, 			 "",	0,	0,	PLAT_DRV},
 };
 
diff --git a/drivers/mtd/nand/Kconfig b/drivers/mtd/nand/Kconfig
index 0e43a3f..7e9ae10 100644
--- a/drivers/mtd/nand/Kconfig
+++ b/drivers/mtd/nand/Kconfig
@@ -527,4 +527,8 @@ config MTD_NAND_FSMC
 	  Enables support for NAND Flash chips on the ST Microelectronics
 	  Flexible Static Memory Controller (FSMC)
 
+config MTD_NAND_XLP
+	tristate "Support for NAND Flash on XLP"
+	depends on MTD_NAND && NLM_XLP
+
 endif # MTD_NAND
diff --git a/drivers/mtd/nand/Makefile b/drivers/mtd/nand/Makefile
index d4b4d87..cf9072b 100644
--- a/drivers/mtd/nand/Makefile
+++ b/drivers/mtd/nand/Makefile
@@ -1,6 +1,9 @@
 #
 # linux/drivers/nand/Makefile
 #
+ifeq ($(CONFIG_NLM_XLP),y)
+        EXTRA_CFLAGS := $(CFLAGS) -DNLM_HAL_LINUX_KERNEL
+endif
 
 obj-$(CONFIG_MTD_NAND)			+= nand.o
 obj-$(CONFIG_MTD_NAND_ECC)		+= nand_ecc.o
@@ -51,5 +54,6 @@ obj-$(CONFIG_MTD_NAND_MPC5121_NFC)	+= mpc5121_nfc.o
 obj-$(CONFIG_MTD_NAND_RICOH)		+= r852.o
 obj-$(CONFIG_MTD_NAND_JZ4740)		+= jz4740_nand.o
 obj-$(CONFIG_MTD_NAND_GPMI_NAND)	+= gpmi-nand/
+obj-$(CONFIG_MTD_NAND_XLP)		+= xlp_plat_nand.o
 
 nand-objs := nand_base.o nand_bbt.o
-- 
