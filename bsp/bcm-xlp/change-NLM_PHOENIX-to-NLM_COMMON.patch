From dbf3b4cf60cbab3f437d71b935712453344a1d81 Mon Sep 17 00:00:00 2001
From: henry shao <hshao@netlogicmicro.com>
Date: Wed, 12 May 2010 14:53:05 -0700
Subject: [PATCH 013/761] change NLM_PHOENIX to NLM_COMMON

Based on Broadcom SDK 2.3.

Signed-off-by: henry shao <hshao@netlogicmicro.com>
Signed-off-by: Yanjiang Jin <yanjiang.jin@windriver.com>
---
 drivers/char/Kconfig           |    4 ++--
 drivers/char/hw_random/Kconfig |    4 ++--
 drivers/ide/Kconfig            |    4 ++--
 drivers/mtd/maps/Kconfig       |    2 +-
 drivers/watchdog/Kconfig       |    4 ++--
 include/linux/zorro_ids.h      |    8 ++++----
 6 files changed, 13 insertions(+), 13 deletions(-)

diff --git a/drivers/char/Kconfig b/drivers/char/Kconfig
index f4a5254..0c0ef72 100644
--- a/drivers/char/Kconfig
+++ b/drivers/char/Kconfig
@@ -266,7 +266,7 @@ source "drivers/char/hw_random/Kconfig"
 
 config NETLOGIC_RMIOS_DEBUGGER
 	bool "RMIOS Debugger support"
-	depends on NLM_PHOENIX!=n
+	depends on NLM_COMMON!=n
 	default n
 	---help---
 	This module provides debugging facility for rmios images loaded on the
@@ -644,7 +644,7 @@ endmenu
 
 config RMICDE
 	tristate "RMI Compression/Decompression Engine"
-	depends on NLM_PHOENIX!=n
+	depends on NLM_COMMON!=n
 	default n
 	help
 	  The CDE allows deflate/inflate through hardware
diff --git a/drivers/char/hw_random/Kconfig b/drivers/char/hw_random/Kconfig
index fc0eb07..7090da6 100644
--- a/drivers/char/hw_random/Kconfig
+++ b/drivers/char/hw_random/Kconfig
@@ -140,8 +140,8 @@ config HW_RANDOM_OMAP
  	  If unsure, say Y.
 
 config HW_RANDOM_MIPS_XLR
-	bool "RMI XLR Random Number Generator support"
-	depends on HW_RANDOM && NLM_PHOENIX
+	bool "Netlogic XLR Random Number Generator support"
+	depends on HW_RANDOM && NLM_COMMON
 	default y
 
 config HW_RANDOM_OCTEON
diff --git a/drivers/ide/Kconfig b/drivers/ide/Kconfig
index e49e29f..c204000 100644
--- a/drivers/ide/Kconfig
+++ b/drivers/ide/Kconfig
@@ -681,8 +681,8 @@ config BLK_DEV_IDE_AU1XXX
        select IDE_XFER_MODE
 
 config BLK_DEV_IDE_PHOENIX
-       bool "IDE for RMI XLR eval boards" 
-       depends on NLM_PHOENIX 
+       bool "IDE for Netlogic XLR eval boards" 
+       depends on NLM_COMMON 
 
 choice
        prompt "IDE Mode for AMD Alchemy Au1200"
diff --git a/drivers/mtd/maps/Kconfig b/drivers/mtd/maps/Kconfig
index d247dc2..f615b3e 100644
--- a/drivers/mtd/maps/Kconfig
+++ b/drivers/mtd/maps/Kconfig
@@ -251,7 +251,7 @@ config MTD_LANTIQ
 
 config MTD_XLR
    	tristate "XLR Flash MTD support"
-	depends on NLM_PHOENIX
+	depends on NLM_COMMON
    	help
      	  Flash memory access on XLR/XLS Reference Boards
 
diff --git a/drivers/watchdog/Kconfig b/drivers/watchdog/Kconfig
index c463ce0..95d7df5 100644
--- a/drivers/watchdog/Kconfig
+++ b/drivers/watchdog/Kconfig
@@ -1043,8 +1043,8 @@ config LANTIQ_WDT
 	  Hardware driver for the Lantiq SoC Watchdog Timer.
 
 config NLM_WATCHDOG
-        tristate "RMI XL* Hardware Watchdog"
-        depends on WATCHDOG && NLM_PHOENIX
+        tristate "Netlogic XL* Hardware Watchdog"
+        depends on WATCHDOG && NLM_COMMON
         help
           Hardware driver for the XL* watchdog. This is a watchdog timer
           that will reboot the machine after a 60 second timer expired
diff --git a/include/linux/zorro_ids.h b/include/linux/zorro_ids.h
index d0806b8..b619c5f 100644
--- a/include/linux/zorro_ids.h
+++ b/include/linux/zorro_ids.h
@@ -273,10 +273,10 @@
 #define  ZORRO_PROD_BSC_ISDN_MASTERCARD				ZORRO_ID(BSC_ALFADATA_3, 0x40, 0)
 #define  ZORRO_PROD_BSC_ISDN_MASTERCARD_II			ZORRO_ID(BSC_ALFADATA_3, 0x41, 0)
 
-#define ZORRO_MANUF_PHOENIX					0x0835
-#define  ZORRO_PROD_NETLOGIC_ST506				ZORRO_ID(PHOENIX, 0x21, 0)
-#define  ZORRO_PROD_NETLOGIC_SCSI				ZORRO_ID(PHOENIX, 0x22, 0)
-#define  ZORRO_PROD_NETLOGIC_RAM					ZORRO_ID(PHOENIX, 0xBE, 0)
+#define ZORRO_MANUF_NETLOGIC					0x0835
+#define  ZORRO_PROD_NETLOGIC_ST506				ZORRO_ID(NETLOGIC, 0x21, 0)
+#define  ZORRO_PROD_NETLOGIC_SCSI				ZORRO_ID(NETLOGIC, 0x22, 0)
+#define  ZORRO_PROD_NETLOGIC_RAM					ZORRO_ID(NETLOGIC, 0xBE, 0)
 
 #define ZORRO_MANUF_ADVANCED_STORAGE_SYSTEMS			0x0836
 #define  ZORRO_PROD_ADVANCED_STORAGE_SYSTEMS_NEXUS		ZORRO_ID(ADVANCED_STORAGE_SYSTEMS, 0x01, 0)
