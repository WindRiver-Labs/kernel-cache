+++ b/arch/mips/netlogic/lib/fmnlib/nlm_hal_fmn_config.c
@@ -800,7 +800,7 @@ static void nlm_hal_write_fmn_credit(int node, int max_nodes)
 #else
 							credits = 50;
 #endif
