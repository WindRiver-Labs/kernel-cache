Subject: Add Makefile for dtc

[Based on SDK 3.2]
Signed-off-by: Quanyang Wang <quanyang.wang@windriver.com>
Signed-off-by: Nam Ninh <nam.ninh@windriver.com>

diff --git a/dtc/Makefile b/dtc/Makefile
new file mode 100644
index 0000000..00cc1e3
--- /dev/null
+++ b/dtc/Makefile
@@ -0,0 +1,14 @@
+include Makefile.dtc
+
+CC = gcc
+LIBFDT_PATH = ../libfdt
+CFLAGS += -I$(LIBFDT_PATH)
+PROG = dtc
+
+$(PROG): $(DTC_SRCS) $(DTC_GEN_SRCS)
+	$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@
+
+clean:
+	rm $(PROG)
+
+.PHONY: all clean
