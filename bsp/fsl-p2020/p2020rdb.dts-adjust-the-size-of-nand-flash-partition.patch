From 6b56057d72319df01b8c181dbace68239f44fb1c Mon Sep 17 00:00:00 2001
From: Wei Yang <Wei.Yang@windriver.com>
Date: Mon, 22 Oct 2012 15:23:26 +0800
Subject: [PATCH] dts: adjust the size of nand flash partition for P2020RDB

adjust the size of nand flash partition to leave the
enough flash space with windriver jffs2 image

Signed-off-by: Wei Yang <Wei.Yang@windriver.com>
---
 arch/powerpc/boot/dts/p2020rdb.dts     |    9 ++-------
 arch/powerpc/boot/dts/p2020rdb_36b.dts |    9 ++-------
 2 files changed, 4 insertions(+), 14 deletions(-)

diff --git a/arch/powerpc/boot/dts/p2020rdb.dts b/arch/powerpc/boot/dts/p2020rdb.dts
index a7131f9..ad09483 100644
--- a/arch/powerpc/boot/dts/p2020rdb.dts
+++ b/arch/powerpc/boot/dts/p2020rdb.dts
@@ -120,16 +120,11 @@
 			};
 
 			partition@a00000 {
-				/* 7MB for JFFS2 based Root file System */
-				reg = <0x00a00000 0x00700000>;
+				/* 22MB for JFFS2 based Root file System */
+				reg = <0x00a00000 0x01600000>;
 				label = "NAND (RW) JFFS2 Root File System";
 			};
 
-			partition@1100000 {
-				/* 15MB for JFFS2 based Root file System */
-				reg = <0x01100000 0x00f00000>;
-				label = "NAND (RW) Writable User area";
-			};
 		};
 
 		L2switch@2,0 {
diff --git a/arch/powerpc/boot/dts/p2020rdb_36b.dts b/arch/powerpc/boot/dts/p2020rdb_36b.dts
index eb1eb07..19b5b9e 100644
--- a/arch/powerpc/boot/dts/p2020rdb_36b.dts
+++ b/arch/powerpc/boot/dts/p2020rdb_36b.dts
@@ -119,16 +119,11 @@
 			};
 
 			partition@a00000 {
-				/* 7MB for JFFS2 based Root file System */
-				reg = <0x00a00000 0x00700000>;
+				/* 22MB for JFFS2 based Root file System */
+				reg = <0x00a00000 0x01600000>;
 				label = "NAND (RW) JFFS2 Root File System";
 			};
 
-			partition@1100000 {
-				/* 15MB for JFFS2 based Root file System */
-				reg = <0x01100000 0x00f00000>;
-				label = "NAND (RW) Writable User area";
-			};
 		};
 
 		L2switch@2,0 {
