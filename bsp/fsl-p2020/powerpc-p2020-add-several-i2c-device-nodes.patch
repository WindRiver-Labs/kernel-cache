From bd4dddb536fe8d2f24f8bf83483bb1f2294123eb Mon Sep 17 00:00:00 2001
From: Wei Yang <Wei.Yang@windriver.com>
Date: Mon, 15 Oct 2012 15:09:50 +0800
Subject: [PATCH 2/3] powerpc/p2020: add several i2c device nodes

- Add Analog ADT7461, eeprom on p2020rdb.
- Add AT24C01 & M24256 on p2020rdb-pc.

Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
Signed-off-by: Wei Yang <Wei.Yang@windriver.com>
Signed-off-by: Bin Jiang <bin.jiang@windriver.com>
[Xulin: add AT24C01 & M24256 on p2020rdb-pc]
Signed-off-by: Xulin Sun <xulin.sun@windriver.com>
---
 arch/powerpc/boot/dts/p2020rdb-pc.dtsi |   13 +++++++++++++
 arch/powerpc/boot/dts/p2020rdb.dts     |   17 +++++++++++++++++
 2 files changed, 30 insertions(+), 0 deletions(-)

diff --git a/arch/powerpc/boot/dts/p2020rdb-pc.dtsi b/arch/powerpc/boot/dts/p2020rdb-pc.dtsi
index 6ba7f1c..59b7b2c 100644
--- a/arch/powerpc/boot/dts/p2020rdb-pc.dtsi
+++ b/arch/powerpc/boot/dts/p2020rdb-pc.dtsi
@@ -145,6 +145,19 @@
 			compatible = "pericom,pt7c4338";
 			reg = <0x68>;
 		};
+
+		eeprom@50 {
+			compatible = "atmel,24c64";
+			reg = <0x50>;
+		};
+
+	};
+
+	i2c@3100 {
+		eeprom@52 {
+			compatible = "atmel,24c64";
+			reg = <0x52>;
+		 };
 	};
 
 	spi@7000 {
diff --git a/arch/powerpc/boot/dts/p2020rdb.dts b/arch/powerpc/boot/dts/p2020rdb.dts
index 4d52bce..9f4b0af 100644
--- a/arch/powerpc/boot/dts/p2020rdb.dts
+++ b/arch/powerpc/boot/dts/p2020rdb.dts
@@ -149,6 +149,23 @@
 				compatible = "dallas,ds1339";
 				reg = <0x68>;
 			};
+			adt7461@4c{
+				compatible = "adi,adt7461";
+				reg = <0x4c>;
+			};
+
+			eeprom@50 {
+				compatible = "atmel,24c64";
+				reg = <0x50>;
+			};
+
+		};
+
+		i2c@3100 {
+			eeprom@52 {
+				compatible = "atmel,24c64";
+				reg = <0x52>;
+			 };
 		};
 
 		spi@7000 {
