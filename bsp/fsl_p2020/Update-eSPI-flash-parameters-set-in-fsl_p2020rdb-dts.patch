From e92c901cbf826eb859347756f033b3ea1285e1b2 Mon Sep 17 00:00:00 2001
From: Andrew Liu <shengping.liu@windriver.com>
Date: Wed, 14 Apr 2010 16:24:17 +0800
Subject: [PATCH 7/7] Update eSPI flash parameters set in fsl_p2020rdb dts file

Update eSPI parameter set to make it work correctly in the
latest eSPI driver.

Signed-off-by: Andrew Liu <shengping.liu@windriver.com>
---
 arch/powerpc/boot/dts/p2020rdb.dts |    4 ++--
 1 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/powerpc/boot/dts/p2020rdb.dts b/arch/powerpc/boot/dts/p2020rdb.dts
index 484390c..cb31643 100644
--- a/arch/powerpc/boot/dts/p2020rdb.dts
+++ b/arch/powerpc/boot/dts/p2020rdb.dts
@@ -257,6 +257,7 @@
 			reg = <0x7000 0x1000>;
 			interrupts = <59 0x2>;
 			interrupt-parent = <&mpic>;
+			espi,num-ss-bits = <4>;
 			mode = "cpu";
 
 			fsl_m25p80@0 {
@@ -265,8 +266,7 @@
 				compatible = "fsl,espi-flash";
 				reg = <0>;
 				linux,modalias = "fsl_m25p80";
-				modal = "s25sl128b";
-				spi-max-frequency = <50000000>;
+				spi-max-frequency = <40000000>;
 				mode = <0>;
 
 				partition@0 {
