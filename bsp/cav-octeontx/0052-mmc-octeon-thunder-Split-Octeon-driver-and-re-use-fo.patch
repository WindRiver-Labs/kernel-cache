+	emm_dma_cfg.s.en = 0;
+	writeq(emm_dma_cfg.u64, host->dma_base + OCT_MIO_EMM_DMA_CFG);
+
+	gpiod_set_value_cansleep(host->global_pwr_gpiod, 0);
+
+	return 0;
