From 56d8c169294546c20dc834ef71a99ec12266458f Mon Sep 17 00:00:00 2001
From: Dinh Nguyen <dinguyen@altera.com>
Date: Wed, 27 Feb 2013 18:29:14 -0600
Subject: [PATCH 209/254] arm: socfpga: Turn on ARM errata for L2 cache

Upstream: git://git.rocketboards.org/linux-socfpga.git

Turn on these ARM errata:

ARM_ERRATA_754322
ARM_ERRATA_764369
ARM_ERRATA_775420

PL310_ERRATA_588369
PL310_ERRATA_727915
PL310_ERRATA_753970
PL310_ERRATA_769419

Signed-off-by: Dinh Nguyen <dinguyen@altera.com>
(cherry picked from commit f9bae2d067906253b612dca4e8df56225d22c913)

Conflicts:
	arch/arm/mach-socfpga/Kconfig
Signed-off-by: Zumeng Chen <zumeng.chen@windriver.com>
---
 arch/arm/Kconfig |    7 +++++++
 1 files changed, 7 insertions(+), 0 deletions(-)

diff --git a/arch/arm/Kconfig b/arch/arm/Kconfig
index 130c80e..4003bb6 100644
--- a/arch/arm/Kconfig
+++ b/arch/arm/Kconfig
@@ -296,6 +296,13 @@ config ARCH_SOCFPGA
 	select SPARSE_IRQ
 	select USE_OF
 	select SOC_BUS
+	select ARM_ERRATA_754322
+	select ARM_ERRATA_764369 if SMP
+	select ARM_ERRATA_775420
+	select PL310_ERRATA_588369
+	select PL310_ERRATA_727915
+	select PL310_ERRATA_753970
+	select PL310_ERRATA_769419
 	help
 	  This enables support for Altera SOCFPGA Cyclone V platform
 
-- 
