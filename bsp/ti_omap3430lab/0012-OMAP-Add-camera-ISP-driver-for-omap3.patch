+			omap_writel(bluegamma_table[ctr], ISPPRV_SET_TBL_DATA);
+		BG_update = 0;
+	}
+
+	if (NF_update && NF_enable) {
+		omap_writel(0xC00, ISPPRV_SET_TBL_ADDR);
+		omap_writel(prev_nf_t.spread, ISPPRV_NF);
+		for (ctr = 0; ctr < 64; ctr++)
