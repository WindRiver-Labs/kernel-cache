+	vb->state = VIDEOBUF_ACTIVE;
+
+	err = isp_sgdma_queue(videobuf_to_dma(vb),
+				vb, 0, &vdev->cam->dma_notify, func_ptr);
+	if (err) {
+		dev_dbg(vdev->cam->dev, "vbq queue failed\n");
+		vb->state = state;
+	}
+
+}
