+/* Function to set address */
+void isp_af_set_address(unsigned long address)
+{
+	spin_lock(&afstat.buffer_lock);
+	omap_writel(address, ISPH3A_AFBUFST);
+	spin_unlock(&afstat.buffer_lock);
+}
