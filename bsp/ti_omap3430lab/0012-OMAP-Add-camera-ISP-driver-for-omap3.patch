+							ISPCTRL_CCDC_CLK_EN |
+							ISPCTRL_SBL_WR1_RAM_EN,
+							ISP_CTRL);
+	omap_writel((omap_readl(ISPCCDC_CFG)) | ISPCCDC_CFG_VDLC, ISPCCDC_CFG);
+	spin_unlock(&ispccdc_obj.ispccdc_lock);
+	return 0;
