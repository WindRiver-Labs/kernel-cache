+	DPRINTK_ISPCTRL("###CTRL_PADCONF_CAM_HS=0x%x\n",
+					omap_readl(CTRL_PADCONF_CAM_HS));
+	DPRINTK_ISPCTRL("###CTRL_PADCONF_CAM_XCLKA=0x%x\n",
