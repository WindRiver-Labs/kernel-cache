+	ispccdc_obj.ccdc_inuse = 0;
+	omap_writel((omap_readl(ISP_CTRL)) & ~(ISPCTRL_CCDC_CLK_EN |
+						ISPCTRL_CCDC_RAM_EN |
+						ISPCTRL_SBL_WR1_RAM_EN),
+						ISP_CTRL);
