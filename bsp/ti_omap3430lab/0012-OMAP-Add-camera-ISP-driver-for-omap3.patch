+static int isp_hist_reset_mem(void)
+{
+	int i;
+
+	omap_writel((omap_readl(ISPHIST_CNT)) | ISPHIST_CNT_CLR_EN,
+								ISPHIST_CNT);
+
+	for (i = 0; i < HIST_MEM_SIZE; i++)
+		omap_readl(ISPHIST_DATA);
+
+	omap_writel((omap_readl(ISPHIST_CNT)) & ~ISPHIST_CNT_CLR_EN,
+								ISPHIST_CNT);
+
+	return 0;
+}
