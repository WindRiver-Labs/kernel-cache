+
+#define ISPMMU_L1D_TYPE_SHIFT		0
+#define ISPMMU_L1D_TYPE_MASK		0x3
+#define ISPMMU_L1D_TYPE_FAULT		0
+#define ISPMMU_L1D_TYPE_FAULT1		3
