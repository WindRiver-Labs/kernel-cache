+} hist_regs;
+
+/* Structure for saving/restoring histogram module registers */
+struct isp_reg isphist_reg_list[] = {
+	{ISPHIST_CNT, 0},
+	{ISPHIST_WB_GAIN, 0},
+	{ISPHIST_R0_HORZ, 0},
+	{ISPHIST_R0_VERT, 0},
+	{ISPHIST_R1_HORZ, 0},
+	{ISPHIST_R1_VERT, 0},
+	{ISPHIST_R2_HORZ, 0},
+	{ISPHIST_R2_VERT, 0},
