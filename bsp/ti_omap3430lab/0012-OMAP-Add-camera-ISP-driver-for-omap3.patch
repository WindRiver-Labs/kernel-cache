+
+	ccdc_struct = (struct ispccdc_update_config *) userspace_add;
+
+	if ((ISP_ABS_CCDC_ALAW & ccdc_struct->flag) == ISP_ABS_CCDC_ALAW) {
+		if ((ISP_ABS_CCDC_ALAW & ccdc_struct->update) ==
+							ISP_ABS_CCDC_ALAW)
