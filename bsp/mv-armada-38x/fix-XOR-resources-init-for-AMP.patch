 	MV_STATUS mvXorCtrlSet(MV_U32 chan, MV_U32 xorCtrl);
 	MV_STATUS mvXorEccClean(MV_U32 chan, MV_XOR_ECC *pXorEccConfig);
 	MV_U32 mvXorEccCurrTimerGet(MV_U32 chan, MV_U32 tClk);
