---
 drivers/net/ethernet/marvell/Kconfig  |   10 ++++++++++
 drivers/net/ethernet/marvell/Makefile |    1 +
 2 files changed, 11 insertions(+), 0 deletions(-)

diff --git a/drivers/net/ethernet/marvell/Kconfig b/drivers/net/ethernet/marvell/Kconfig
index 1a51360..f9ad0bf 100644
--- a/drivers/net/ethernet/marvell/Kconfig
+++ b/drivers/net/ethernet/marvell/Kconfig
@@ -108,4 +108,14 @@ config SKY2_DEBUG
 
 	  If unsure, say N.
 
+config MV_PP3
+        tristate "Marvell PPv3 Network driver"
+        depends on ARCH_AVANTA_LP || ARCH_ARMADA390
+	default no
+        ---help---
+
+if MV_PP3
+source "drivers/net/ethernet/marvell/pp3/Kconfig"
+endif
+
 endif # NET_VENDOR_MARVELL
diff --git a/drivers/net/ethernet/marvell/Makefile b/drivers/net/ethernet/marvell/Makefile
index 57e3234..31f3956 100644
--- a/drivers/net/ethernet/marvell/Makefile
+++ b/drivers/net/ethernet/marvell/Makefile
@@ -6,3 +6,4 @@ obj-$(CONFIG_MV643XX_ETH) += mv643xx_eth.o
 obj-$(CONFIG_PXA168_ETH) += pxa168_eth.o
 obj-$(CONFIG_SKGE) += skge.o
 obj-$(CONFIG_SKY2) += sky2.o
+obj-$(CONFIG_MV_PP3) += pp3/
