@@ -670,6 +670,12 @@ static int __init mvebu_pmsu_cpufreq_init(void)
 	if (!of_machine_is_compatible("marvell,armadaxp") &&
 	    !of_machine_is_compatible("marvell,armada380"))
 		return 0;
+
