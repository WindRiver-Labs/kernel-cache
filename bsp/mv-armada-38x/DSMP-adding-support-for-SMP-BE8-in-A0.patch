From 9cac828a4e846ced13e8ad467cbc61311e9f5e9b Mon Sep 17 00:00:00 2001
From: Tawfik Bayouk <tawfik@marvell.com>
Date: Tue, 21 Aug 2012 17:33:45 +0300
Subject: [PATCH 0070/1825] DSMP adding support for SMP BE8 in A0

https://github.com/MISL-EBU-System-SW/misl-windriver.git linux-3.4.69-14t2-read
commit ebbdfadba9ad6122768b0037609d494c3ad99a3b

Change-Id: I15a33905fea3e1e81aa4eeb498c1265051679a1e
Signed-off-by: Tawfik Bayouk <tawfik@marvell.com>
Signed-off-by: Kosta Zertsekel <konszert@marvell.com>
Signed-off-by: Zhong Hongbo <hongbo.zhong@windriver.com>
---
 arch/arm/Makefile                                 |    1 +
 arch/arm/boot/compressed/head.S                   |    2 +-
 arch/arm/include/asm/spinlock.h                   |    4 +---
 arch/arm/mach-armadaxp/headsmp.S                  |    6 +++++-
 arch/arm/mach-armadaxp/include/mach/entry-macro.S |    7 ++++---
 5 files changed, 12 insertions(+), 8 deletions(-)

diff --git a/arch/arm/Makefile b/arch/arm/Makefile
index d36be1e..cd336516 100644
--- a/arch/arm/Makefile
+++ b/arch/arm/Makefile
@@ -13,6 +13,7 @@
 LDFLAGS_vmlinux	:=-p --no-undefined -X
 ifeq ($(CONFIG_CPU_ENDIAN_BE8),y)
 LDFLAGS_vmlinux	+= --be8
+LDFLAGS_MODULE += --be8
 endif
 
 OBJCOPYFLAGS	:=-O binary -R .comment -S
diff --git a/arch/arm/boot/compressed/head.S b/arch/arm/boot/compressed/head.S
index 4411104..d2745b3 100644
--- a/arch/arm/boot/compressed/head.S
+++ b/arch/arm/boot/compressed/head.S
@@ -123,10 +123,10 @@ start:
 		.type	start,#function
 		.rept	7
 		mov	r0, r0
+		.endr
 #ifdef CONFIG_BE8_ON_LE
 		setend	be
 #endif
-		.endr
    ARM(		mov	r0, r0		)
    ARM(		b	1f		)
  THUMB(		adr	r12, BSYM(1f)	)
diff --git a/arch/arm/include/asm/spinlock.h b/arch/arm/include/asm/spinlock.h
index 5ed0ea0..a77b9b0 100644
--- a/arch/arm/include/asm/spinlock.h
+++ b/arch/arm/include/asm/spinlock.h
@@ -166,8 +166,6 @@ static inline void arch_write_lock(arch_rwlock_t *rw)
 	WFE("ne")
 #endif
 "	strexeq	%0, %2, [%1]\n"
-"	teq	%0, #0\n"
-"	bne	1b"
 	: "=&r" (tmp)
 	: "r" (&rw->lock), "r" (0x80000000)
 	: "cc");
@@ -233,7 +231,7 @@ static inline void arch_read_lock(arch_rwlock_t *rw)
 "	adds	%0, %0, #1\n"
 "	strexpl	%1, %0, [%2]\n"
 #ifndef CONFIG_SHEEVA_ERRATA_ARM_CPU_BTS61
-	WFE("mi")
+	WFE("ne")
 #endif
 "	rsbpls	%0, %1, #0\n"
 "	bmi	1b"
diff --git a/arch/arm/mach-armadaxp/headsmp.S b/arch/arm/mach-armadaxp/headsmp.S
index 4fbd61c..318b254 100644
--- a/arch/arm/mach-armadaxp/headsmp.S
+++ b/arch/arm/mach-armadaxp/headsmp.S
@@ -24,6 +24,9 @@ ENTRY(axp_secondary_startup)
         .word 0x800080e3 /* orr r0, r0, #0x80 */
         .word 0x100f01ee /* mcr p15, 0, r0, c1, c0 */
 #endif
+#ifdef CONFIG_BE8_ON_LE
+        setend  be
+#endif
 	mrc	p15, 0, r0, c0, c0, 5
 	and	r0, r0, #15
 	adr	r4, 1f
@@ -62,7 +65,8 @@ l0_dis_skip:
 	mcr	p15, 1, r7, c15, c2, 0	
 sp_ena_skip:
 #endif
-pen:	ldr	r7, [r6]
+pen:	dsb
+	ldr	r7, [r6]
 	cmp	r7, r0
 	bne	pen
 
diff --git a/arch/arm/mach-armadaxp/include/mach/entry-macro.S b/arch/arm/mach-armadaxp/include/mach/entry-macro.S
index e74c8f2..794a156 100644
--- a/arch/arm/mach-armadaxp/include/mach/entry-macro.S
+++ b/arch/arm/mach-armadaxp/include/mach/entry-macro.S
@@ -88,9 +88,10 @@
 	clz	\irqnr, \irqnr
 	mov	\tmp, #31
 	sub	\irqnr, \tmp, \irqnr
-	mov 	\tmp, #1
-	lsl	\tmp, \irqnr
-	mvn	\tmp, \tmp
+	mov     \tmp, #1
+	lsl     \tmp, \irqnr
+	bic 	\tmp, \tmp, \tmp
+	HTOLL   \tmp, \tmp
 	strh   	\tmp, [\base, #AXP_IN_DOORBELL_CAUSE]	@ clean irq
 1002:
 	.endm
