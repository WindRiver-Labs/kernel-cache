From edd3c71b114b49f1cfe650c2310d8aedb220a47d Mon Sep 17 00:00:00 2001
From: ltian <le.tian@windriver.com>
Date: Mon, 15 Nov 2010 11:21:27 +0800
Subject: [PATCH 073/132] RapidIO: Organize rapidio specific options into a sub menu.

The growth of the number of rapidio options has caused it to pollute
the device menu. Put all these options in a RapidIO menu to keep
the menus well organized. The config options are unchanged.

Signed-off-by: Chad Reese <kreese@caviumnetworks.com>
Signed-off-by: ltian <le.tian@windriver.com>
---
 drivers/rapidio/Kconfig |    9 +++++++++
 1 files changed, 9 insertions(+), 0 deletions(-)

diff --git a/drivers/rapidio/Kconfig b/drivers/rapidio/Kconfig
index 3d54bba..c514537 100644
--- a/drivers/rapidio/Kconfig
+++ b/drivers/rapidio/Kconfig
@@ -1,6 +1,9 @@
 #
 # RapidIO configuration
 #
+menu "RapidIO"
+	depends on RAPIDIO
+
 config RAPIDIO_DISC_TIMEOUT
 	int "Discovery timeout duration (seconds)"
 	depends on RAPIDIO
@@ -20,8 +23,12 @@ config RAPIDIO_ENABLE_RX_TX_PORTS
 	  ports for Input/Output direction to allow other traffic
 	  than Maintenance transfers.
 
+menu "Switches"
 source "drivers/rapidio/switches/Kconfig"
+endmenu
+menu "Devices"
 source "drivers/rapidio/devices/Kconfig"
+endmenu
 
 config RAPIDIO_DEBUG
 	bool "RapidIO subsystem debug messages"
@@ -33,3 +40,5 @@ config RAPIDIO_DEBUG
 	  going on.
 
 	  If you are unsure about this, say N here.
+
+endmenu
