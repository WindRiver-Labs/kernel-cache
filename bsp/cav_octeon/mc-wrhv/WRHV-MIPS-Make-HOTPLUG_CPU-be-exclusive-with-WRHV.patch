From f3b27142b542d935d46d262872f1b0ed1383644c Mon Sep 17 00:00:00 2001
From: Yang Shi <yang.shi@windriver.com>
Date: Thu, 19 May 2011 13:26:39 +0800
Subject: [PATCH] WRHV: MIPS: Make HOTPLUG_CPU be exclusive with WRHV

Since CPU hotplug is unsupported on MIPS64 GOS, so make it
be exclusive with WRHV to disable it when building GOS.

Signed-off-by: Yang Shi <yang.shi@windriver.com>
---
 arch/mips/Kconfig |    2 +-
 1 files changed, 1 insertions(+), 1 deletions(-)

diff --git a/arch/mips/Kconfig b/arch/mips/Kconfig
index cf2a482..813a6a0 100644
--- a/arch/mips/Kconfig
+++ b/arch/mips/Kconfig
@@ -825,7 +825,7 @@ config SYS_HAS_EARLY_PRINTK
 
 config HOTPLUG_CPU
 	bool "Support for hot-pluggable CPUs"
-	depends on SMP && HOTPLUG && SYS_SUPPORTS_HOTPLUG_CPU
+	depends on SMP && HOTPLUG && SYS_SUPPORTS_HOTPLUG_CPU && !WRHV
 	help
 	  Say Y here to allow turning CPUs off and on. CPUs can be
 	  controlled through /sys/devices/system/cpu.
