From 2ec136ce1c87f2985e27b0e5fd89bde035fcbd30 Mon Sep 17 00:00:00 2001
From: Jaiprakash Singh <b44839@freescale.com>
Date: Tue, 20 May 2014 13:41:09 +0530
Subject: [PATCH 104/255] Modified NOR address and chip select

NOR is connected to IFC CS0 with address
0x6000 0000.

Signed-off-by: Jaiprakash Singh <b44839@freescale.com>
[Kevin: Original patch taken from
LS1021A-SDK-V1.1-ARM-SOURCE-20140815-yocto.iso]
Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
---
 arch/arm/boot/dts/ls1021a-qds.dts | 4 ++--
 arch/arm/boot/dts/ls1021a.dtsi    | 1 -
 2 files changed, 2 insertions(+), 3 deletions(-)

diff --git a/arch/arm/boot/dts/ls1021a-qds.dts b/arch/arm/boot/dts/ls1021a-qds.dts
index febe972..47395a7 100644
--- a/arch/arm/boot/dts/ls1021a-qds.dts
+++ b/arch/arm/boot/dts/ls1021a-qds.dts
@@ -204,7 +204,7 @@
 			#address-cells = <1>;
 			#size-cells = <1>;
 			compatible = "cfi-flash";
-			reg = <0x1 0x0 0x8000000>;
+			reg = <0x0 0x0 0x8000000>;
 			bank-width = <2>;
 			device-width = <1>;
 		};
@@ -245,7 +245,7 @@
 		fpga: board-control@3,0 {
 			#address-cells = <1>;
 			#size-cells = <1>;
-			compatible = "fsl,fpga-qixis";
+			compatible = "fsl,ls1021aqds-fpga", "fsl,fpga-qixis";
 			reg = <0x3 0x0 0x0000100>;
 			bank-width = <1>;
 			device-width = <1>;
diff --git a/arch/arm/boot/dts/ls1021a.dtsi b/arch/arm/boot/dts/ls1021a.dtsi
index 5082b21..219a18c 100644
--- a/arch/arm/boot/dts/ls1021a.dtsi
+++ b/arch/arm/boot/dts/ls1021a.dtsi
@@ -92,7 +92,6 @@
 			compatible = "fsl,ls1021a-ifc", "fsl,ifc", "simple-bus";
 			reg = <0x1530000 0x10000>;
 			interrupts = <0 75 0x04>;
-			status = "disabled";
 		};
 
 		dcfg: dcfg@1ee0000 {
