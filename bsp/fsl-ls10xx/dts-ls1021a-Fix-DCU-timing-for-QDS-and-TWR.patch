-				vfront-porch = <1>;
+				vback-porch = <2>;
+				vfront-porch = <2>;
 				hsync-len = <41>;
-				vsync-len = <2>;
+				vsync-len = <4>;
 				hsync-active = <1>;
 				vsync-active = <1>;
 			};
diff --git a/arch/arm/boot/dts/ls1021a-twr.dts b/arch/arm/boot/dts/ls1021a-twr.dts
index b4593aa..99fe2fa 100644
--- a/arch/arm/boot/dts/ls1021a-twr.dts
+++ b/arch/arm/boot/dts/ls1021a-twr.dts
@@ -67,10 +67,10 @@
 				vactive = <272>;
 				hback-porch = <2>;
 				hfront-porch = <2>;
-				vback-porch = <1>;
-				vfront-porch = <1>;
+				vback-porch = <2>;
+				vfront-porch = <2>;
 				hsync-len = <41>;
-				vsync-len = <2>;
+				vsync-len = <4>;
 				hsync-active = <1>;
 				vsync-active = <1>;
 			};
