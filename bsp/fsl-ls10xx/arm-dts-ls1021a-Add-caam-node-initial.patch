From 8bf95f7cf2145e9c4f1ccdb67cb4c9e093e90f00 Mon Sep 17 00:00:00 2001
From: Ruchika Gupta <ruchika.gupta@freescale.com>
Date: Thu, 15 May 2014 10:21:58 +0530
Subject: [PATCH] arm: dts: ls1021a: Add caam node - initial

Signed-off-by: Ruchika Gupta <ruchika.gupta@freescale.com>
[Kevin: Original patch taken from
LS1021A-SDK-V1.1-ARM-SOURCE-20140815-yocto.iso]
Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
---
 arch/arm/boot/dts/ls1021a.dtsi | 43 ++++++++++++++++++++++++++++++++++++++++--
 1 file changed, 41 insertions(+), 2 deletions(-)

diff --git a/arch/arm/boot/dts/ls1021a.dtsi b/arch/arm/boot/dts/ls1021a.dtsi
index 789d053..1036242 100644
--- a/arch/arm/boot/dts/ls1021a.dtsi
+++ b/arch/arm/boot/dts/ls1021a.dtsi
@@ -126,11 +126,50 @@
 			reg = <0x1570000 0x10000>;
 		};
 
-		caam: sec@1700000 {
+		crypto: crypto@1700000 {
+			compatible = "fsl,sec-v5.3", "fsl,sec-v5.0", "fsl,sec-v4.0";
+			fsl,sec-era = <4>;
+			#address-cells = <1>;
+			#size-cells = <1>;
 			reg = <0x1700000 0x10000>;
-			status = "disabled";
+			ranges		 = <0 0x1700000 0x100000>;
+			interrupts	 = <0 107 0x04>;
+
+		sec_jr0: jr@10000 {
+			compatible = "fsl,sec-v5.3-job-ring",
+			     "fsl,sec-v5.0-job-ring",
+			     "fsl,sec-v4.0-job-ring";
+			reg = <0x10000 0x10000>;
+			interrupts = <0 103 0x04>;
 		};
 
+		sec_jr1: jr@20000 {
+			compatible = "fsl,sec-v5.3-job-ring",
+			     "fsl,sec-v5.0-job-ring",
+			     "fsl,sec-v4.0-job-ring";
+			reg = <0x20000 0x10000>;
+			interrupts = <0 104 0x04>;
+		};
+
+		sec_jr2: jr@30000 {
+			compatible = "fsl,sec-v5.3-job-ring",
+			     "fsl,sec-v5.0-job-ring",
+			     "fsl,sec-v4.0-job-ring";
+			reg = <0x30000 0x10000>;
+			interrupts = <0 105 0x04>;
+		};
+
+		sec_jr3: jr@40000 {
+			compatible = "fsl,sec-v5.3-job-ring",
+			     "fsl,sec-v5.0-job-ring",
+			     "fsl,sec-v4.0-job-ring";
+			reg = <0x40000 0x10000>;
+			interrupts = <0 106 0x04>;
+		};
+
+	};
+
+
 		sfp: sfp@1e80000 {
 			reg = <0x1e80000 0x10000>;
 			status = "disabled";
-- 
