From 73dcf670a659364b0dc17f1ba6a339a3d8f5b696 Mon Sep 17 00:00:00 2001
From: Xiubo Li <Li.Xiubo@freescale.com>
Date: Fri, 25 Apr 2014 10:09:26 +0800
Subject: [PATCH 066/255] ARM: dts: ls1021a: Add Freescale FlexTimer Module
 timer node.

Signed-off-by: Xiubo Li <Li.Xiubo@freescale.com>
Cc: Shawn Guo <shawn.guo@linaro.org>
Cc: Jingchang Lu <b35083@freescale.com>
[Kevin: Original patch taken from
LS1021A-SDK-V1.1-ARM-SOURCE-20140815-yocto.iso]
Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
---
 arch/arm/boot/dts/ls1021a-qds.dts |  4 ++++
 arch/arm/boot/dts/ls1021a.dtsi    | 15 +++++++--------
 2 files changed, 11 insertions(+), 8 deletions(-)

diff --git a/arch/arm/boot/dts/ls1021a-qds.dts b/arch/arm/boot/dts/ls1021a-qds.dts
index 3596444..86eb580 100644
--- a/arch/arm/boot/dts/ls1021a-qds.dts
+++ b/arch/arm/boot/dts/ls1021a-qds.dts
@@ -112,6 +112,10 @@
 	phy-connection-type = "rgmii-id";
 };
 
+&ftm0_1 {
+	status = "okay";
+};
+
 &i2c0 {
 	status = "okay";
 	pca9547@77 {
diff --git a/arch/arm/boot/dts/ls1021a.dtsi b/arch/arm/boot/dts/ls1021a.dtsi
index ca73478..053bc87 100644
--- a/arch/arm/boot/dts/ls1021a.dtsi
+++ b/arch/arm/boot/dts/ls1021a.dtsi
@@ -399,15 +399,14 @@
 			status = "disabled";
 		};
 
-		ftm0: ftm@29d0000 {
-			reg = <0x29d0000 0x10000>;
+		ftm0_1: ftm0_1@29d0000 {
+			compatible = "fsl,ftm-timer";
+			reg = <0x29d0000 0x10000 0x29e0000 0x10000>;
 			interrupts = <0 118 0x04>;
-			status = "disabled";
-		};
-
-		ftm1: ftm@29e0000 {
-			reg = <0x29e0000 0x10000>;
-			interrupts = <0 119 0x04>;
+			clock-names = "ftm-evt", "ftm-src",
+			        "ftm-evt-counter-en", "ftm-src-counter-en";
+			clocks = <&platform_clk 1>, <&platform_clk 1>,
+			       <&platform_clk 1>, <&platform_clk 1>;
 			status = "disabled";
 		};
 
