From 88488151559f02b9a57a5461e6c844b624d1a34d Mon Sep 17 00:00:00 2001
From: Xiubo Li <Li.Xiubo@freescale.com>
Date: Tue, 8 Jul 2014 13:46:08 +0800
Subject: [PATCH 208/255] arm: dts: ls1021a: add smmu nodes support.

Signed-off-by: Jason Jin <Jason.Jin@freescale.com>
Signed-off-by: Xiubo Li <Li.Xiubo@freescale.com>
[Kevin: Original patch taken from
LS1021A-SDK-V1.1-ARM-SOURCE-20140815-yocto.iso]
Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
---
 arch/arm/boot/dts/ls1021a.dtsi | 30 ++++++++++++++++++++++++++++++
 1 file changed, 30 insertions(+)

diff --git a/arch/arm/boot/dts/ls1021a.dtsi b/arch/arm/boot/dts/ls1021a.dtsi
index 292a8ba..e06374c 100644
--- a/arch/arm/boot/dts/ls1021a.dtsi
+++ b/arch/arm/boot/dts/ls1021a.dtsi
@@ -75,6 +75,36 @@
 		interrupt-parent = <&gic>;
 		ranges;
 
+		smmu0: smmu@1200000 {
+			compatible = "arm,mmu-400";
+			reg = <0x0 0x1200000 0x0 0x10000>;
+			#global-interrupts = <2>;
+			interrupts = <GIC_SPI 69 IRQ_TYPE_LEVEL_HIGH>,
+					<GIC_SPI 70 IRQ_TYPE_LEVEL_HIGH>;
+		};
+
+		smmu1: smmu@1280000 {
+			compatible = "arm,mmu-400";
+			reg = <0x0 0x1280000 0x0 0x10000>;
+			#global-interrupts = <2>;
+			interrupts = <GIC_SPI 71 IRQ_TYPE_LEVEL_HIGH>,
+					<GIC_SPI 72 IRQ_TYPE_LEVEL_HIGH>;
+		};
+
+		smmu2: smmu@1300000 {
+			compatible = "arm,mmu-400";
+			reg = <0x0 0x1300000 0x0 0x10000>;
+			#global-interrupts = <1>;
+			interrupts = <GIC_SPI 73 IRQ_TYPE_LEVEL_HIGH>;
+		};
+
+		smmu3: smmu@1380000 {
+			compatible = "arm,mmu-400";
+			reg = <0x0 0x1380000 0x0 0x10000>;
+			#global-interrupts = <1>;
+			interrupts = <GIC_SPI 74 IRQ_TYPE_LEVEL_HIGH>;
+		};
+
 		gic: interrupt-controller@1400000 {
 			compatible = "arm,cortex-a15-gic";
 			#interrupt-cells = <3>;
-- 
