From 87807f64ace3a6f5f98352de48665d9a061840fa Mon Sep 17 00:00:00 2001
From: Jingchang Lu <b35083@freescale.com>
Date: Thu, 13 Feb 2014 13:36:51 +0800
Subject: [PATCH 007/255] arm: imx: add FSL_SOC and ARCH_LAYERSCAPE for ls102xa

Signed-off-by: Jingchang Lu <b35083@freescale.com>
[Kevin: Original patch taken from
LS1021A-SDK-V1.1-ARM-SOURCE-20140815-yocto.iso]
Signed-off-by: Kevin Hao <kexin.hao@windriver.com>
---
 arch/arm/mach-imx/Kconfig | 8 ++++++++
 1 file changed, 8 insertions(+)

diff --git a/arch/arm/mach-imx/Kconfig b/arch/arm/mach-imx/Kconfig
index 443eea9..da11548 100644
--- a/arch/arm/mach-imx/Kconfig
+++ b/arch/arm/mach-imx/Kconfig
@@ -141,6 +141,13 @@ config	SOC_IMX51
 	select PINCTRL_IMX51
 	select SOC_IMX5
 
+config	FSL_SOC
+	bool
+
+config ARCH_LAYERSCAPE
+	bool
+	select FSL_SOC
+
 if ARCH_MULTI_V4T
 
 comment "MX1 platforms:"
@@ -852,6 +859,7 @@ config SOC_LS1021A
 	select CLKSRC_OF
 	select HAVE_ARM_ARCH_TIMER
 	select HAVE_SMP
+	select ARCH_LAYERSCAPE
 
 	help
 	  This enable support for Freescale Layerscape LS1021A  processor.
