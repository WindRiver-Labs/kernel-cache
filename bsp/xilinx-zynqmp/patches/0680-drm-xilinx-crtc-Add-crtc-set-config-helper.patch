 	.destroy	= xilinx_drm_crtc_destroy,
-	.set_config	= drm_crtc_helper_set_config,
+	.set_config	= xilinx_drm_crtc_helper_set_config,
 	.page_flip	= xilinx_drm_crtc_page_flip,
 };
 
