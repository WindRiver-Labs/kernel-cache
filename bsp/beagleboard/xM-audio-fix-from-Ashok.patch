 		dma = omap24xx_dma_reqs[bus_id][substream->stream];
 		port = omap34xx_mcbsp_port[bus_id][substream->stream];
+	} else if (cpu_is_omap3630()) {
+		dma = omap24xx_dma_reqs[bus_id][substream->stream];
