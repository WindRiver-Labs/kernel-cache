From 10b135d33646317744200d31a70473c0014524c0 Mon Sep 17 00:00:00 2001
From: Andrew Liu <shengping.liu@windriver.com>
Date: Tue, 4 Nov 2008 14:45:55 +0800
Subject: [PATCH] Enable hwclock API

Add a gpt timer node in device tree to
enable hwclock API.

Signed-off-by: Andrew Liu <shengping.liu@windriver.com>
---
 arch/powerpc/boot/dts/mpc5121ads.dts |    8 ++++++++
 1 files changed, 8 insertions(+), 0 deletions(-)

diff --git a/arch/powerpc/boot/dts/mpc5121ads.dts b/arch/powerpc/boot/dts/mpc5121ads.dts
index 082996c..70b59c2 100644
--- a/arch/powerpc/boot/dts/mpc5121ads.dts
+++ b/arch/powerpc/boot/dts/mpc5121ads.dts
@@ -173,6 +173,14 @@
 			interrupt-parent = < &ipic >;
 		};
 
+		gpt@b00 {
+			compatible = "mpc5121e-gpt";
+			device_type = "gpt-hwtimer";
+			reg = <0xb00 0x10>;
+			interrupts = <15 0x8>;
+			interrupt-parent = < &ipic >;
+		 };
+
 		clock@f00 {	// Clock control
 			compatible = "fsl,mpc5121-clock";
 			reg = <0xf00 0x100>;
