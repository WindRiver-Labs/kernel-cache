 drivers/gpu/drm/i915/i915_gem_batch_pool.h |   42 ++++++++++++++++++++++++++++
 3 files changed, 44 insertions(+), 12 deletions(-)
 create mode 100644 drivers/gpu/drm/i915/i915_gem_batch_pool.h

