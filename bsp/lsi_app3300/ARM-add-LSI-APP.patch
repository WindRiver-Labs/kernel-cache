From 5b0751ee07d0dfb52ad25d4c0b8717c9df2e6c9a Mon Sep 17 00:00:00 2001
From: Tony Liu <Bo.Liu@windriver.com>
Date: Tue, 30 Mar 2010 14:34:09 +0800
Subject: [PATCH 01/13] ARM: add LSI APP

Add LSI APP platform into arm arch kconfig and makefile.

Signed-off-by: Tonyliu <Bo.Liu@windriver.com>
---
 arch/arm/Kconfig  |   12 ++++++++++++
 arch/arm/Makefile |    1 +
 2 files changed, 13 insertions(+), 0 deletions(-)

diff --git a/arch/arm/Kconfig b/arch/arm/Kconfig
index 410d3e3..555cb48 100644
--- a/arch/arm/Kconfig
+++ b/arch/arm/Kconfig
@@ -450,6 +450,16 @@ config ARCH_L7200
 	  If you have any questions or comments about the Linux kernel port
 	  to this board, send e-mail to <sjhill@cotw.com>.
 
+config ARCH_APP
+	bool "LSI APP"
+	select HAVE_CLK
+	select GENERIC_GPIO
+	select GENERIC_CLOCKEVENTS
+	select GENERIC_TIME
+	help
+	  Support for the LSI's APP series SoCs.
+
+
 config ARCH_DOVE
 	bool "Marvell Dove"
 	select PCI
@@ -810,6 +820,8 @@ endchoice
 #
 source "arch/arm/mach-aaec2000/Kconfig"
 
+source "arch/arm/mach-app/Kconfig"
+
 source "arch/arm/mach-at91/Kconfig"
 
 source "arch/arm/mach-bcmring/Kconfig"
diff --git a/arch/arm/Makefile b/arch/arm/Makefile
index 4e36a49..8d3432f 100644
--- a/arch/arm/Makefile
+++ b/arch/arm/Makefile
@@ -118,6 +118,7 @@ endif
 # Machine directory name.  This list is sorted alphanumerically
 # by CONFIG_* macro name.
 machine-$(CONFIG_ARCH_AAEC2000)		:= aaec2000
+machine-$(CONFIG_ARCH_APP)			:= app
 machine-$(CONFIG_ARCH_AT91)		:= at91
 machine-$(CONFIG_ARCH_BCMRING)		:= bcmring
 machine-$(CONFIG_ARCH_CLPS711X)		:= clps711x
