From 7a2e9bd343a642d96b1891f1a39b01bba144cbae Mon Sep 17 00:00:00 2001
From: Tony Liu <Bo.Liu@windriver.com>
Date: Tue, 30 Mar 2010 14:35:26 +0800
Subject: [PATCH 02/13] lsi_app: add platform common config

Add LSI APP3K common kconfig and Makefile.

Signed-off-by: Tonyliu <Bo.Liu@windriver.com>
---
 arch/arm/mach-app/Kconfig  |   25 +++++++++++++++++++++++++
 arch/arm/mach-app/Makefile |    5 +++++
 2 files changed, 30 insertions(+), 0 deletions(-)
 create mode 100644 arch/arm/mach-app/Kconfig
 create mode 100644 arch/arm/mach-app/Makefile

diff --git a/arch/arm/mach-app/Kconfig b/arch/arm/mach-app/Kconfig
new file mode 100644
index 0000000..f03b589
--- /dev/null
+++ b/arch/arm/mach-app/Kconfig
@@ -0,0 +1,25 @@
+if ARCH_APP
+
+menu "LSI APP Implementations"
+
+choice
+	prompt "APP System Type"
+	default ARCH_APPXK
+
+config ARCH_APPXK
+	bool "LSI APP2k/3k"
+	select ARM_AMBA
+	select ARM_GIC
+	select COMMON_CLKDEV
+	select CPU_V6
+	help
+	  System based on app2200 or app3300 communication processor family.
+endchoice
+
+config ARCH_APP3K
+	bool "APP3300 family support"
+	depends on ARCH_APPXK
+
+endmenu
+
+endif
diff --git a/arch/arm/mach-app/Makefile b/arch/arm/mach-app/Makefile
new file mode 100644
index 0000000..9f5afd9
--- /dev/null
+++ b/arch/arm/mach-app/Makefile
@@ -0,0 +1,5 @@
+#
+# Makefile for the linux kernel.
+#
+
+obj-y := clock.o irq.o mm.o pll.o timer.o ubootenv.o
