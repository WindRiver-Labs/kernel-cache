From 806d94c6f05d42d9af899bc2e284c16f06c7b0cb Mon Sep 17 00:00:00 2001
From: Luo Chunbo <chunbo.luo@windriver.com>
Date: Mon, 26 Apr 2010 11:12:10 +0800
Subject: [PATCH 2/3] powerpc/mpc83xx: update dts of fsl_mpc8313e_rdb

1. add NOR flash partition.
2. add lm75 sensor.
3. add eeprom.
4. add mmc spi slot.

Signed-off-by: Luo Chunbo <chunbo.luo@windriver.com>
---
 arch/powerpc/boot/dts/mpc8313erdb.dts |   40 +++++++++++++++++++++++++++++++++
 1 files changed, 40 insertions(+), 0 deletions(-)

diff --git a/arch/powerpc/boot/dts/mpc8313erdb.dts b/arch/powerpc/boot/dts/mpc8313erdb.dts
index 761faa7..0da1a16 100644
--- a/arch/powerpc/boot/dts/mpc8313erdb.dts
+++ b/arch/powerpc/boot/dts/mpc8313erdb.dts
@@ -70,6 +70,28 @@
 			reg = <0x0 0x0 0x800000>;
 			bank-width = <2>;
 			device-width = <1>;
+
+			u-boot@0 {
+				reg = <0x0 0x80000>;
+				read-only;
+			};
+
+			kernel@80000 {
+				reg = <0x80000 0x280000>;
+			};
+
+			fs@300000 {
+				reg = <0x300000 0x400000>;
+			};
+
+			dtb@70000 {
+				reg = <0x700000 0x10000>;
+			};
+
+			Reserved@710000 {
+				reg = <0x710000 0xe0000>;
+				read-only;
+			};
 		};
 
 		nand@1,0 {
@@ -125,6 +147,14 @@
 				interrupts = <14 0x8>;
 				interrupt-parent = <&ipic>;
 				dfsrr;
+				sensor@48 {
+					compatible = "national,lm75";
+					reg = <0x48>;
+				};
+				eeprom@50 {
+					compatible = "at,24c32";
+					reg = <0x50>;
+				};
 				rtc@68 {
 					compatible = "dallas,ds1339";
 					reg = <0x68>;
@@ -156,12 +186,22 @@
 		};
 
 		spi@7000 {
+			#address-cells = <1>;
+			#size-cells = <0>;
 			cell-index = <0>;
 			compatible = "fsl,spi";
 			reg = <0x7000 0x1000>;
 			interrupts = <16 0x8>;
 			interrupt-parent = <&ipic>;
 			mode = "cpu";
+
+			mmc-slot@0 {
+				compatible = "fsl,mpc8313erdb-mmc-slot",
+					     "mmc-spi-slot";
+				reg = <0>;
+				voltage-ranges = <3300 3300>;
+				spi-max-frequency = <50000000>;
+			};
 		};
 
 		/* phy type (ULPI, UTMI, UTMI_WIDE, SERIAL) */
