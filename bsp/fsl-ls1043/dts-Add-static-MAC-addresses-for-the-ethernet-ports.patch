From a75d6e8f920f357ca8a3730df9d263c7e3c36812 Mon Sep 17 00:00:00 2001
From: Cristian Sovaiala <cristian.sovaiala@freescale.com>
Date: Thu, 4 Jun 2015 17:11:41 +0300
Subject: [PATCH 178/451] dts: Add static MAC addresses for the ethernet ports

Fixup is not done by U-boot therefore we add static MAC addresses
for each ethernet port.

Signed-off-by: Cristian Sovaiala <cristian.sovaiala@freescale.com>
[Xulin: Original patch taken from
Linux-LS1043A-SDK-V0.4-SOURCE-20150826-yocto.iso]
Signed-off-by: Xulin Sun <xulin.sun@windriver.com>
---
 arch/arm64/boot/dts/freescale/fsl-ls1043a-rdb.dts |    7 +++++++
 1 files changed, 7 insertions(+), 0 deletions(-)

diff --git a/arch/arm64/boot/dts/freescale/fsl-ls1043a-rdb.dts b/arch/arm64/boot/dts/freescale/fsl-ls1043a-rdb.dts
index f1fbec1..6f0e5a0 100644
--- a/arch/arm64/boot/dts/freescale/fsl-ls1043a-rdb.dts
+++ b/arch/arm64/boot/dts/freescale/fsl-ls1043a-rdb.dts
@@ -181,36 +181,43 @@
 	ethernet@e0000 {
 		phy-handle = <&qsgmii_phy1>;
 		phy-connection-type = "qsgmii";
+		local-mac-address = [02 00 c0 a8 6f 01];
 	};
 
 	ethernet@e2000 {
 		phy-handle = <&qsgmii_phy2>;
 		phy-connection-type = "qsgmii";
+		local-mac-address = [02 00 c0 a8 6f 02];
 	};
 
 	ethernet@e4000 {
 		phy-handle = <&rgmii_phy1>;
 		phy-connection-type = "rgmii";
+		local-mac-address = [02 00 c0 a8 6f 03];
 	};
 
 	ethernet@e6000 {
 		phy-handle = <&rgmii_phy2>;
 		phy-connection-type = "rgmii";
+		local-mac-address = [02 00 c0 a8 6f 04];
 	};
 
 	ethernet@e8000 {
 		phy-handle = <&qsgmii_phy3>;
 		phy-connection-type = "qsgmii";
+		local-mac-address = [02 00 c0 a8 6f 05];
 	};
 
 	ethernet@ea000 {
 		phy-handle = <&qsgmii_phy4>;
 		phy-connection-type = "qsgmii";
+		local-mac-address = [02 00 c0 a8 6f 06];
 	};
 
 	ethernet@f0000 { /* 10GEC1 */
 		phy-handle = <&aqr105_phy>;
 		phy-connection-type = "xgmii";
+		local-mac-address = [02 00 c0 a8 6f 07];
 	};
 
 	mdio@fc000 {
