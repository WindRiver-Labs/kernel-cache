+				&dev->read_list.mei_cb.cb_list, cb_list) {
+			struct mei_cl *cl_temp;
+			cl_temp = (struct mei_cl *)cb_pos->file_private;
+
+			if (mei_cl_cmp_id(cl, cl_temp))
+				return cb_pos;
+		}
+	}
+	return NULL;
+}
