From 31b82192e099861b34ce27d5b8da9cde2e9c8643 Mon Sep 17 00:00:00 2001
From: TonyLiu <Bo.Liu@windriver.com>
Date: Wed, 22 Oct 2008 09:44:07 +0800
Subject: [PATCH] mx3_drivers_mxc_Kconfig

MX3 arch dependent drivers Kconfig entry.

Signed-off-by: Tonyliu <Bo.Liu@windriver.com>
---
 arch/arm/Kconfig     |    4 ++++
 drivers/Makefile     |    1 +
 drivers/mxc/Kconfig  |   13 +++++++++++++
 drivers/mxc/Makefile |    4 ++++
 4 files changed, 22 insertions(+), 0 deletions(-)
 create mode 100644 drivers/mxc/Kconfig
 create mode 100644 drivers/mxc/Makefile

diff --git a/arch/arm/Kconfig b/arch/arm/Kconfig
index 7e45223..06f244d 100644
--- a/arch/arm/Kconfig
+++ b/arch/arm/Kconfig
@@ -1234,6 +1234,10 @@ source "drivers/regulator/Kconfig"
 
 source "drivers/uio/Kconfig"
 
+if ARCH_MXC
+source "drivers/mxc/Kconfig"
+endif
+
 endmenu
 
 source "fs/Kconfig"
diff --git a/drivers/Makefile b/drivers/Makefile
index 2735bde..da7b484 100644
--- a/drivers/Makefile
+++ b/drivers/Makefile
@@ -82,6 +82,7 @@ obj-$(CONFIG_EISA)		+= eisa/
 obj-y				+= lguest/
 obj-$(CONFIG_CPU_FREQ)		+= cpufreq/
 obj-$(CONFIG_CPU_IDLE)		+= cpuidle/
+obj-$(CONFIG_ARCH_MXC)      += mxc/
 obj-$(CONFIG_MMC)		+= mmc/
 obj-$(CONFIG_MEMSTICK)		+= memstick/
 obj-$(CONFIG_NEW_LEDS)		+= leds/
diff --git a/drivers/mxc/Kconfig b/drivers/mxc/Kconfig
new file mode 100644
index 0000000..a1b3fbe
--- /dev/null
+++ b/drivers/mxc/Kconfig
@@ -0,0 +1,13 @@
+# drivers/video/mxc/Kconfig
+
+if ARCH_MXC
+
+menu "MXC support drivers"
+
+source "drivers/mxc/ssi/Kconfig"
+source "drivers/mxc/dam/Kconfig"
+source "drivers/mxc/pmic/Kconfig"
+
+endmenu
+
+endif
diff --git a/drivers/mxc/Makefile b/drivers/mxc/Makefile
new file mode 100644
index 0000000..cea4d13
--- /dev/null
+++ b/drivers/mxc/Makefile
@@ -0,0 +1,4 @@
+obj-$(CONFIG_MXC_SSI)               	+= ssi/
+obj-$(CONFIG_MXC_DAM)               	+= dam/
+
+obj-$(CONFIG_MXC_PMIC)			+= pmic/
-- 
