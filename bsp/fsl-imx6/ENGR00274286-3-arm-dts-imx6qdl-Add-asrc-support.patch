Date: Wed, 7 Aug 2013 16:28:55 +0800
Subject: [PATCH 0088/1072] ENGR00274286-3 arm: dts: imx6qdl: Add asrc support

git://git.freescale.com/imx/linux-2.6-imx.git imx_3.10.17_1.0.0_beta
commit c22fb9b55f62c1c905bfef214fa3f43c9394e3d5

Complete required DT bindings.

Signed-off-by: Nicolin Chen <b42378@freescale.com>
Signed-off-by: Hongbo Zhong <hongbo.zhong@windriver.com>
---
 arch/arm/boot/dts/imx6qdl.dtsi |   10 ++++++++++
 1 files changed, 10 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6qdl.dtsi b/arch/arm/boot/dts/imx6qdl.dtsi
index 1d4b1ab..07f0a46 100644
--- a/arch/arm/boot/dts/imx6qdl.dtsi
+++ b/arch/arm/boot/dts/imx6qdl.dtsi
@@ -229,8 +229,18 @@
 				};
 
 				asrc: asrc@02034000 {
+					compatible = "fsl,imx6q-asrc";
 					reg = <0x02034000 0x4000>;
 					interrupts = <0 50 0x04>;
+					clocks = <&clks 107>;
+					clock-names = "core";
+					dmas = <&sdma 17 20 0>, <&sdma 18 20 0>, <&sdma 19 20 0>,
+					     <&sdma 20 20 0>, <&sdma 21 20 0>, <&sdma 22 20 0>;
+					dma-names = "rxa", "rxb", "rxc",
+						"txa", "txb", "txc";
+					fsl,clk-map-version = <2>;
+					fsl,clk-channel-bits = <4>;
+					status = "okay";
 				};
 
 				spba@0203c000 {
