From 1e34e6d85ece860c02be534cd0a57ca96ae6e19b Mon Sep 17 00:00:00 2001
From: Sandor Yu <R01008@freescale.com>
Date: Thu, 22 Aug 2013 13:40:15 +0800
Subject: [PATCH 0152/1072] ENGR00276224-02 ARM dts: update dts for hdmi cec
 function

git://git.freescale.com/imx/linux-2.6-imx.git imx_3.10.17_1.0.0_beta
commit d9cf03de738c53ab99cc91ce7c6d9a9c0206f8e9

- Add correct hdmi cec interrupter property.
- Add correct pinctrl for imx6 sabreauto board.

Signed-off-by: Sandor Yu <R01008@freescale.com>
Signed-off-by: Hongbo Zhong <hongbo.zhong@windriver.com>
---
 arch/arm/boot/dts/imx6dl.dtsi            |    2 +-
 arch/arm/boot/dts/imx6q.dtsi             |    2 +-
 arch/arm/boot/dts/imx6qdl-sabreauto.dtsi |    2 +-
 3 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/arch/arm/boot/dts/imx6dl.dtsi b/arch/arm/boot/dts/imx6dl.dtsi
index 5b64af7..3d822a6 100644
--- a/arch/arm/boot/dts/imx6dl.dtsi
+++ b/arch/arm/boot/dts/imx6dl.dtsi
@@ -109,7 +109,7 @@
 
 		hdmi_cec: hdmi_cec@00120000 {
 			compatible = "fsl,imx6dl-hdmi-cec";
-			interrupts = <0 116 0x04>;
+			interrupts = <0 115 0x04>;
 			status = "disabled";
 		};
 
diff --git a/arch/arm/boot/dts/imx6q.dtsi b/arch/arm/boot/dts/imx6q.dtsi
index 5e453bc..c2bb78d 100644
--- a/arch/arm/boot/dts/imx6q.dtsi
+++ b/arch/arm/boot/dts/imx6q.dtsi
@@ -128,7 +128,7 @@
 
 		hdmi_cec: hdmi_cec@00120000 {
 			compatible = "fsl,imx6q-hdmi-cec";
-			interrupts = <0 116 0x04>;
+			interrupts = <0 115 0x04>;
 			status = "disabled";
 		};
 
diff --git a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
index b3f4137..9772979 100644
--- a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
@@ -293,7 +293,7 @@
 
 &hdmi_cec {
 	pinctrl-names = "default";
-	pinctrl-0 = <&pinctrl_hdmi_cec_2>;
+	pinctrl-0 = <&pinctrl_hdmi_cec_1>;
 	status = "okay";
 };
 
