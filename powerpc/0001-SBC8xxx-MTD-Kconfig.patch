From 3ed0db41372e450b961b5145351fcb25c6b33226 Mon Sep 17 00:00:00 2001
From: Mark Asselstine <mark.asselstine@windriver.com>
Date: Tue, 15 Jul 2008 16:52:43 -0400
Subject: [PATCH] SBC8xxx MTD Kconfig

Since two more Wind River SBC targets use the same MTD map driver,
this patch changes the MTD map configuration name to "MTD_WRSBC8xxx"
to avoid confusion.

wrs_severity: minor
wrs_scope: make_kconfig

Signed-off-by: <xiao.zhang@windriver.com>
---
 drivers/mtd/maps/Kconfig  |   12 ++++++------
 drivers/mtd/maps/Makefile |    2 +-
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/drivers/mtd/maps/Kconfig b/drivers/mtd/maps/Kconfig
index 17bc87a..aeb4573 100644
--- a/drivers/mtd/maps/Kconfig
+++ b/drivers/mtd/maps/Kconfig
@@ -523,18 +523,18 @@ config MTD_UCLINUX
 	help
 	  Map driver to support image based filesystems for uClinux.
 
-config MTD_WRSBC8260
-	tristate "Map driver for WindRiver PowerQUICC II MPC82xx board"
-	depends on (SBC82xx || SBC8560)
+config MTD_WRSBC8xxx
+	tristate "Map driver for WindRiver SBC8xxx board"
+	depends on (SBC82xx || SBC8560 || SBC8548)
 	select MTD_PARTITIONS
 	select MTD_MAP_BANK_WIDTH_4
 	select MTD_MAP_BANK_WIDTH_1
 	select MTD_CFI_I1
 	select MTD_CFI_I4
 	help
-	  Map driver for WindRiver PowerQUICC II MPC82xx board. Drives
-	  all three flash regions on CS0, CS1 and CS6 if they are configured
-	  correctly by the boot loader.
+	  Map driver for WindRiver PowerQUICC II MPC82xx, WRS_SBC8560 and
+	  WRS_SBC8548 board. Drives all three flash regions on CS0, CS1 
+	  and CS6 if they are configured correctly by the boot loader.
 
 config MTD_DMV182
         tristate "Map driver for Dy-4 SVME/DMV-182 board."
diff --git a/drivers/mtd/maps/Makefile b/drivers/mtd/maps/Makefile
index 957fb5f..e11af1d 100644
--- a/drivers/mtd/maps/Makefile
+++ b/drivers/mtd/maps/Makefile
@@ -60,7 +60,7 @@ obj-$(CONFIG_MTD_SBC8240)	+= sbc8240.o
 obj-$(CONFIG_MTD_NOR_TOTO)	+= omap-toto-flash.o
 obj-$(CONFIG_MTD_IXP4XX)	+= ixp4xx.o
 obj-$(CONFIG_MTD_IXP2000)	+= ixp2000.o
-obj-$(CONFIG_MTD_WRSBC8260)	+= wr_sbc82xx_flash.o
+obj-$(CONFIG_MTD_WRSBC8xxx)	+= wr_sbc82xx_flash.o
 obj-$(CONFIG_MTD_DMV182)	+= dmv182.o
 obj-$(CONFIG_MTD_SHARP_SL)	+= sharpsl-flash.o
 obj-$(CONFIG_MTD_PLATRAM)	+= plat-ram.o
