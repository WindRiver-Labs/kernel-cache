@@ -163,7 +163,7 @@ static void kgdboc_unregister_kbd(void)
 
 static int do_restore_input(void *dummy)
 {
-	for (;;) {
+	while (!kthread_should_stop()) {
 		if (do_reschedule_work) {
 			do_reschedule_work = 0;
 			_kgdboc_restore_input();
@@ -237,6 +237,12 @@ __setup("kgdboc=", kgdboc_option_setup);
 
 static void cleanup_kgdboc(void)
 {
+	if (do_reschedule_work)
+                cancel_work_sync(&kgdboc_restore_input_work);
+
+	if (delay_schedule_work_task)
+		kthread_stop(delay_schedule_work_task);
+
 	if (kgdb_unregister_nmi_console())
 		return;
 	kgdboc_unregister_kbd();
