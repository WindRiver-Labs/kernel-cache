@@ -55,7 +55,7 @@ struct pcd_range {
 
 struct dpa_percpu_priv_s {
 	struct net_device	*net_dev;
-	struct work_struct	 fd_work;
+	struct tasklet_struct    dpa_task;
 	struct list_head	 fd_list[2][2];
