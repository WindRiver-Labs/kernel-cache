-};
-
 static struct omap_hwmod_class_sysconfig dra7xx_timer_sysc = {
 	.rev_offs	= 0x0000,
 	.sysc_offs	= 0x0010,
@@ -1726,7 +1696,7 @@ static struct omap_hwmod_class dra7xx_timer_hwmod_class = {
