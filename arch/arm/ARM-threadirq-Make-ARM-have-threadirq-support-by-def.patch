From e366b7419fee63bf43104e617be6c0a3ae7cc3a7 Mon Sep 17 00:00:00 2001
From: Yang Shi <yang.shi@windriver.com>
Date: Thu, 19 Jul 2012 10:03:28 -0700
Subject: [PATCH] ARM: threadirq: Make ARM have threadirq support by default

Select IRQ_FORCED_THREADING in ARM Kconfig by default.

Signed-off-by: Yang Shi <yang.shi@windriver.com>
---
 arch/arm/Kconfig |    1 +
 1 file changed, 1 insertion(+)

diff --git a/arch/arm/Kconfig b/arch/arm/Kconfig
index 113904b..c146cdd 100644
--- a/arch/arm/Kconfig
+++ b/arch/arm/Kconfig
@@ -32,6 +32,7 @@ config ARM
 	select HAVE_C_RECORDMCOUNT
 	select HAVE_GENERIC_HARDIRQS
 	select GENERIC_IRQ_SHOW
+	select IRQ_FORCED_THREADING
 	select CPU_PM if (SUSPEND || CPU_IDLE)
 	select GENERIC_PCI_IOMAP
 	select HAVE_BPF_JIT if NET
