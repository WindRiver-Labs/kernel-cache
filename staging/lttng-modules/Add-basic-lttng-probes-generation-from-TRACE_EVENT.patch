diff --git a/drivers/staging/lttng2/Makefile b/drivers/staging/lttng2/Makefile
index 109b806..19acdbb 100644
--- a/drivers/staging/lttng2/Makefile
+++ b/drivers/staging/lttng2/Makefile
@@ -12,6 +12,8 @@ obj-m += ltt-ring-buffer-client-overwrite.o
 obj-m += ltt-relay.o
 ltt-relay-objs :=  ltt-events.o ltt-event-header.o ltt-debugfs-abi.o
 
+obj-m += probes/
+
 #ltt-type-serializer.o
 #ltt-serialize.o
 #obj-m += ltt-marker-control.o
diff --git a/drivers/staging/lttng2/probes/Makefile b/drivers/staging/lttng2/probes/Makefile
new file mode 100644
index 0000000..3125567
--- /dev/null
+++ b/drivers/staging/lttng2/probes/Makefile
@@ -0,0 +1,28 @@
+#
+# Makefile for the LTT probes.
+#
+
+ifneq ($(KERNELRELEASE),)
+ifneq ($(CONFIG_TRACEPOINTS),)
+
+ccflags-y += -I$(PWD)/probes
+obj-m += sched.o
+
+endif
+
+else
+	KERNELDIR ?= /lib/modules/$(shell uname -r)/build
+	PWD := $(shell pwd)
+	CFLAGS = $(EXTCFLAGS)
+
+default:
+	$(MAKE) -C $(KERNELDIR) M=$(PWD) modules
+
+modules_install:
+	$(MAKE) -C $(KERNELDIR) M=$(PWD) modules_install
+	/sbin/depmod -a
+
+clean:
+	$(MAKE) -C $(KERNELDIR) M=$(PWD) clean
+
+endif
