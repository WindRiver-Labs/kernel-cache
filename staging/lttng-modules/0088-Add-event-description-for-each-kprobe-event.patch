@@ -104,7 +104,7 @@ struct lttng_enum {
 
 struct lttng_event_field {
 	const char *name;
-	const struct lttng_type type;
+	struct lttng_type type;
 };
 
 struct lttng_event_desc {
@@ -127,7 +127,7 @@ struct lttng_probe_desc {
