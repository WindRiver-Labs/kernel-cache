+static void trace_async_wakeup(struct ltt_trace *trace)
+{
+	int i;
+	struct ltt_chan *chan;
+
+	/* Must check each channel for pending read wakeup */
+	for (i = 0; i < trace->nr_channels; i++) {
+		chan = &trace->channels[i];
+		if (chan->active)
+			trace->ops->wakeup_channel(chan);
+	}
+}
