+static int pm_idle_entry_callback(struct notifier_block *self,
+				  unsigned long val, void *data)
+{
+	if (val == IDLE_START) {
+		rcu_read_lock_sched_notrace();
+		ltt_chan_for_each_channel(ltt_chanbuf_idle_switch,
+					  smp_processor_id());
+		rcu_read_unlock_sched_notrace();
+	}
+	return 0;
+}
