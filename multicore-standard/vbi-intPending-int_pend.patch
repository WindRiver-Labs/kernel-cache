From 8228641dcf1b88fed628c9e206daf97088d7a071 Mon Sep 17 00:00:00 2001
From: Paul Gortmaker <paul.gortmaker@windriver.com>
Date: Fri, 30 Oct 2009 00:37:46 -0400
Subject: [PATCH 24/26] vbi: intPending -> int_pend

Signed-off-by: Paul Gortmaker <paul.gortmaker@windriver.com>
---
 arch/powerpc/kernel/vbi/wrhv.c |    6 +++---
 include/vbi/interface.h        |    6 +++---
 include/vbi/vbi.h              |    6 +++---
 kernel/vbi/show.c              |    2 +-
 4 files changed, 10 insertions(+), 10 deletions(-)

diff --git a/arch/powerpc/kernel/vbi/wrhv.c b/arch/powerpc/kernel/vbi/wrhv.c
index 09a9c98..3abab97 100644
--- a/arch/powerpc/kernel/vbi/wrhv.c
+++ b/arch/powerpc/kernel/vbi/wrhv.c
@@ -307,17 +307,17 @@ unsigned int wrhv_vioapic_get_irq(void)
 {
 	unsigned int irq;
 
-	irq = wrhvControl->intPending;
+	irq = wrhvControl->int_pend;
 
 #ifdef CONFIG_DEBUG_VIRTUAL_IRQS
 	/* Maybe this is useless for real external interrupt */
-	wrhvStatus->intPending = 0;
+	wrhvStatus->int_pend = 0;
 #endif
 
 	if (irq == 0xffff)
 		irq = NO_IRQ_IGNORE;
 	else
-		wrhvControl->intPending = 0xffff;
+		wrhvControl->int_pend = 0xffff;
 
 	return irq;
 }
diff --git a/include/vbi/interface.h b/include/vbi/interface.h
index 596235a..e7d0b8d 100644
--- a/include/vbi/interface.h
+++ b/include/vbi/interface.h
@@ -329,7 +329,7 @@ struct vb_control
 					/* Virtual I/O APIC */
 	VB_ALIGN_FIELD_64 (void *vIoapic, pad3);
 
-	uint32_t intPending;		/* actual virtual interrupt pending */
+	uint32_t int_pend;		/* actual virtual interrupt pending */
 
 };
 
@@ -374,7 +374,7 @@ struct vb_control
  *       |		|<-------64bits - vb_arch_stat_regs; arch dependent
  *       |		|		structure pointer
  *       |--------------|
- *       |		|<-------32bits - intPending; pending vector number
+ *       |		|<-------32bits - int_pend; pending vector number
  *       |--------------|
  *       |//////////////|<-------32bits - Reserved for future enhencements
  *       |--------------|
@@ -404,7 +404,7 @@ struct vb_status {
 #endif
 
 	/* Bits indicating which interrupts are pending */
-	uint32_t intPendingType;
+	uint32_t int_pend_type;
 
 	/* reserved field for future use, required for timeStamp alignment */
 	uint32_t reserved1;
diff --git a/include/vbi/vbi.h b/include/vbi/vbi.h
index a72fefe..94016fd 100644
--- a/include/vbi/vbi.h
+++ b/include/vbi/vbi.h
@@ -53,7 +53,7 @@ various data structures.
 
 
 #define VBI_INT_PENDING_SET(value)        \
-        (VBI_CNTRL_ADDR_GET()->intPending = value)
+        (VBI_CNTRL_ADDR_GET()->int_pend = value)
 
 /*
  *
@@ -131,7 +131,7 @@ various data structures.
  *
  */
 #define VBI_INT_VCORE_PENDING()				    \
-        (VBI_CNTRL_ADDR_GET()->intPending)
+        (VBI_CNTRL_ADDR_GET()->int_pend)
 
 /*
  * VBI_INT_VCORE_PENDING_TYPE_GET - Get the pending interrupts
@@ -143,7 +143,7 @@ various data structures.
  *	    0 if none is pending
  */
 #define VBI_INT_VCORE_PENDING_TYPE_GET()            \
-        (VBI_STATUS_ADDR_GET()->intPendingType)
+        (VBI_STATUS_ADDR_GET()->int_pend_type)
 
 /*
  * VBI_INT_VCORE_PREVSTATE_GET - Get the core's previous interrupt status 
diff --git a/kernel/vbi/show.c b/kernel/vbi/show.c
index c4d61f9..9a6bcaa 100644
--- a/kernel/vbi/show.c
+++ b/kernel/vbi/show.c
@@ -117,7 +117,7 @@ void vbiStatusShow(struct vb_status *p)
 {
 	printk("VB status: 0x%x\n", p);
 
-	printk("  Pending interrupts: 0x%08x\n", p->intPendingType);
+	printk("  Pending interrupts: 0x%08x\n", p->int_pend_type);
 	printk("  timestamp:          %lld\n", p->timeStamp);
 	printk("  old int disable:    0x%08x\n", p->oldIntDisable);
 #ifdef _WRHV_ARCH_HAS_STATUS_REGS
