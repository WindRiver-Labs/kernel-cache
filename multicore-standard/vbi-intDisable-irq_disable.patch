From 1293016af8c8f8345c2905ae91a1b6d044e387ef Mon Sep 17 00:00:00 2001
From: Paul Gortmaker <paul.gortmaker@windriver.com>
Date: Mon, 16 Nov 2009 22:36:35 -0500
Subject: [PATCH 04/80] vbi: intDisable --> irq_disable

for i in `git grep -l intDisable include/ kernel/` ; do echo $i ; mv $i $i~ ; cat $i~ |sed 's/intDisable/irq_disable/g' > $i ; done

Signed-off-by: Paul Gortmaker <paul.gortmaker@windriver.com>
---
 include/vbi/interface.h |    8 ++++----
 include/vbi/vbi.h       |    4 ++--
 kernel/vbi/show.c       |    2 +-
 3 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/include/vbi/interface.h b/include/vbi/interface.h
index 1c62c17..44aae33 100644
--- a/include/vbi/interface.h
+++ b/include/vbi/interface.h
@@ -308,8 +308,8 @@ struct vb_control
 	struct vb_arch_ctrl_regs vbControlRegs;
 #endif
 
-	uint32_t intDisable;		/*  0: -1 => Disable all interrupts */
-	uint32_t newIntDisable;		/*  1: New value for ->intDisable */
+	uint32_t irq_disable;		/*  0: -1 => Disable all interrupts */
+	uint32_t newIntDisable;		/*  1: New value for ->irq_disable */
 
 					/*  2: VMMU 0 table for ctxt switch */
 	VB_ALIGN_FIELD_64 (void *vmmu0, pad1);
@@ -412,8 +412,8 @@ struct vb_status {
 	 * When the hypervisor interrupts a VB, it saves the following
 	 * information here for use by the virtual board.
 	 *
-	 * value of control->intDisable at time of the interrupt.
-	 * control->intDisable is set to -1 by WRHV at the time of delivery of
+	 * value of control->irq_disable at time of the interrupt.
+	 * control->irq_disable is set to -1 by WRHV at the time of delivery of
 	 * the interrupt
 	 */
 	uint32_t oldIntDisable;
diff --git a/include/vbi/vbi.h b/include/vbi/vbi.h
index 38ff3e4..b0b567a 100644
--- a/include/vbi/vbi.h
+++ b/include/vbi/vbi.h
@@ -46,10 +46,10 @@ various data structures.
 #define VBI_CNTRL_ADDR_GET()        (wrhvVbControl)
 
 #define VBI_INT_STATE_GET()             \
-        ((VBI_CNTRL_ADDR_GET()->intDisable) == -1 ? TRUE: FALSE)
+        ((VBI_CNTRL_ADDR_GET()->irq_disable) == -1 ? TRUE: FALSE)
 
 #define VBI_INT_STATE_SET(value)        \
-        ((VBI_CNTRL_ADDR_GET())->intDisable = value)
+        ((VBI_CNTRL_ADDR_GET())->irq_disable = value)
 
 
 #define VBI_INT_PENDING_SET(value)        \
diff --git a/kernel/vbi/show.c b/kernel/vbi/show.c
index 74764ef..b6d5139 100644
--- a/kernel/vbi/show.c
+++ b/kernel/vbi/show.c
@@ -135,7 +135,7 @@ void vbiControlShow(struct vb_control *p)
 
 	printk("VB control data: 0x%p\n", p);
 
-	printk("  Disable interrupts:  0x%08x\n", p->intDisable);
+	printk("  Disable interrupts:  0x%08x\n", p->irq_disable);
 
 #ifdef _WRHV_ARCH_HAS_STATUS_REGS
 	vbiCtrlRegsDisplay();
-- 
