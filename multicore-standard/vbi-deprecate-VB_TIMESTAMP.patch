-typedef uint64_t VB_TIMESTAMP;
 #endif
 
 /* Virtual Interrupt Controller definitions */
@@ -415,7 +413,7 @@ struct vb_status {
 	uint32_t reserved1;
 
 	/* Timestamp when last interrupt was delivered */
