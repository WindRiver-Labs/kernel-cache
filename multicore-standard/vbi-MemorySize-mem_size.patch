From 6471eac8077a74d56fedc0068ac1309db5ba1b7e Mon Sep 17 00:00:00 2001
From: Paul Gortmaker <paul.gortmaker@windriver.com>
Date: Thu, 29 Oct 2009 23:46:11 -0400
Subject: [PATCH 18/26] vbi: MemorySize -> mem_size

Signed-off-by: Paul Gortmaker <paul.gortmaker@windriver.com>
---
 arch/powerpc/kernel/vbi/wrhv.c |    2 +-
 arch/x86/kernel/vbi/wrhv.c     |    2 +-
 include/vbi/interface.h        |    2 +-
 include/vbi/vbi.h              |    2 +-
 kernel/vbi/show.c              |    2 +-
 5 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/arch/powerpc/kernel/vbi/wrhv.c b/arch/powerpc/kernel/vbi/wrhv.c
index 8a6a997..09a9c98 100644
--- a/arch/powerpc/kernel/vbi/wrhv.c
+++ b/arch/powerpc/kernel/vbi/wrhv.c
@@ -208,7 +208,7 @@ void wrhv_mapping(void)
 
 unsigned long __init wrhv_find_end_of_memory(void)
 {
-	return wrhvConfig->physicalMemorySize;
+	return wrhvConfig->phys_mem_size;
 }
 
 int wrhv_early_init_dt_scan_memory(unsigned long node,
diff --git a/arch/x86/kernel/vbi/wrhv.c b/arch/x86/kernel/vbi/wrhv.c
index 429473e..f95f07c 100644
--- a/arch/x86/kernel/vbi/wrhv.c
+++ b/arch/x86/kernel/vbi/wrhv.c
@@ -412,7 +412,7 @@ void wrhv_boot_config(void)
 	   actual hypervisor config/status/control space yet */
         snprintf(boot_command_line, COMMAND_LINE_SIZE,
 		"retain_initrd pci=conf1 idle=wrhv mem=nopentium serialnumber nolapic nomce nosep memmap=exactmap memmap=%dK@0 %s",
-		wrhvConfig->physicalMemorySize / 1024, wrhvConfig->bootLine);
+		wrhvConfig->phys_mem_size / 1024, wrhvConfig->bootLine);
 #endif
 }
 
diff --git a/include/vbi/interface.h b/include/vbi/interface.h
index bc1c776..2294951 100644
--- a/include/vbi/interface.h
+++ b/include/vbi/interface.h
@@ -543,7 +543,7 @@ struct vb_config
 	 *  main memory configuration settings
 	 */
 
-	uint32_t physicalMemorySize;	/* the vbPhysical size of RAM */
+	uint32_t phys_mem_size;	/* the vbPhysical size of RAM */
 	uint32_t memoryAliasAddress;	/* address to which memory is aliased */
 	uint32_t memoryAliasSize;	/* size of aliases memory */
 	uint32_t numMem;		/* number of memory regions */
diff --git a/include/vbi/vbi.h b/include/vbi/vbi.h
index 0c6f7b2..2947037 100644
--- a/include/vbi/vbi.h
+++ b/include/vbi/vbi.h
@@ -415,7 +415,7 @@ various data structures.
  *
  */
 #define VBI_MEM_SIZE_GET()			    \
-        (VBI_CONFIG_ADDR_GET()->physicalMemorySize)
+        (VBI_CONFIG_ADDR_GET()->phys_mem_size)
 
 /*
  * VBI_MEM_ALIAS_SIZE_GET - Get the size of aliased ram
diff --git a/kernel/vbi/show.c b/kernel/vbi/show.c
index eb0b9cf..41c5ca4 100644
--- a/kernel/vbi/show.c
+++ b/kernel/vbi/show.c
@@ -175,7 +175,7 @@ void vbiConfigShow(struct vb_config *p)
 
 	printk("Board Name:         %s\n", p->board_name);
 	printk("Board Type:         %d\n", p->board_type);
-	printk("Physical Memory:    %d\n", p->physicalMemorySize);
+	printk("Physical Memory:    %d\n", p->phys_mem_size);
 	printk("Memory Alias Addr:  0x%08x\n", p->memoryAliasAddress);
 	printk("Memory Alias Size:  %u\n", p->memoryAliasSize);
 	printk("Reset PC:           0x%08x\n", p->resetPC);
