From 3b30426a7830f395b058d04d8a272d3c35f44af5 Mon Sep 17 00:00:00 2001
From: Paul Gortmaker <paul.gortmaker@windriver.com>
Date: Tue, 17 Nov 2009 00:09:03 -0500
Subject: [PATCH 11/80] vbi: intDirection --> irq_dir

for i in `git grep -l intDirection` ; do echo $i ; mv $i $i~ ; cat $i~ |sed 's/intDirection/irq_dir/g' > $i ; done

Signed-off-by: Paul Gortmaker <paul.gortmaker@windriver.com>
---
 include/vbi/interface.h |    4 ++--
 include/vbi/interrupt.h |    2 +-
 kernel/vbi/interrupt.c  |    6 +++---
 kernel/vbi/show.c       |    2 +-
 4 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/include/vbi/interface.h b/include/vbi/interface.h
index ad8f49e..c6f9aeb 100644
--- a/include/vbi/interface.h
+++ b/include/vbi/interface.h
@@ -213,7 +213,7 @@ identity mapped.
 #define VB_CONFIG_INTINFO		((2+4) * 8)
 #endif /* __VBI_BYTE_ORDER */
 
-/* Defines for vbIntInfo intDirection field */
+/* Defines for vbIntInfo irq_dir field */
 #define VB_INPUT_INT	1
 #define VB_OUTPUT_INT	2
 
@@ -440,7 +440,7 @@ struct vb_status {
 struct vb_int_info
 {
 	char irq_name[VB_NAMELEN];/* the name of this interrupt */
-	uint16_t intDirection;	/* interrupt direction: INPUT_INT, OUTPUT_INT */
+	uint16_t irq_dir;	/* interrupt direction: INPUT_INT, OUTPUT_INT */
 	uint16_t irq_num;	/* the local VB interrupt number */
 	uint32_t irq_core;	/* the receiving core for this incomming int */
 };
diff --git a/include/vbi/interrupt.h b/include/vbi/interrupt.h
index 99cc745..bcf19c7 100644
--- a/include/vbi/interrupt.h
+++ b/include/vbi/interrupt.h
@@ -26,7 +26,7 @@ interrupts configuration data.
 
 #ifndef	_ASMLANGUAGE
 
-extern vbiIrq_t vbiIntVecFind (char * irq_name, int32_t intDirection);
+extern vbiIrq_t vbiIntVecFind (char * irq_name, int32_t irq_dir);
 
 #endif /* _ASMLANGUAGE */
 
diff --git a/kernel/vbi/interrupt.c b/kernel/vbi/interrupt.c
index a6527ff..072268e 100644
--- a/kernel/vbi/interrupt.c
+++ b/kernel/vbi/interrupt.c
@@ -38,12 +38,12 @@
  * This function finds the irq number of a named interrupt from  the virtual
  * board configuration information.
  *
- * The <intDirection> is either input or output. VB_INPUT_INT for input,
+ * The <irq_dir> is either input or output. VB_INPUT_INT for input,
  * VB_OUTPUT_INT for output.
  *
  */
 
-vbiIrq_t vbiIntVecFind(char *irq_name, int32_t intDirection)
+vbiIrq_t vbiIntVecFind(char *irq_name, int32_t irq_dir)
 {
 	struct vb_config *config = VBI_CONFIG_ADDR_GET();
 	struct vb_int_info *info = config->interruptConfiguration;
@@ -51,7 +51,7 @@ vbiIrq_t vbiIntVecFind(char *irq_name, int32_t intDirection)
 	int32_t i;
 
 	for (i = 0; i < num; i++, info++) {
-		if (intDirection != (int32_t)(info->intDirection))
+		if (irq_dir != (int32_t)(info->irq_dir))
 			continue;
 
 		if (!strncmp((char *)irq_name, (char *)info->irq_name,
diff --git a/kernel/vbi/show.c b/kernel/vbi/show.c
index 8d0e103..7d64f33 100644
--- a/kernel/vbi/show.c
+++ b/kernel/vbi/show.c
@@ -96,7 +96,7 @@ static void vbiInterruptsShow(struct vb_config *config)
 	printk("%d interrupt configurations, Config at 0x%p\n", num_int, p);
 
 	for (i = 0; i < num_int; i++, p++) {
-		if (p->intDirection == VB_INPUT_INT)
+		if (p->irq_dir == VB_INPUT_INT)
 			printk("%8s: Dir: In, Vector #: %d, Core: %d\n",
 		            p->irq_name, p->irq_num, p->irq_core);
 		else
