From 528d448a2b20d55eabaa80be424f0dac5bbfad1a Mon Sep 17 00:00:00 2001
From: Liang Li <liang.li@windriver.com>
Date: Fri, 9 Sep 2011 11:19:19 +0800
Subject: [PATCH] wrhv: arm: add VBI syscall numbers

Add VBI syscall numbers to make these three VBI syscalls available
to userspace app/lib

Signed-off-by: Liang Li <liang.li@windriver.com>
---
 arch/arm/include/asm/unistd.h |    6 +++++-
 arch/arm/kernel/calls.S       |    4 ++++
 2 files changed, 9 insertions(+), 1 deletions(-)

diff --git a/arch/arm/include/asm/unistd.h b/arch/arm/include/asm/unistd.h
index 25b9140..4390398 100644
--- a/arch/arm/include/asm/unistd.h
+++ b/arch/arm/include/asm/unistd.h
@@ -398,8 +398,12 @@
 #define __NR_sched_getparam_ex		(__NR_SYSCALL_BASE+369)
 #define __NR_sched_wait_interval	(__NR_SYSCALL_BASE+370)
 #define __NR_setns			(__NR_SYSCALL_BASE+371)
+/* WRHV VBI syscalls */
+#define __NR_vbi_mem				(__NR_SYSCALL_BASE+372)
+#define __NR_vbi_activate_vb		(__NR_SYSCALL_BASE+373)
+#define __NR_vbi_control			(__NR_SYSCALL_BASE+374)
 
-#define __NR_syscall_max 372
+#define __NR_syscall_max 375
 
 /*
  * The following SWIs are ARM private.
diff --git a/arch/arm/kernel/calls.S b/arch/arm/kernel/calls.S
index 911f06a..40aef12 100644
--- a/arch/arm/kernel/calls.S
+++ b/arch/arm/kernel/calls.S
@@ -381,6 +381,10 @@
 		CALL(sys_sched_getparam_ex)
 /* 370 */	CALL(sys_sched_wait_interval)
 		CALL(sys_setns)
+/* 372 */
+		CALL(sys_vbi_mem)
+		CALL(sys_vbi_activate_vb)
+		CALL(sys_vbi_control)
 #ifndef syscalls_counted
 .equ syscalls_padding, ((NR_syscalls + 3) & ~3) - NR_syscalls
 #define syscalls_counted
-- 
