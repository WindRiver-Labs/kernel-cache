 {
 	ssize_t rdval = xtg_sysfs_ioctl(dev, buf, XTG_GET_STREAM_TRANSFERCNT);
 
-	return sprintf(buf, "%d\n", rdval);
+	return snprintf(buf, PAGE_SIZE, "%d\n", rdval);
 }
 
 static ssize_t xtg_set_stream_transfercnt(struct device *dev,
