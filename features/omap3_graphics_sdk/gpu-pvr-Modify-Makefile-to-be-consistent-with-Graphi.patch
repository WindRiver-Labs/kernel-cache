From 3b42a2e8913b67c2e4211c2f690aa3c9fd409b6c Mon Sep 17 00:00:00 2001
From: Hui Wang <Hui.Wang@windriver.com>
Date: Wed, 13 Apr 2011 10:54:33 +0800
Subject: [PATCH 2/4] gpu/pvr: Modify Makefile to be consistent with Graphics_SDK.4.03.00.01

Source codes in the Graphics_SDK need different macros when building,
so changed macros passed to ccflags.

Original Makefile only support drivers to be built as built-in, so
change it to support drivers to be built both as built-in or as
kernel module.

Original Makefile will generate different objs from Graphics_SDK, so
change Makefile to generate the same name modules as Graphics_SDK.

Signed-off-by: Hui Wang <Hui.Wang@windriver.com>
---
 drivers/gpu/pvr/Makefile |   59 +++++++++++++++++++++++++--------------------
 1 files changed, 33 insertions(+), 26 deletions(-)

diff --git a/drivers/gpu/pvr/Makefile b/drivers/gpu/pvr/Makefile
index 3039c15..ad6a246 100644
--- a/drivers/gpu/pvr/Makefile
+++ b/drivers/gpu/pvr/Makefile
@@ -1,9 +1,6 @@
 #
 ccflags-y = -DLINUX -D__linux__ -Idrivers/gpu/pvr \
-	-DANDROID \
-	-DPVR_BUILD_DIR="\"omap_sgx_android\"" \
-	-DSGX_DYNAMIC_TIMING_INFO \
-	-DSYS_CUSTOM_POWERLOCK_WRAP \
+	-DPVR_BUILD_DIR="\"omap_sgx\"" \
 	-DSERVICES4 \
 	-DSUPPORT_SRVINIT \
 	-DSUPPORT_PERCONTEXT_PB \
@@ -13,19 +10,22 @@ ccflags-y = -DLINUX -D__linux__ -Idrivers/gpu/pvr \
 	-DPVR_SECURE_FD_EXPORT \
 	-DLDM_PLATFORM \
 	-DSUPPORT_SGX_HWPERF \
-	-DSUPPORT_MEMINFO_IDS \
-	-DDISPLAY_CONTROLLER=omaplfb \
-	-DSYS_SGX_ACTIVE_POWER_LATENCY_MS=1 \
 	-DPVR_BUILD_DATE="" \
 	-DSUPPORT_SGX \
-	-DCLIENT_DRIVER_DEFAULT_WAIT_RETRIES=50 \
-	-DPVR_LINUX_TIMERS_USING_WORKQUEUES \
-	-DFLIP_TECHNIQUE_OVERLAY \
-	-DPVR_LINUX_USING_WORKQUEUES \
-	-DSUPPORT_ANDROID_PLATFORM \
-	-DPVR_LINUX_MISR_USING_PRIVATE_WORKQUEUE \
-	-DSYS_CUSTOM_POWERLOCK_WRAP \
 	-DSUPPORT_SGX_NEW_STATUS_VALS \
+	-DSUPPORT_OMAP3430_OMAPFB3 \
+	-D_XOPEN_SOURCE=600 \
+	-D_POSIX_C_SOURCE=199309 \
+	-DPVR2D_VALIDATE_INPUT_PARAMS \
+	-DSUPPORT_XWS \
+	-DDISABLE_SGX_PB_GROW_SHRINK \
+	-DSUPPORT_LINUX_X86_WRITECOMBINE \
+	-DSUPPORT_SGX_EVENT_OBJECT \
+	-DUSE_PTHREADS \
+	-DLDM_PLATFORM \
+	-DPVR2D_ALT_2DHW \
+	-DSUPPORT_LINUX_X86_PAT \
+	-DPVR_PDP_LINUX_FB \
 	-DPVRSRV_MODNAME="\"pvrsrvkm"\"
 
 ccflags-$(CONFIG_SGX540) +=  -Idrivers/gpu/pvr/omap4  -Idrivers/gpu/pvr/sgx \
@@ -45,8 +45,6 @@ ccflags-$(CONFIG_SGX_REV121) += -DSGX_CORE_REV=121
 ccflags-$(CONFIG_SGX_530_BUILD_RELEASE) += \
 	-DPVR_BUILD_TYPE="\"release\"" \
 	-DRELEASE \
-	-DSUPPORT_ACTIVE_POWER_MANAGEMENT \
-	-DSGX_EARLYSUSPEND \
 	-DSUPPORT_HW_RECOVERY \
 	-DSUPPORT_SGX_LOW_LATENCY_SCHEDULING
 
@@ -56,8 +54,9 @@ ccflags-$(CONFIG_SGX_530_BUILD_DEBUG) += \
 	-DDEBUG_LINUX_MEM_AREAS \
 	-DDEBUG_LINUX_MMAP_AREAS \
 	-DDEBUG_BRIDGE_KM \
-	-DPVRSRV_USSE_EDM_STATUS_DEBUG \
-	-DPVRSRV_DUMP_MK_TRACE \
+	-DDLL_METRIC=1 \
+	-DSUPPORT_HW_RECOVERY \
+	-DSUPPORT_SGX_LOW_LATENCY_SCHEDULING \
 	-DDEBUG_LOG_PATH_TRUNCATE="\"eurasia_km\""
 
 ccflags-$(CONFIG_SGX_540_BUILD_RELEASE) += \
@@ -77,7 +76,9 @@ ccflags-$(CONFIG_SGX_540_BUILD_DEBUG) += \
 	-DPVRSRV_DUMP_MK_TRACE \
 	-DDEBUG_LOG_PATH_TRUNCATE="\"eurasia_km\""
 
-pvr_common-y := \
+ccflags-y += $(ccflags-m)
+
+pvrsrvkm-y := \
 	osfunc.o \
 	mutils.o \
 	mmap.o \
@@ -110,15 +111,19 @@ pvr_common-y := \
 	mem_debug.o \
 	osfunc_common.o
 
-pvr540-$(CONFIG_SGX540) := \
+ifneq ($(CONFIG_SGX540), )
+pvrsrvkm-y += \
 	omap4/sysconfig.o \
 	omap4/sysutils.o
+endif
 
-pvr530-$(CONFIG_SGX530) := \
+ifneq ($(CONFIG_SGX530), )
+pvrsrvkm-y += \
 	omap3/sysconfig.o \
 	omap3/sysutils.o
+endif
 
-sgx-y :=  \
+pvrsrvkm-y +=  \
 	sgx/bridged_sgx_bridge.o \
 	sgx/sgxinit.o \
 	sgx/sgxpower.o \
@@ -129,6 +134,8 @@ sgx-y :=  \
 	sgx/mmu.o \
 	sgx/pb.o
 
+pvrsrvkm-y += $(pvrsrvkm-m)
+
 sgx_displayclass-y := \
 	display/omap_sgx_displayclass.o \
 	display/omap_display.o
@@ -137,7 +144,7 @@ omaplfb-y := \
 	omaplfb/omaplfb_displayclass.o \
 	omaplfb/omaplfb_linux.o
 
-obj-$(CONFIG_SGX540) := pvr_common.o sgx.o omaplfb.o pvr540.o
-obj-$(CONFIG_SGX530) := pvr_common.o sgx.o omaplfb.o pvr530.o
-obj-$(CONFIG_VIRTUAL_DISPLAY_SUPPORT) := pvr_common.o sgx.o \
-	sgx_displayclass.o pvr540.o
+obj-$(CONFIG_SGX540) := pvrsrvkm.o omaplfb.o
+obj-$(CONFIG_SGX530) := pvrsrvkm.o omaplfb.o
+
+obj-$(CONFIG_VIRTUAL_DISPLAY_SUPPORT) := pvrsrvkm.o sgx_displayclass.o
