+++ b/drivers/staging/fsl_dpa_offload/dts/t4240si-chosen-reass.dtsi
@@ -6,8 +6,8 @@ chosen {
 			cell-index = <0>;
 			compatible = "fsl,fman-extended-args";
 			dma-aid-mode = "port";
