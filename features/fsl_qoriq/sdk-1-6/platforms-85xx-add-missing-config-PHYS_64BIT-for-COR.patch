From e98f389475e20d83f11efb3bbc5cb4ee996b68e4 Mon Sep 17 00:00:00 2001
From: Xulin Sun <xulin.sun@windriver.com>
Date: Fri, 18 Jul 2014 17:08:17 +0800
Subject: [PATCH 1/2] platforms/85xx: add missing config PHYS_64BIT for
 CORENET_GENERIC

Modify the 85xx/kconfig to add the missing configuration PHYS_64BIT
for CORENET_GENERIC, and replace P4080_DS with CORENET_GENERIC for
SGY_CTS1000.

Signed-off-by: Xulin Sun <xulin.sun@windriver.com>
---
 arch/powerpc/platforms/85xx/Kconfig |    3 ++-
 1 files changed, 2 insertions(+), 1 deletions(-)

diff --git a/arch/powerpc/platforms/85xx/Kconfig b/arch/powerpc/platforms/85xx/Kconfig
index e843e35..75ea5d7 100644
--- a/arch/powerpc/platforms/85xx/Kconfig
+++ b/arch/powerpc/platforms/85xx/Kconfig
@@ -238,7 +238,7 @@ config SGY_CTS1000
 	tristate "Servergy CTS-1000 support"
 	select GPIOLIB
 	select OF_GPIO
-	depends on P4080_DS
+	depends on CORENET_GENERIC
 	help
 	  Enable this to support functionality in Servergy's CTS-1000 systems.
 
@@ -264,6 +264,7 @@ config CORENET_GENERIC
 	select DEFAULT_UIMAGE
 	select E500
 	select PPC_E500MC
+	select PHYS_64BIT
 	select SWIOTLB
 	select ARCH_REQUIRE_GPIOLIB
 	select GPIO_MPC8XXX
