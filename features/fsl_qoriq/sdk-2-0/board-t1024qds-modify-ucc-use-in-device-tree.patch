From 88f0487c6aaafb1670e99633ed0a005702e53eb8 Mon Sep 17 00:00:00 2001
From: Zhao Qiang <qiang.zhao@nxp.com>
Date: Thu, 10 Mar 2016 10:15:15 +0800
Subject: [PATCH 1189/1429] board: t1024qds: modify ucc use in device tree

Use hdlc instead of tdm as default, modify port numer for uart.

Signed-off-by: Zhao Qiang <qiang.zhao@nxp.com>
[Original patch taken from QorIQ-SDK-V2.0-20160527-yocto]
Signed-off-by: Yanjiang Jin <yanjiang.jin@windriver.com>
---
 arch/powerpc/boot/dts/fsl/t1024qds.dts |    7 ++++---
 1 files changed, 4 insertions(+), 3 deletions(-)

diff --git a/arch/powerpc/boot/dts/fsl/t1024qds.dts b/arch/powerpc/boot/dts/fsl/t1024qds.dts
index 2392b3c..1e8c965 100644
--- a/arch/powerpc/boot/dts/fsl/t1024qds.dts
+++ b/arch/powerpc/boot/dts/fsl/t1024qds.dts
@@ -81,8 +81,8 @@
 			reg = <0x1000 0x800>;
 		};
 
-		tdma: ucc@2000 {
-			compatible = "fsl,ucc-tdm";
+		ucc_hdlc: ucc@2000 {
+			compatible = "fsl,ucc_hdlc";
 			rx-clock-name = "clk8";
 			tx-clock-name = "clk9";
 			fsl,rx-sync-clock = "rsync_pin";
@@ -93,12 +93,13 @@
 			fsl,tdm-mode = "normal";
 			fsl,tdm-id = <0>;
 			fsl,siram-entry-id = <0>;
+			fsl,tdm-interface;
 		};
 
 		serial: ucc@2200 {
 			device_type = "serial";
 			compatible = "ucc_uart";
-			port-number = <1>;
+			port-number = <0>;
 			rx-clock-name = "brg2";
 			tx-clock-name = "brg2";
 		};
