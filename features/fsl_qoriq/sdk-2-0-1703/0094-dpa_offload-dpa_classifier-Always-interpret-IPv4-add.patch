 					HDR_MANIP_IPV4_DST;
 				hm_node->params.u.hdr.fieldUpdateParams.u.ipv4.
 					dst =
-					pupdate_hm->update_params.update.l3.
-					ipda.addr.ipv4.word;
+					be32_to_cpu(pupdate_hm->update_params.
+					update.l3.ipda.addr.ipv4.word);
 			}
 
