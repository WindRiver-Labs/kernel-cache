+		    };
+		};
+	    };
+	};
+
 	aliases {
 		phy_sgmii_0 = &phy_sgmii_0;
 		phy_sgmii_1 = &phy_sgmii_1;
@@ -61,6 +78,10 @@
 		ranges = <0x00000000 0xf 0xfe000000 0x1000000>;
 		reg = <0xf 0xfe000000 0 0x00001000>;
 
+	        qman: qman@318000 {
