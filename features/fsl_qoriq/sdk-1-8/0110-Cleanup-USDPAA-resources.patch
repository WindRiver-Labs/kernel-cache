-			}
-		} while (ret == 1);
-		if (leaks)
-			pr_crit("USDPAA process leaking %d %s%s\n", leaks,
-				backend->acronym, (leaks > 1) ? "s" : "");
-		backend++;
-	}
-	spin_lock(&mem_lock);
-	list_for_each_entry_safe(map, tmp, &ctx->maps, list) {
-		if (map->frag->has_locking && (map->frag->owner == map)) {
-			map->frag->owner = NULL;
-			wake_up(&map->frag->wq);
