-	if (ret < 0)
-		return ret;
-	i.num = ret;
-	/* Copy the result to user-space */
-	ret = copy_to_user(arg, &i, sizeof(i));
-	if (ret) {
-		backend->release(i.base, i.num);
-		return ret;
-	}
-	/* Assign the allocated range to the FD accounting */
-	dpa_alloc_free(&ctx->ids[i.id_type], i.base, i.num);
