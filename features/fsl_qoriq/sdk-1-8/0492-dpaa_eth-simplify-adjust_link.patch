@@ -521,7 +522,7 @@ int __hot dpa_shared_tx(struct sk_buff *skb, struct net_device *net_dev)
 		}
 
 	} else {
-		if (!priv->mac_dev)
+		if (!priv->mac_dev || priv->peer)
 			fd.cmd |= FM_FD_CMD_DTC;
