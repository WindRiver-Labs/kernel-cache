 enet0: ethernet@b0000 {
+	fsl,pmc-handle = <&etsec1_clk>;
+
 	queue-group@b0000 {
 		fsl,rx-bit-map = <0xff>;
 		fsl,tx-bit-map = <0xff>;
@@ -178,6 +171,8 @@ enet0: ethernet@b0000 {
 
 /include/ "pq3-etsec2-1.dtsi"
 enet1: ethernet@b1000 {
+	fsl,pmc-handle = <&etsec2_clk>;
