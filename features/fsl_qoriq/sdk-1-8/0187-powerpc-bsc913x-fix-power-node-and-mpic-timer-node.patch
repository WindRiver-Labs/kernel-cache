 		fsl,rx-bit-map = <0xff>;
 		fsl,tx-bit-map = <0xff>;
@@ -190,4 +185,6 @@ global-utilities@e0000 {
 		reg = <0xe0000 0x1000>;
 		fsl,has-rstcr;
 	};
+
+/include/ "pq3-power.dtsi"
 };
