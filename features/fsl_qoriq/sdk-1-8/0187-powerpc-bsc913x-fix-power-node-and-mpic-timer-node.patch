@@ -156,19 +156,12 @@ crypto@30000 {
 };
 
 /include/ "pq3-mpic.dtsi"
-
-timer@41100 {
-	compatible = "fsl,mpic-v1.2-msgr", "fsl,mpic-msg";
-	reg = <0x41400 0x200>;
-	interrupts = <
-		0xb0 2
-		0xb1 2
