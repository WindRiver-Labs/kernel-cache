+++ b/drivers/net/ethernet/freescale/fman/src/wrapper/lnxwrp_fm.c
@@ -1166,7 +1166,11 @@ static struct platform_driver fm_driver = {
 	.pm		= FM_PM_OPS,
     },
     .probe          = fm_probe,
+#if defined(CONFIG_KEXEC)
+    .shutdown       = fm_remove,
+#endif
     .remove         = fm_remove
+
 };
 
