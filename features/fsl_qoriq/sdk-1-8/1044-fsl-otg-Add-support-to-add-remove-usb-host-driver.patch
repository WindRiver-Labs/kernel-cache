 #ifdef CONFIG_PM
 
 #ifdef CONFIG_PPC_MPC512x
@@ -533,24 +575,31 @@ static inline int ehci_fsl_mpc512x_drv_resume(struct device *dev)
 }
 #endif /* CONFIG_PPC_MPC512x */
 
