-		append_key(desc, ctx->key_dma + ctx->split_key_pad_len,
-			   ctx->enckeylen, CLASS_1 | KEY_DEST_CLASS_REG);
-	}
+	append_key_aead(desc, ctx, keys_fit_inline);
 	set_jump_tgt_here(desc, key_jump_cmd);
 
