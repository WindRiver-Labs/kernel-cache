@@ -60,6 +65,15 @@ static inline int fsl_svr_is(u32 svr)
 	return (id == svr);
 }
 
+/* Check the SOC design version of this board */
+static inline int fsl_svr_rev_is(u8 maj, u8 min)
+{
+	u32 rev = SVR_REV(mfspr(SPRN_SVR));
+	u32 cmp = (maj << 4) | min;
+
+	return (rev == cmp);
+}
