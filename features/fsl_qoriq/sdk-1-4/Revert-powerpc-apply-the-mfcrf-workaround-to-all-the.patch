From 74f4c7c952572597a3df719ccbc4735df50cb7e5 Mon Sep 17 00:00:00 2001
From: Bin Jiang <bin.jiang@windriver.com>
Date: Wed, 9 Oct 2013 13:59:55 +0800
Subject: [PATCH 7/7] Revert "powerpc: apply the mfcrf workaround to all the
 embedded ppc64 cores"

It is no useful since it is fixed in toolchain.

Signed-off-by: Bin Jiang <bin.jiang@windriver.com>
---
 arch/powerpc/Makefile               | 1 -
 arch/powerpc/platforms/85xx/Kconfig | 4 ----
 2 files changed, 5 deletions(-)

diff --git a/arch/powerpc/Makefile b/arch/powerpc/Makefile
index 201ecaf..d055ff7 100644
--- a/arch/powerpc/Makefile
+++ b/arch/powerpc/Makefile
@@ -143,7 +143,6 @@ endif
 cpu-as-$(CONFIG_4xx)		+= -Wa,-m405
 cpu-as-$(CONFIG_ALTIVEC)	+= -Wa,-maltivec
 cpu-as-$(CONFIG_E500)		+= -Wa,-me500
-cpu-as-$(CONFIG_WORKAROUND_BOOK3E_64_MFCR) += -mno-mfcrf
 cpu-as-$(CONFIG_E200)		+= -Wa,-me200
 
 KBUILD_AFLAGS += $(cpu-as-y)
diff --git a/arch/powerpc/platforms/85xx/Kconfig b/arch/powerpc/platforms/85xx/Kconfig
index 4256ac4..12205ca 100644
--- a/arch/powerpc/platforms/85xx/Kconfig
+++ b/arch/powerpc/platforms/85xx/Kconfig
@@ -304,10 +304,6 @@ config P5020_DS
 	help
 	  This option enables support for the P5020 DS board
 
-config WORKAROUND_BOOK3E_64_MFCR
-	def_bool y
-	depends on PPC_BOOK3E_64
-
 config P5040_DS
 	bool "Freescale P5040 DS"
 	select DEFAULT_UIMAGE
