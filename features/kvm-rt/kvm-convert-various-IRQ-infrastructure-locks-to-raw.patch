 				reassert = true;
 			dev->host_irq_disabled = reassert;
 		}
-		spin_unlock_irq(&dev->intx_lock);
+		raw_spin_unlock_irq(&dev->intx_lock);
 
 		if (reassert)
 			kvm_set_irq(dev->kvm, dev->irq_source_id,
