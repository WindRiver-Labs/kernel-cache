From 8243df48ed47060ad352e57ad004c962e311a7fe Mon Sep 17 00:00:00 2001
From: Robert Richter <rrichter@cavium.com>
Date: Fri, 18 Jul 2014 18:05:50 +0200
Subject: [PATCH 421/430] pci, thunder: Enable Cavium Thunder PCIe host
 controller

This commit comes from:
  git://git.kernel.org/pub/scm/linux/kernel/git/rric/linux.git

Enable Cavium Thunder PCIe host controller driver.

This also implicitly enables the PCI subsystem and the MSI and IOV
feature in the arm64 defconfig.

Signed-off-by: Robert Richter <rrichter@cavium.com>
(cherry picked from commit c66ebf97e8020a85a9fc4671871b228c88c8450a)
Signed-off-by: Zumeng Chen <zumeng.chen@windriver.com>
---
 arch/arm64/Kconfig       |    2 ++
 drivers/pci/host/Kconfig |    2 ++
 2 files changed, 4 insertions(+), 0 deletions(-)

diff --git a/arch/arm64/Kconfig b/arch/arm64/Kconfig
index 782b61a..64d3f10 100644
--- a/arch/arm64/Kconfig
+++ b/arch/arm64/Kconfig
@@ -138,6 +138,8 @@ config ARCH_THUNDER
 	bool "Cavium Inc. Thunder SoC Family"
 	help
 	  This enables support for Cavium's Thunder Family of SoCs.
+	select PCI
+	select PCI_THUNDER
 
 config ARCH_VEXPRESS
 	bool "ARMv8 software model (Versatile Express)"
diff --git a/drivers/pci/host/Kconfig b/drivers/pci/host/Kconfig
index 41a10a2..1526bd8 100644
--- a/drivers/pci/host/Kconfig
+++ b/drivers/pci/host/Kconfig
@@ -43,6 +43,8 @@ config PCI_HOST_GENERIC
 config PCI_THUNDER
 	bool "Thunder PCIe controller"
 	depends on ARCH_THUNDER
+	select PCI_MSI
+	select PCI_IOV
 	help
 	  Say Y here if you want internal PCI support on Thunder SoC.
 	  There are 4 internal PCI controllers available.
