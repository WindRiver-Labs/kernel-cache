Subject: [PATCH] patch schedule-tail-balance-disable-irqs.patch

---
 kernel/sched_rt.c |    4 ++--
 1 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/kernel/sched_rt.c b/kernel/sched_rt.c
index 375be71..a402cd8 100644
--- a/kernel/sched_rt.c
+++ b/kernel/sched_rt.c
@@ -1278,10 +1278,10 @@ static void post_schedule_rt(struct rq *rq)
 	 * first via finish_lock_switch and then reaquire it here.
 	 */
 	if (unlikely(rq->rt.overloaded)) {
-		spin_lock_irq(&rq->lock);
+		spin_lock(&rq->lock);
 		push_rt_tasks(rq);
 		schedstat_inc(rq, rto_schedule_tail);
-		spin_unlock_irq(&rq->lock);
+		spin_unlock(&rq->lock);
 	}
 }
 
