From 93f4114adad2180e19fe0e7294c845ddcc13dd65 Mon Sep 17 00:00:00 2001
From: Virendra Pathak <vpathak@broadcom.com>
Date: Fri, 20 Sep 2013 17:07:58 +0530
Subject: [PATCH 0147/1532] dtre: enabling NLM_ADMA option in mips netlogic
 Kconfig

[This has been moved to drivers/dma]
[Based on SDK 3.2]
Signed-off-by: Quanyang Wang <quanyang.wang@windriver.com>
---
 drivers/dma/Kconfig | 8 ++++++++
 1 file changed, 8 insertions(+)

diff --git a/drivers/dma/Kconfig b/drivers/dma/Kconfig
index a7687b2..f1f6739 100644
--- a/drivers/dma/Kconfig
+++ b/drivers/dma/Kconfig
@@ -323,6 +323,14 @@ config KEYSTONE_UDMA
 	  Simple user mode DMA client with zero copy semantics.  Say N unless
 	  you really know what you're doing.
 
+config NLM_ADMA
+	bool "NLM_ADMA support"
+	depends on CPU_XLP
+	select DMA_ENGINE
+	select ASYNC_TX_ENABLE_CHANNEL_SWITCH
+	help
+		Enable support for Netlogic DMA engine on XLP MIPS SoC
+
 config DMA_ENGINE
 	bool
 
