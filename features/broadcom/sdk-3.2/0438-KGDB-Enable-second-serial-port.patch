From 21f8be12a2c280c3d123349aeaa2040b4d707145 Mon Sep 17 00:00:00 2001
From: Anurag <anurag.gopinath@broadcom.com>
Date: Tue, 12 Nov 2013 15:16:22 +0530
Subject: [PATCH 0438/1532] KGDB : Enable second serial port

Enable second serial port for XLP9XX for KGDB
[Based on SDK 3.2]
Signed-off-by: Quanyang Wang <quanyang.wang@windriver.com>
---
 arch/mips/boot/dts/xlp9xx-linux-tmpl.dts | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/mips/boot/dts/xlp9xx-linux-tmpl.dts b/arch/mips/boot/dts/xlp9xx-linux-tmpl.dts
index f2cbb1c..30a3fc1 100644
--- a/arch/mips/boot/dts/xlp9xx-linux-tmpl.dts
+++ b/arch/mips/boot/dts/xlp9xx-linux-tmpl.dts
@@ -32,6 +32,16 @@
 			interrupt-parent = <&pic>;
 			interrupts = <17>;
 		};
+		serial1: serial@31000 {
+			device_type = "serial";
+			compatible = "ns16550";
+			reg = <0 0x113100 0xa00>;
+			reg-shift = <2>;
+			reg-io-width = <4>;
+			clock-frequency = <125000000>;
+			interrupt-parent = <&pic>;
+			interrupts = <18>;
+		};
 		pic: pic@11000 {
 			interrupt-controller;
 			#address-cells = <0>;
