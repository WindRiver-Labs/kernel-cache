From: Prasad Boddupalli <pboddupalli@netlogicmicro.com>
Date: Wed, 18 Aug 2010 15:27:54 -0700
Subject: [PATCH 0647/1532] changes to be in sync with sysconfig-xen.dts file

[Based on SDK 3.2]
Signed-off-by: Quanyang Wang <quanyang.wang@windriver.com>
---
 dts/netos.dts | 12 ++++++++----
 1 file changed, 8 insertions(+), 4 deletions(-)

diff --git a/dts/netos.dts b/dts/netos.dts
index 12173d0..2a359a4 100644
--- a/dts/netos.dts
+++ b/dts/netos.dts
@@ -14,7 +14,7 @@
 		hypervisor-name = "Xen";
 		cpu_possible_map = <0xff>;
 		is_dom0_hvm = <0>;
-		bootargs = "dom0_loadaddr=0x09000000 dom0_cpumask=0x01 -- ";
+		bootargs = "dom0_loadaddr=0x09000000 dom0_cpumask=0x03 -- ";
 	};
 
 	doms {
@@ -25,19 +25,23 @@
 			os = "netos";
 
 			heap-size = <0x0 0x4000000>; // 64M
-			shared-mem = <0x0 0x80000000 0x0 0x20000000>; //512M @ 2GB
+			shared-mem = <0x0 0x40000000 0x0 0x08000000>; // 128M @ 1GB
 
 			#address-cells = <1>;
 			#size-cells = <1>;
 
+			app-bootcmd = "ampload";
+			app-loadaddr = "0x60000000";
+
 			cpu {
-				onlinemask = <0x01>;
+				onlinemask = <0x03>;
 			};
 			uart {
 				id = <0>;
+				sharedcfg = <0x1f000000>;
 			};
 			memory {
-				reg = <0x30000000 0x10000000>;  // 256M @ 768M
+				reg = <0x30000000 0x10000000>;  // 128M @ 768M
 			};
 		};
 	};
