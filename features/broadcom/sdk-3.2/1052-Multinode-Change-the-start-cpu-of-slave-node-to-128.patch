+						right_shift_int_array(cpu_mask, node * num_cpus_per_node, num_cpus_per_node);
+		 }
 		sprintf(dom_node_str, "/doms/dom@%d/cpu", domid);
 		nodeoffset = fdt_path_offset(fdt, dom_node_str);
 		if (nodeoffset >= 0) {
