From c44c53991f21f0e1259ec8d021bc2edaefcecf82 Mon Sep 17 00:00:00 2001
From: Siva Krishna Gudivada <sivag@broadcom.com>
Date: Wed, 30 Jul 2014 16:45:15 +0530
Subject: [PATCH 0569/1532] Snort: Changed linux memory range

[Based on SDK 3.2]
Signed-off-by: Quanyang Wang <quanyang.wang@windriver.com>
---
 arch/mips/boot/dts/xlp2xx-helinux-snort.dts | 3 ++-
 arch/mips/boot/dts/xlp5xx-helinux-snort.dts | 9 ++++-----
 2 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/arch/mips/boot/dts/xlp2xx-helinux-snort.dts b/arch/mips/boot/dts/xlp2xx-helinux-snort.dts
index 72404dc..0d0d6f6 100644
--- a/arch/mips/boot/dts/xlp2xx-helinux-snort.dts
+++ b/arch/mips/boot/dts/xlp2xx-helinux-snort.dts
@@ -12,7 +12,8 @@
         memory {
                 device_type = "memory";
                 reg =  <0 0x00000000 0 0x0B000000   
-                        0x0 0x80000000 0x0 0xE2F80000>;
+                        0x0 0x30000000 0x0 0x90000000    /*   2.3G768M    */
+                        0x0 0xe0000000 0x0 0x20000000>;  /*   512M@3584M      */
         };
 
 	/* memory range for HEv2 pkt mem. Only one contig memory per node supported */
diff --git a/arch/mips/boot/dts/xlp5xx-helinux-snort.dts b/arch/mips/boot/dts/xlp5xx-helinux-snort.dts
index b0fd817..6b06bf1 100644
--- a/arch/mips/boot/dts/xlp5xx-helinux-snort.dts
+++ b/arch/mips/boot/dts/xlp5xx-helinux-snort.dts
@@ -1,10 +1,10 @@
-/* XLP9XX Device Tree Source
+/* XLP5XX Device Tree Source
  *
  */
 
 /dts-v1/;
 / {
-	model = "netlogic,XLP-EVP";
+	model = "netlogic,XLP-RVP";
         compatible = "netlogic,xlp";
         #address-cells = <2>;
         #size-cells = <2>;
@@ -12,9 +12,8 @@
         memory {
                 device_type = "memory";
                 reg =  <0 0x00000000 0 0x0B000000
-                        0x0 0x40000000        0x1 0xc0000000>;  /*   4096M - 4096+6144M */
- 
-                       // 0x0 0xe0000000 0x1 0xc5f00000>; // 7263M@3584M
+                        0x0 0x30000000 0x0 0x90000000    /*   2.3G@768M    */
+                        0x0 0xe0000000 0x1 0x00000000>;  /*   4G@3584M      */
         };
 
 	/* memory range for HEv2 pkt mem. Only one contig memory per node supported */
