From e63d0a8e2ffb9df0c6986114912ec79cac998d04 Mon Sep 17 00:00:00 2001
From: Shengjiu Wang <shengjiu.wang@freescale.com>
Date: Tue, 16 Sep 2014 14:14:52 +0800
Subject: [PATCH 0192/1594] ENGR00331085-7: ARM: dts: imx6sx: Add SSI<->WM8962
 audio support for imx6sx-sdb

commit 87b3b751df198619c8524a2691f4fb25628804f8 from
git://git.freescale.com/imx/linux-2.6-imx.git

Append audio nodes to the devicetree to add audio support for imx6sx-sdb with
Wolfson WM8962 CODEC.

Signed-off-by: Shengjiu Wang <shengjiu.wang@freescale.com>
---
 arch/arm/boot/dts/imx6sx-sdb.dtsi |    6 +++++-
 1 files changed, 5 insertions(+), 1 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx-sdb.dtsi b/arch/arm/boot/dts/imx6sx-sdb.dtsi
index 2c33a5c..0d86d78 100644
--- a/arch/arm/boot/dts/imx6sx-sdb.dtsi
+++ b/arch/arm/boot/dts/imx6sx-sdb.dtsi
@@ -154,9 +154,10 @@
 	};
 
 	sound {
-		compatible = "fsl,imx6sx-sdb-wm8962", "fsl,imx-audio-wm8962";
+		compatible = "fsl,imx6sx-sdb-wm8962", "fsl,imx6q-sabresd-wm8962", "fsl,imx-audio-wm8962";
 		model = "wm8962-audio";
 		ssi-controller = <&ssi2>;
+		cpu-dai = <&ssi2>;
 		audio-codec = <&codec>;
 		audio-routing =
 			"Headphone Jack", "HPOUTL",
@@ -167,6 +168,7 @@
 			"IN3R", "AMIC";
 		mux-int-port = <2>;
 		mux-ext-port = <6>;
+		hp-det-gpios = <&gpio1 17 1>;
 	};
 };
 
@@ -224,6 +226,7 @@
 		PLLVDD-supply = <&vgen4_reg>;
 		SPKVDD1-supply = <&reg_psu_5v>;
 		SPKVDD2-supply = <&reg_psu_5v>;
+		amic-mono;
 	};
 };
 
@@ -432,6 +435,7 @@
 			fsl,pins = <
 				MX6SX_PAD_SD1_DATA0__GPIO6_IO_2 0x17059
 				MX6SX_PAD_SD1_DATA3__GPIO6_IO_5 0xb000
+				MX6SX_PAD_CSI_DATA03__GPIO1_IO_17 0x17059
 			>;
 		};
 
