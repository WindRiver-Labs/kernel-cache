 /*
@@ -557,6 +557,8 @@ enum {
 	HDMI_IH_PHY_STAT0_RX_SENSE0 = 0x4,
 	HDMI_IH_PHY_STAT0_TX_PHY_LOCK = 0x2,
 	HDMI_IH_PHY_STAT0_HPD = 0x1,
