From a1512413345d86020c6735b26a2650b2b1b745e9 Mon Sep 17 00:00:00 2001
From: Han Xu <b45815@freescale.com>
Date: Thu, 2 Apr 2015 14:58:29 -0500
Subject: [PATCH 0571/1594] MLK-10565-1: ARM:dts: new dts for QSPI on i.MX7D
 SDB

commit 0a8d197aab5ef40f27983060bf5dd03d36bf7a89 from
git://git.freescale.com/imx/linux-2.6-imx.git

Add a new dts file for QSPI on i.MX7D SDB, also changed dtb file order
to alphabetical order.

Signed-off-by: Han Xu <b45815@freescale.com>
---
 arch/arm/boot/dts/Makefile           |    5 ++-
 arch/arm/boot/dts/imx7d-sdb-qspi.dts |   44 ++++++++++++++++++++++++++++++++++
 2 files changed, 47 insertions(+), 2 deletions(-)
 create mode 100644 arch/arm/boot/dts/imx7d-sdb-qspi.dts

diff --git a/arch/arm/boot/dts/Makefile b/arch/arm/boot/dts/Makefile
index 2c3ba91..eb01649 100644
--- a/arch/arm/boot/dts/Makefile
+++ b/arch/arm/boot/dts/Makefile
@@ -368,9 +368,10 @@ dtb-$(CONFIG_ARCH_MXC) += \
 	imx7d-19x19-arm2-csi.dtb \
 	imx7d-sdb.dtb \
 	imx7d-sdb-enet.dtb \
-	imx7d-sdb-gpmi-weim.dtb \
 	imx7d-sdb-epdc.dtb \
-	imx7d-sdb-hdmi.dtb
+	imx7d-sdb-gpmi-weim.dtb \
+	imx7d-sdb-hdmi.dtb \
+	imx7d-sdb-qspi.dtb
 dtb-$(CONFIG_ARCH_MXS) += \
 	imx23-evk.dtb \
 	imx23-olinuxino.dtb \
diff --git a/arch/arm/boot/dts/imx7d-sdb-qspi.dts b/arch/arm/boot/dts/imx7d-sdb-qspi.dts
new file mode 100644
index 0000000..83b0401
--- /dev/null
+++ b/arch/arm/boot/dts/imx7d-sdb-qspi.dts
@@ -0,0 +1,44 @@
+/*
+ * Copyright (C) 2015 Freescale Semiconductor, Inc.
+ *
+ * This program is free software; you can redistribute it and/or modify
+ * it under the terms of the GNU General Public License version 2 as
+ * published by the Free Software Foundation.
+ */
+
+#include "imx7d-sdb.dts"
+
+/* disable epdc, conflict with qspi */
+&epdc {
+        status = "disabled";
+};
+
+&iomuxc {
+	qspi1 {
+		pinctrl_qspi1_1: qspi1grp_1 {
+			fsl,pins = <
+				MX7D_PAD_EPDC_DATA00__QSPI_A_DATA0 0x51
+				MX7D_PAD_EPDC_DATA01__QSPI_A_DATA1 0x51
+				MX7D_PAD_EPDC_DATA02__QSPI_A_DATA2 0x51
+				MX7D_PAD_EPDC_DATA03__QSPI_A_DATA3 0x51
+				MX7D_PAD_EPDC_DATA05__QSPI_A_SCLK 0x51
+				MX7D_PAD_EPDC_DATA06__QSPI_A_SS0_B 0x51
+			>;
+		};
+	};
+};
+
+&qspi1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_qspi1_1>;
+	status = "okay";
+	ddrsmp=<0>;
+
+	flash0: mx25l51245g@0 {
+		#address-cells = <1>;
+		#size-cells = <1>;
+		compatible = "macronix,mx25l51245g";
+		spi-max-frequency = <29000000>;
+		reg = <0>;
+	};
+};
