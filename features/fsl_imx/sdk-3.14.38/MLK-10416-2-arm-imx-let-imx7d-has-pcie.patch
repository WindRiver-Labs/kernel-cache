Subject: [PATCH 0618/1594] MLK-10416-2 arm: imx: let imx7d has pcie

commit 47461a3dfa5589200ebff8a2aba94da8d48b9f8e from
git://git.freescale.com/imx/linux-2.6-imx.git

config the imx7d pcie

Signed-off-by: Richard Zhu <Richard.Zhu@freescale.com>
---
 arch/arm/mach-imx/Kconfig |    4 ++++
 1 files changed, 4 insertions(+), 0 deletions(-)

diff --git a/arch/arm/mach-imx/Kconfig b/arch/arm/mach-imx/Kconfig
index 5b0fd71..7ced6cf 100644
--- a/arch/arm/mach-imx/Kconfig
+++ b/arch/arm/mach-imx/Kconfig
@@ -594,6 +594,8 @@ config SOC_IMX6SX
 	select PINCTRL_IMX6SX
 	select HAVE_IMX_AMP
 	select HAVE_IMX_MCC
+	select MIGHT_HAVE_PCI
+	select PCI_DOMAINS if PCI
 	select SOC_IMX6
 
 	help
@@ -620,6 +622,8 @@ config SOC_IMX7
 
 config SOC_IMX7D
 	bool "i.MX7 Dual support"
+	select MIGHT_HAVE_PCI
+	select PCI_DOMAINS if PCI
 	select SOC_IMX7
 	select PINCTRL_IMX7D
 
