From 36b5e9b5d7a238b320e1d23986d98be1a4f187b9 Mon Sep 17 00:00:00 2001
From: Peng Fan <Peng.Fan@freescale.com>
Date: Fri, 29 May 2015 13:59:02 +0800
Subject: [PATCH 1144/1594] MLK-10979-2 imx: dts: mx7d add ocotp fuse node

commit 4417307bba3de158687af023f298816f841840b3 from
git://git.freescale.com/imx/linux-2.6-imx.git

Add ocotp fuse node, and change clk from dummy to IMX7D_OCOTP_CLK

Signed-off-by: Peng Fan <Peng.Fan@freescale.com>
---
 arch/arm/boot/dts/imx7d.dtsi |    8 +++++++-
 1 files changed, 7 insertions(+), 1 deletions(-)

diff --git a/arch/arm/boot/dts/imx7d.dtsi b/arch/arm/boot/dts/imx7d.dtsi
index bbf8a17..cb4cdc9 100644
--- a/arch/arm/boot/dts/imx7d.dtsi
+++ b/arch/arm/boot/dts/imx7d.dtsi
@@ -567,7 +567,13 @@
 			ocotp: ocotp-ctrl@30350000 {
 				compatible = "syscon";
 				reg = <0x30350000 0x10000>;
-				clocks = <&clks IMX7D_CLK_DUMMY>;
+				clocks = <&clks IMX7D_OCOTP_CLK>;
+			};
+
+			ocotp-fuse@30350000 {
+				compatible = "fsl,imx7d-ocotp";
+				reg = <0x30350000 0x10000>;
+				clocks = <&clks IMX7D_OCOTP_CLK>;
 			};
 
 			anatop: anatop@30360000 {
