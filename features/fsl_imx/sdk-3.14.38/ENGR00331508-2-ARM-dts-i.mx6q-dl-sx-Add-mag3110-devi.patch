From 3188e8dee270d36e34ecf8623aaeb44988981c71 Mon Sep 17 00:00:00 2001
From: Luwei Zhou <b45643@freescale.com>
Date: Tue, 16 Sep 2014 13:41:15 +0800
Subject: [PATCH 0164/1594] ENGR00331508-2 ARM: dts: i.mx6q/dl/sx: Add mag3110
 device tree support.

commit 52e1664302e2714f00c91afaa4e46b0c34477f60 from
git://git.freescale.com/imx/linux-2.6-imx.git

Add mag3110 sensor device tree support on i.MX6Q/DL/SX platform.

Signed-off-by: Luwei Zhou <b45643@freescale.com>
---
 arch/arm/boot/dts/imx6qdl-sabreauto.dtsi |    9 +++++++++
 arch/arm/boot/dts/imx6qdl-sabresd.dtsi   |   11 +++++++++++
 arch/arm/boot/dts/imx6sx-sdb.dtsi        |   10 ++++++++++
 3 files changed, 30 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
index a48cda4..a29fa5d 100644
--- a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
@@ -248,6 +248,14 @@
 		interrupts = <31 8>;
 		interrupt-route = <1>;
 	};
+
+	mag3110@0e {
+		compatible = "fsl,mag3110";
+		reg = <0x0e>;
+		position = <2>;
+		interrupt-parent = <&gpio2>;
+		interrupts = <29 1>;
+	};
 };
 
 &mlb {
@@ -269,6 +277,7 @@
 				MX6QDL_PAD_EIM_A24__GPIO5_IO04   0x80000000
 				MX6QDL_PAD_SD2_DAT0__GPIO1_IO15  0x80000000
 				MX6QDL_PAD_EIM_BCLK__GPIO6_IO31 0x80000000
+				MX6QDL_PAD_EIM_EB1__GPIO2_IO29	0x80000000
 			>;
 		};
 
diff --git a/arch/arm/boot/dts/imx6qdl-sabresd.dtsi b/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
index 61c3254..5d44eb4 100644
--- a/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
@@ -438,6 +438,16 @@
 		interrupts = <7 2>;
 		wakeup-gpios = <&gpio6 7 0>;
 	};
+
+	mag3110@0e {
+		compatible = "fsl,mag3110";
+		reg = <0x0e>;
+		position = <2>;
+		vdd-supply = <&reg_sensor>;
+		vddio-supply = <&reg_sensor>;
+		interrupt-parent = <&gpio3>;
+		interrupts = <16 1>;
+	};
 };
 
 &iomuxc {
@@ -463,6 +473,7 @@
 				MX6QDL_PAD_EIM_D23__GPIO3_IO23 0x1b0b0
 				MX6QDL_PAD_EIM_EB3__GPIO2_IO31 0x1b0b0
 				MX6QDL_PAD_SD1_CMD__GPIO1_IO18 0x1b0b0
+				MX6QDL_PAD_EIM_D16__GPIO3_IO16 0x1b0b0
 			>;
 		};
 
diff --git a/arch/arm/boot/dts/imx6sx-sdb.dtsi b/arch/arm/boot/dts/imx6sx-sdb.dtsi
index 1810829..2c33a5c 100644
--- a/arch/arm/boot/dts/imx6sx-sdb.dtsi
+++ b/arch/arm/boot/dts/imx6sx-sdb.dtsi
@@ -412,6 +412,15 @@
 		interrupts = <2 8>;
 		interrupt-route = <2>;
 	};
+
+	mag3110@0e {
+		compatible = "fsl,mag3110";
+		reg = <0x0e>;
+		position = <2>;
+		interrupt-parent = <&gpio6>;
+		interrupts = <5 1>;
+		shared-interrupt;
+	};
 };
 
 &iomuxc {
@@ -422,6 +431,7 @@
 		pinctrl_hog: hoggrp {
 			fsl,pins = <
 				MX6SX_PAD_SD1_DATA0__GPIO6_IO_2 0x17059
+				MX6SX_PAD_SD1_DATA3__GPIO6_IO_5 0xb000
 			>;
 		};
 
