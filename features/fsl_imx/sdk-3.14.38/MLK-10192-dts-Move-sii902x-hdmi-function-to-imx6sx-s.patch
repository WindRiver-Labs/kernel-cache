From 2b03a888441b00ae139e74305daed2f278e96aa2 Mon Sep 17 00:00:00 2001
From: Sandor Yu <R01008@freescale.com>
Date: Mon, 2 Feb 2015 13:54:23 +0800
Subject: [PATCH 0828/1594] MLK-10192: dts: Move sii902x hdmi function to
 imx6sx sdb lcdif1 dts

commit a2c8b03d2dc15792046fb474924c7366504b2201 from
git://git.freescale.com/imx/linux-2.6-imx.git

-Sii902x hdmi daughter connect to lcdif1 interface,
move this function to lcdif1 dts.
-Sii902x hdmi driver share the reset pin with ov5640 driver,
one driver will been reset by the other driver,
so move sii902x reset pin configure to licdif1 dts.

Signed-off-by: Sandor Yu <R01008@freescale.com>
---
 arch/arm/boot/dts/imx6sx-sdb-lcdif1.dts |   12 +++++++++++-
 arch/arm/boot/dts/imx6sx-sdb.dts        |    1 +
 arch/arm/boot/dts/imx6sx-sdb.dtsi       |    3 ++-
 3 files changed, 14 insertions(+), 2 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx-sdb-lcdif1.dts b/arch/arm/boot/dts/imx6sx-sdb-lcdif1.dts
index 948ab81..898d237 100644
--- a/arch/arm/boot/dts/imx6sx-sdb-lcdif1.dts
+++ b/arch/arm/boot/dts/imx6sx-sdb-lcdif1.dts
@@ -1,5 +1,5 @@
 /*
- * Copyright (C) 2014 Freescale Semiconductor, Inc.
+ * Copyright (C) 2014-2015 Freescale Semiconductor, Inc.
  *
  * This program is free software; you can redistribute it and/or modify
  * it under the terms of the GNU General Public License version 2 as
@@ -18,6 +18,10 @@
 			status = "okay";
 		};
 	};
+
+	sii902x_reset: sii902x-reset {
+		status = "okay";
+	};
 };
 
 &csi1 {
@@ -27,3 +31,9 @@
 &lcdif1 {
 	status = "okay";
 };
+
+&i2c1 {
+	sii902x@39 {
+		status = "okay";
+	};
+};
diff --git a/arch/arm/boot/dts/imx6sx-sdb.dts b/arch/arm/boot/dts/imx6sx-sdb.dts
index 0eee7d8..6472364 100644
--- a/arch/arm/boot/dts/imx6sx-sdb.dts
+++ b/arch/arm/boot/dts/imx6sx-sdb.dts
@@ -164,6 +164,7 @@
 		bits-per-pixel = <32>;
 		resets = <&sii902x_reset>;
 		reg = <0x39>;
+		status = "disabled";
 	};
 };
 
diff --git a/arch/arm/boot/dts/imx6sx-sdb.dtsi b/arch/arm/boot/dts/imx6sx-sdb.dtsi
index 35e750e..e3bdbfb 100644
--- a/arch/arm/boot/dts/imx6sx-sdb.dtsi
+++ b/arch/arm/boot/dts/imx6sx-sdb.dtsi
@@ -1,5 +1,5 @@
 /*
- * Copyright (C) 2014 Freescale Semiconductor, Inc.
+ * Copyright (C) 2014-2015 Freescale Semiconductor, Inc.
  *
  * This program is free software; you can redistribute it and/or modify
  * it under the terms of the GNU General Public License version 2 as
@@ -204,6 +204,7 @@
 		reset-gpios = <&gpio3 27 1>;
 		reset-delay-us = <100000>;
 		#reset-cells = <0>;
+		status = "disabled";
 	};
 };
 
