From 434ac6020025ebe8893ba452593a7c64f0e1ca42 Mon Sep 17 00:00:00 2001
From: Fugang Duan <b38611@freescale.com>
Date: Wed, 20 May 2015 18:48:38 +0800
Subject: [PATCH 0577/1594] MLK-10939-02 ARM: dts: imx7d: add stop mode
 support

commit 3dede74600e5e11347f4dfc316410ec68bd8c7d6 from
git://git.freescale.com/imx/linux-2.6-imx.git

Add stop mode support for i.MX7D.

Signed-off-by: Fugang Duan <B38611@freescale.com>
---
 arch/arm/boot/dts/imx7d.dtsi |    6 +++++-
 1 files changed, 5 insertions(+), 1 deletions(-)

diff --git a/arch/arm/boot/dts/imx7d.dtsi b/arch/arm/boot/dts/imx7d.dtsi
index 1920348..d7614ca 100644
--- a/arch/arm/boot/dts/imx7d.dtsi
+++ b/arch/arm/boot/dts/imx7d.dtsi
@@ -636,7 +636,7 @@
 				compatible = "fsl,imx7d-gpc";
 				reg = <0x303a0000 0x10000>;
 				interrupts = <GIC_SPI 87 IRQ_TYPE_LEVEL_HIGH>;
-				fsl,mf-mix-wakeup-irq = <0x54010000 0xc00 0x0 0x400010>;
+				fsl,mf-mix-wakeup-irq = <0x54010000 0xc00 0x0 0x1000040>;
 				#power-domain-cells = <1>;
 				pcie-phy-supply = <&reg_1p0d>;
 			};
@@ -1254,8 +1254,10 @@
 					<&clks IMX7D_ENET_PHY_REF_ROOT_CLK>;
 				clock-names = "ipg", "ahb", "ptp",
 					"enet_clk_ref", "enet_out";
+				stop-mode = <&gpr 0x10 3>;
 				fsl,num-tx-queues=<3>;
 				fsl,num-rx-queues=<3>;
+				fsl,wakeup_irq = <2>;
 				status = "disabled";
 			};
 
@@ -1272,8 +1274,10 @@
 					<&clks IMX7D_ENET_PHY_REF_ROOT_CLK>;
 				clock-names = "ipg", "ahb", "ptp",
 					"enet_clk_ref", "enet_out";
+				stop-mode = <&gpr 0x10 4>;
 				fsl,num-tx-queues=<3>;
 				fsl,num-rx-queues=<3>;
+				fsl,wakeup_irq = <2>;
 				status = "disabled";
 			};
 		};
