 	case IMX_PLLV3_SYS:
 		ops = &clk_pllv3_sys_ops;
-		pll_sys_base = base;
 		break;
 	case IMX_PLLV3_USB_VF610:
 		pll->div_shift = 1;
@@ -417,18 +413,3 @@ struct clk *imx_clk_pllv3(enum imx_pllv3_type type, const char *name,
 
 	return clk;
 }
-
-void imx_enable_pll_arm(bool enable)
-{
-	static u32 saved_pll_arm;
-	u32 val;
-
-	if (enable) {
-		saved_pll_arm = val = readl_relaxed(pll_sys_base);
-		val |= BM_PLL_ENABLE;
-		val |= BM_PLL_BYPASS;
-		writel_relaxed(val, pll_sys_base);
-	} else {
-		writel_relaxed(saved_pll_arm, pll_sys_base);
-	}
-}
