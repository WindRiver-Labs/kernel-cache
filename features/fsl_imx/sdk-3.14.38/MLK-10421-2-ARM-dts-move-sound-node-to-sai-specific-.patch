+++ b/arch/arm/boot/dts/imx7d-12x12-arm2-sai.dts
@@ -8,6 +8,19 @@
 
 #include "imx7d-12x12-arm2.dts"
 
+
+/ {
+	sound {
+		compatible = "fsl,imx7d-12x12-arm2-wm8958",
+			    "fsl,imx-audio-wm8958";
+		model = "wm8958-audio";
+		cpu-dai = <&sai1>;
+		audio-codec = <&codec>;
+		codec-master;
+		hp-det-gpios = <&gpio1 12 1>;
+	};
+};
+
 &pinctrl_hog_1{
 	/* Pin conflict with SAI */
 	fsl,pins = <
