From db1b5c71e67cc3596ae5a2ae1db90ea9fe451053 Mon Sep 17 00:00:00 2001
From: Sandor Yu <R01008@freescale.com>
Date: Mon, 8 Dec 2014 16:01:44 +0800
Subject: [PATCH 0350/1594] MLK-9969 dts: Enable subdev csi driver in imx6sx
 AI board

commit 042362cebd39320e957b90d2f5a1bfdecf0ac464 from
git://git.freescale.com/imx/linux-2.6-imx.git

Enable OV5640, VADC and CSI driver in imx6sx AI board

Signed-off-by: Sandor Yu <R01008@freescale.com>
---
 arch/arm/boot/dts/imx6sx-sabreauto.dts |   26 ++++++++++----------------
 1 files changed, 10 insertions(+), 16 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx-sabreauto.dts b/arch/arm/boot/dts/imx6sx-sabreauto.dts
index 7e9f5f4..f57e741 100644
--- a/arch/arm/boot/dts/imx6sx-sabreauto.dts
+++ b/arch/arm/boot/dts/imx6sx-sabreauto.dts
@@ -37,18 +37,6 @@
 		#reset-cells = <0>;
 	};
 
-	csi1_v4l2_cap {
-		compatible = "fsl,imx6sx-csi-v4l2", "fsl,imx6sl-csi-v4l2";
-		csi_id = <0>;
-		status = "okay";
-	};
-
-	csi2_v4l2_cap {
-		compatible = "fsl,imx6sx-csi-v4l2", "fsl,imx6sl-csi-v4l2";
-		csi_id = <1>;
-		status = "okay";
-	};
-
 	hannstar_cabc {
 		compatible = "hannstar,cabc";
 
@@ -519,12 +507,13 @@
 	assigned-clock-rates = <0>, <0>, <24576000>;
 };
 
-&csi1 {
-	status = "okay";
-};
-
 &csi2 {
 	status = "okay";
+	port {
+		csi2_ep: endpoint {
+			remote-endpoint = <&vadc_ep>;
+		};
+	};
 };
 
 &dcic1 {
@@ -932,5 +921,10 @@
 	vadc_in = <0>;
 	csi_id = <1>;
 	status = "okay";
+	port {
+		vadc_ep: endpoint {
+			remote-endpoint = <&csi2_ep>;
+		};
+	};
 };
 
