From 5ce6217a43ec02b4372a4b1eb24f6e140cde9a60 Mon Sep 17 00:00:00 2001
From: Haibo Chen <haibo.chen@freescale.com>
Date: Mon, 18 May 2015 15:34:25 +0800
Subject: [PATCH 1109/1594] MLK-10912-3 ARM: dts: imx6ul.dtsi: add TSC support

commit 8eb53f1dcdf6339e6e48eb415cc85a5918fb0fdc from
git://git.freescale.com/imx/linux-2.6-imx.git

Add imx6ul touchscreen controller support.

TSC module need ADC2 module to measure the touchscreen
coordinate value. This patch put TSC and ADC2 together,
make ADC2 moduel only be used for TSC, can't be used
as a normal ADC.

Signed-off-by: Haibo Chen <haibo.chen@freescale.com>
---
 arch/arm/boot/dts/imx6ul.dtsi |   17 +++++++++--------
 1 files changed, 9 insertions(+), 8 deletions(-)

diff --git a/arch/arm/boot/dts/imx6ul.dtsi b/arch/arm/boot/dts/imx6ul.dtsi
index 3194c52..79e4dde 100644
--- a/arch/arm/boot/dts/imx6ul.dtsi
+++ b/arch/arm/boot/dts/imx6ul.dtsi
@@ -809,15 +809,16 @@
 				status = "disabled";
                         };
 
-			adc2: adc@0219c000 {
-				compatible = "fsl,imx6ul-adc", "fsl,vf610-adc";
-				reg = <0x0219c000 0x4000>;
-				interrupts = <GIC_SPI 101 IRQ_TYPE_LEVEL_HIGH>;
-				clocks = <&clks IMX6UL_CLK_DUMMY>;
-				num-channels = <4>;
-				clock-names = "adc";
+			tsc: tsc@02040000 {
+				compatible = "fsl,imx6ul-tsc";
+				reg = <0x02040000 0x4000>, <0x0219c000 0x4000>;
+				interrupts = <GIC_SPI 3 IRQ_TYPE_LEVEL_HIGH>,
+					     <GIC_SPI 101 IRQ_TYPE_LEVEL_HIGH>;
+				clocks = <&clks IMX6UL_CLK_IPG>,
+					 <&clks IMX6UL_CLK_ADC2>;
+				clock-names = "tsc", "adc";
 				status = "disabled";
-                        };
+			};
 
 			i2c1: i2c@021a0000 {
 				#address-cells = <1>;
