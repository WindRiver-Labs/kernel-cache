diff --git a/include/linux/mcc_config_linux.h b/include/linux/mcc_config_linux.h
new file mode 100644
index 0000000..7711621
--- /dev/null
+++ b/include/linux/mcc_config_linux.h
@@ -0,0 +1,54 @@
