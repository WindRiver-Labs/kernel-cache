From e5f21d47c960d820527f9323bc5e97b31ffcf961 Mon Sep 17 00:00:00 2001
From: Luwei Zhou <b45643@freescale.com>
Date: Wed, 17 Sep 2014 13:03:03 +0800
Subject: [PATCH 0196/1594] ENGR00331509-2 ARM: dts: i.mx6q/dl/sx: Add
 isl29023 device tree support.

commit 61fa9ebb5545fd4764f9d75ab5ab6c35a55a052a from
git://git.freescale.com/imx/linux-2.6-imx.git

Add isl29023 sensor device tree support on i.MX6Q/DL/SX platform.

Signed-off-by: Luwei Zhou <b45643@freescale.com>
---
 arch/arm/boot/dts/imx6qdl-sabreauto.dtsi |    9 +++++++++
 arch/arm/boot/dts/imx6qdl-sabresd.dtsi   |   10 ++++++++++
 arch/arm/boot/dts/imx6sx-sdb.dtsi        |    9 +++++++++
 3 files changed, 28 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
index 2310654..2c955bd 100644
--- a/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
@@ -379,6 +379,14 @@
 		interrupt-parent = <&gpio2>;
 		interrupts = <29 1>;
 	};
+
+	isl29023@44 {
+		compatible = "fsl,isl29023";
+		reg = <0x44>;
+		rext = <499>;
+		interrupt-parent = <&gpio5>;
+		interrupts = <17 2>;
+	};
 };
 
 &mlb {
@@ -409,6 +417,7 @@
 				MX6QDL_PAD_SD2_DAT0__GPIO1_IO15  0x80000000
 				MX6QDL_PAD_EIM_BCLK__GPIO6_IO31 0x80000000
 				MX6QDL_PAD_EIM_EB1__GPIO2_IO29	0x80000000
+				MX6QDL_PAD_DISP0_DAT23__GPIO5_IO17 0x80000000
 			>;
 		};
 
diff --git a/arch/arm/boot/dts/imx6qdl-sabresd.dtsi b/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
index 96ca874..1273484 100644
--- a/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sabresd.dtsi
@@ -456,6 +456,15 @@
 		interrupt-parent = <&gpio3>;
 		interrupts = <16 1>;
 	};
+
+	isl29023@44 {
+		compatible = "fsl,isl29023";
+		reg = <0x44>;
+		rext = <499>;
+		vdd-supply = <&reg_sensor>;
+		interrupt-parent = <&gpio3>;
+		interrupts = <9 2>;
+	};
 };
 
 &iomuxc {
@@ -484,6 +493,7 @@
 				MX6QDL_PAD_EIM_D16__GPIO3_IO16 0x1b0b0
 				MX6QDL_PAD_SD3_RST__GPIO7_IO08	0x1b0b0
 				MX6QDL_PAD_GPIO_9__GPIO1_IO09 	0x1b0b0
+				MX6QDL_PAD_EIM_DA9__GPIO3_IO09 0x1b0b0
 			>;
 		};
 
diff --git a/arch/arm/boot/dts/imx6sx-sdb.dtsi b/arch/arm/boot/dts/imx6sx-sdb.dtsi
index 1476242..d3936a0 100644
--- a/arch/arm/boot/dts/imx6sx-sdb.dtsi
+++ b/arch/arm/boot/dts/imx6sx-sdb.dtsi
@@ -444,6 +444,15 @@
 		interrupts = <5 1>;
 		shared-interrupt;
 	};
+
+	isl29023@44 {
+		compatible = "fsl,isl29023";
+		reg = <0x44>;
+		rext = <499>;
+		interrupt-parent = <&gpio6>;
+		interrupts = <5 1>;
+		shared-interrupt;
+	};
 };
 
 &iomuxc {
