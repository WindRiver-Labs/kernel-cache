From cbd8deef9544e00d5d78fad93eaf75487fa96e32 Mon Sep 17 00:00:00 2001
From: Fancy Fang <chen.fang@freescale.com>
Date: Thu, 25 Sep 2014 10:33:53 +0800
Subject: [PATCH 0213/1594] ENGR00333079 ARM: IMX6DL: PXP: enable pxp module
 for imx6dl platform

commit 7dc3518db7761e607740bf6f4e0549d7db77851b from
git://git.freescale.com/imx/linux-2.6-imx.git

Complete the dts entry for PXP to enable it on
imx6dl platform by default.

Signed-off-by: Fancy Fang <chen.fang@freescale.com>
---
 arch/arm/boot/dts/imx6dl-sabresd.dts |    4 ++++
 arch/arm/boot/dts/imx6dl.dtsi        |    4 ++++
 2 files changed, 8 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6dl-sabresd.dts b/arch/arm/boot/dts/imx6dl-sabresd.dts
index e9da1b1..3baf979 100644
--- a/arch/arm/boot/dts/imx6dl-sabresd.dts
+++ b/arch/arm/boot/dts/imx6dl-sabresd.dts
@@ -39,3 +39,7 @@
 &mxcfb2 {
 	status = "okay";
 };
+
+&pxp {
+	status = "okay";
+};
diff --git a/arch/arm/boot/dts/imx6dl.dtsi b/arch/arm/boot/dts/imx6dl.dtsi
index 5e3331c..a26c314 100644
--- a/arch/arm/boot/dts/imx6dl.dtsi
+++ b/arch/arm/boot/dts/imx6dl.dtsi
@@ -98,8 +98,12 @@
 			};
 
 			pxp: pxp@020f0000 {
+				compatible = "fsl,imx6dl-pxp-dma";
 				reg = <0x020f0000 0x4000>;
 				interrupts = <0 98 IRQ_TYPE_LEVEL_HIGH>;
+				clocks = <&clks IMX6QDL_CLK_IPU2>, <&clks IMX6QDL_CLK_DUMMY>;
+				clock-names = "pxp-axi", "disp-axi";
+				status = "disabled";
 			};
 
 			epdc: epdc@020f4000 {
