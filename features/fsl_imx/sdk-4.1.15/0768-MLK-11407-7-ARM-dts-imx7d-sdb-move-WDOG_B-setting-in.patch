From 2a6f6fb4a9fe3d2eaf4f2344074ee34a0bafedc4 Mon Sep 17 00:00:00 2001
From: Robin Gong <b38343@freescale.com>
Date: Tue, 22 Sep 2015 15:11:56 +0800
Subject: [PATCH 0768/1691] MLK-11407-7: ARM: dts: imx7d-sdb: move WDOG_B
 setting into wdog drivr

commit 2a6f6fb4a9fe3d2eaf4f2344074ee34a0bafedc4 from
git://git.freescale.com/imx/linux-2.6-imx.git imx_4.1.15_1.0.0_ga

enable 'fsl,wdog_b' and move pinctrl setting from hog into watchdog driver
device node.

Signed-off-by: Robin Gong <b38343@freescale.com>
---
 arch/arm/boot/dts/imx7d-sdb.dts | 14 +++++++++++++-
 1 file changed, 13 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/imx7d-sdb.dts b/arch/arm/boot/dts/imx7d-sdb.dts
index f9d998c..aeebef5 100644
--- a/arch/arm/boot/dts/imx7d-sdb.dts
+++ b/arch/arm/boot/dts/imx7d-sdb.dts
@@ -696,7 +696,6 @@
 			fsl,pins = <
 				MX7D_PAD_GPIO1_IO05__GPIO1_IO5	  0x14
 				MX7D_PAD_GPIO1_IO07__GPIO1_IO7    0x59
-				MX7D_PAD_GPIO1_IO00__WDOD1_WDOG_B 0x74
 			>;
 		};
 
@@ -705,6 +704,13 @@
 				MX7D_PAD_GPIO1_IO01__PWM1_OUT	  0x110b0
 			>;
 		};
+
+		pinctrl_wdog: wdoggrp {
+			fsl,pins = <
+				MX7D_PAD_GPIO1_IO00__WDOD1_WDOG_B 0x74
+			>;
+		};
+
 	};
 };
 
@@ -786,3 +792,9 @@
 	non-removable;
 	status = "okay";
 };
+
+&wdog1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_wdog>;
+	fsl,wdog_b;
+};
