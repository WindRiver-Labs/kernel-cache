From af00ff896980a619ff21074b8b2b06b1cc12237a Mon Sep 17 00:00:00 2001
From: Anson Huang <b20788@freescale.com>
Date: Thu, 13 Aug 2015 17:57:03 +0800
Subject: [PATCH 0368/1691] MLK-11349-4 ARM: imx: need to make sure GPT1 clk
 root enabled

commit af00ff896980a619ff21074b8b2b06b1cc12237a from
git://git.freescale.com/imx/linux-2.6-imx.git imx_4.1.15_1.0.0_ga

GPT1 clk root must be enabled, as GPT1 is system's clk
source.

Signed-off-by: Anson Huang <b20788@freescale.com>
---
 arch/arm/boot/dts/imx7d.dtsi | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/imx7d.dtsi b/arch/arm/boot/dts/imx7d.dtsi
index e661803..eda4013 100644
--- a/arch/arm/boot/dts/imx7d.dtsi
+++ b/arch/arm/boot/dts/imx7d.dtsi
@@ -503,7 +503,7 @@
 				compatible = "fsl,imx7d-gpt", "fsl,imx31-gpt";
 				reg = <0x302d0000 0x10000>;
 				interrupts = <GIC_SPI 55 IRQ_TYPE_LEVEL_HIGH>;
-				clocks = <&clks IMX7D_CLK_DUMMY>,
+				clocks = <&clks IMX7D_GPT1_ROOT_CLK>,
 					<&clks IMX7D_GPT1_ROOT_CLK>,
 					<&clks IMX7D_GPT_3M_CLK>;
 				clock-names = "ipg", "per", "osc_per";
