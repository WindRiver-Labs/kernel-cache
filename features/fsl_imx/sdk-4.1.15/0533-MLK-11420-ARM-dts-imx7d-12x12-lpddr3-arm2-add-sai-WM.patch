 	pinctrl-names = "default";
-	pinctrl-0 = <&pinctrl_hog_1>;
+	pinctrl-0 = <&pinctrl_hog_1 &pinctrl_hog_sd2_vselect>;
 
 	imx7d-12x12-lpddr3-arm2 {
 
@@ -332,13 +368,18 @@
