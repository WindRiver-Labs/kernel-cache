-				dmas = <&sdma 31 25 0>, <&sdma 32 25 0>;
-				dma-source = <&gpr 0 15 0 16>;
+				dmas = <&sdma 8 25 0>, <&sdma 9 25 0>;
 				status = "disabled";
 			};
 
@@ -651,12 +650,11 @@
 				reg = <0x308b0000 0x10000>;
 				interrupts = <GIC_SPI 96 IRQ_TYPE_LEVEL_HIGH>;
 				clocks = <&clks IMX7D_CLK_DUMMY>,
