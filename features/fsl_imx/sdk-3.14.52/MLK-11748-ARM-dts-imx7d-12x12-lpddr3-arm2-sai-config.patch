 	pinctrl-names = "default", "sleep";
-	pinctrl-0 = <&pinctrl_hog_1>;
-	pinctrl-1 = <&pinctrl_hog_1>;
+	pinctrl-0 = <&pinctrl_hog_1 &pinctrl_hog_headphone_det>;
