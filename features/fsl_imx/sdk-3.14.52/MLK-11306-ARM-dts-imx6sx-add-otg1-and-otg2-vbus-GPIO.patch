From b5b00ab9ca1b22263f425996429b84623a281fad Mon Sep 17 00:00:00 2001
From: Li Jun <jun.li@freescale.com>
Date: Fri, 31 Jul 2015 14:01:18 +0800
Subject: [PATCH 0971/1221] MLK-11306 ARM: dts: imx6sx: add otg1 and otg2 vbus
 GPIO pinctrl for sabreauto

Add usb otg1 and otg2 vbus GPIO pinctrl for imx6sx-sabreauto board.

Signed-off-by: Li Jun <jun.li@freescale.com>
[zou:Original patch taken from
git.freescale.com/imx/fsl-arm-yocto-bsp.git-b imx-3.14.52-1.1.0_ga]
Signed-off-by: zou cao <cao.zou@windriver.com>
---
 arch/arm/boot/dts/imx6sx-sabreauto.dts |   20 ++++++++++++++++++--
 1 files changed, 18 insertions(+), 2 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx-sabreauto.dts b/arch/arm/boot/dts/imx6sx-sabreauto.dts
index 3671a22..dc9efb5 100644
--- a/arch/arm/boot/dts/imx6sx-sabreauto.dts
+++ b/arch/arm/boot/dts/imx6sx-sabreauto.dts
@@ -138,6 +138,8 @@
 
 		reg_usb_otg1_vbus: usb_otg1_vbus {
 			compatible = "regulator-fixed";
+			pinctrl-names = "default";
+			pinctrl-0 = <&pinctrl_usb_otg1_vbus>;
 			regulator-name = "usb_otg1_vbus";
 			regulator-min-microvolt = <5000000>;
 			regulator-max-microvolt = <5000000>;
@@ -147,6 +149,8 @@
 
 		reg_usb_otg2_vbus: usb_otg2_vbus {
 			compatible = "regulator-fixed";
+			pinctrl-names = "default";
+			pinctrl-0 = <&pinctrl_usb_otg2_vbus>;
 			regulator-name = "usb_otg2_vbus";
 			regulator-min-microvolt = <5000000>;
 			regulator-max-microvolt = <5000000>;
@@ -378,12 +382,24 @@
 			>;
 		};
 
-		pinctrl_usbotg1_1: usbotg1grp-1 {
+		pinctrl_usb_otg1_vbus: usbotg1vbusgrp {
+			fsl,pins = <
+				MX6SX_PAD_GPIO1_IO09__GPIO1_IO_9     0x10b0
+			>;
+		};
+
+		pinctrl_usb_otg1_id: usbotg1idgrp {
 			fsl,pins = <
 				MX6SX_PAD_GPIO1_IO10__ANATOP_OTG1_ID 0x17059
 			>;
 		};
 
+		pinctrl_usb_otg2_vbus: usbotg2vbusgrp {
+			fsl,pins = <
+				MX6SX_PAD_GPIO1_IO12__GPIO1_IO_12    0x10b0
+			>;
+		};
+
 		pinctrl_usdhc3_1: usdhc3grp-1 {
 			fsl,pins = <
 				MX6SX_PAD_SD3_CMD__USDHC3_CMD	  0x17059
@@ -835,7 +851,7 @@
 &usbotg1 {
 	vbus-supply = <&reg_usb_otg1_vbus>;
 	pinctrl-names = "default";
-	pinctrl-0 = <&pinctrl_usbotg1_1>;
+	pinctrl-0 = <&pinctrl_usb_otg1_id>;
 	srp-disable;
 	hnp-disable;
 	adp-disable;
-- 
