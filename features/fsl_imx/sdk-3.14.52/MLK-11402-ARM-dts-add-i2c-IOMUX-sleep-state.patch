From 84206056100909ffb9136245009deec0e912e958 Mon Sep 17 00:00:00 2001
From: Gao Pan <gaopan@freescale.com>
Date: Thu, 11 Jun 2015 16:45:47 +0800
Subject: [PATCH 1028/1221] MLK-11402 ARM: dts : add i2c IOMUX sleep state

Add i2c IOMUX sleep state for imx7d-12x12-lpddr3-arm2.

Signed-off-by: Gao Pan <b54642@freescale.com>
[zou:Original patch taken from
git.freescale.com/imx/fsl-arm-yocto-bsp.git-b imx-3.14.52-1.1.0_ga]
Signed-off-by: zou cao <cao.zou@windriver.com>
---
 arch/arm/boot/dts/imx7d-12x12-lpddr3-arm2.dts |   11 +++++++----
 1 files changed, 7 insertions(+), 4 deletions(-)

diff --git a/arch/arm/boot/dts/imx7d-12x12-lpddr3-arm2.dts b/arch/arm/boot/dts/imx7d-12x12-lpddr3-arm2.dts
index b8d9d00..8891fab 100644
--- a/arch/arm/boot/dts/imx7d-12x12-lpddr3-arm2.dts
+++ b/arch/arm/boot/dts/imx7d-12x12-lpddr3-arm2.dts
@@ -259,9 +259,10 @@
 
 &i2c1 {
 	clock-frequency = <100000>;
-	pinctrl-names = "default";
+	pinctrl-names = "default", "sleep";
 	pinctrl-0 = <&pinctrl_i2c1_1>;
-	status = "disabled";
+	pinctrl-1 = <&pinctrl_i2c1_1>;
+	status = "okay";
 
 	pmic: pfuze3000@08 {
 		compatible = "fsl,pfuze3000";
@@ -355,9 +356,10 @@
 
 &i2c3 {
 	clock-frequency = <100000>;
-	pinctrl-names = "default";
+	pinctrl-names = "default", "sleep";
 	pinctrl-0 = <&pinctrl_i2c3_1>;
-	status = "disabled";
+	pinctrl-1 = <&pinctrl_i2c3_1>;
+	status = "okay";
 
 	tsc2007@49 {
 		compatible = "ti,tsc2007";
@@ -368,6 +370,7 @@
 		interrupts = <8 0>;
 		pendown-gpio = <&gpio1 8 1>;
 		ti,x-plate-ohms = <660>;
+		status = "disabled";
 	};
 
 	max7322: gpio@68 {
