+++ b/arch/arm/boot/dts/imx7d-sdb-m4.dts
@@ -10,8 +10,8 @@
 
 / {
 	memory {
-		linux,usable-memory = <0x80000000 0x3ff00000>;
-		reg = <0x80000000 0x80000000>;
+		linux,usable-memory = <0x80000000 0x1ff00000>,
+				<0xa0000000 0x1ff00000>;
 	};
 
