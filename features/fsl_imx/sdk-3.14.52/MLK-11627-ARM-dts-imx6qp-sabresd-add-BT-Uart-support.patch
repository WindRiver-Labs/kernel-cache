+
+#include "imx6qp-sabresd.dts"
+
+/ {
+	leds {
+		compatible = "gpio-leds";
+		status = "disabled";
+	};
+};
+
+&ecspi1 {
+	status = "disabled";
+};
+
+&uart5 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_uart5_1>;
+	fsl,uart-has-rtscts;
+	status = "okay";
+	/* for DTE mode, add below change */
+	/* fsl,dte-mode; */
+	/* pinctrl-0 = <&pinctrl_uart5dte_1>; */
+};
