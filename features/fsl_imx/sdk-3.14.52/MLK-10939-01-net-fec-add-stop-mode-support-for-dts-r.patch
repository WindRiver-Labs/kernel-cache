 		fep->wol_flag |= FEC_WOL_HAS_MAGIC_PACKET;
 
@@ -3446,6 +3498,12 @@ fec_probe(struct platform_device *pdev)
 		fep->irq[i] = irq;
 	}
 
+	ret = of_property_read_u32(np, "fsl,wakeup_irq", &irq);
+	if (!ret && irq < FEC_IRQ_NUM)
