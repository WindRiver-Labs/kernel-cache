From cb1a09086fc2890df0312fe25743f240657b68b5 Mon Sep 17 00:00:00 2001
From: Nitin Garg <nitin.garg@freescale.com>
Date: Mon, 23 Feb 2015 21:56:32 -0600
Subject: [PATCH 0564/1074] MLK-10287: Add ECSPI5 and WDOG3 information to
 imx6sx dtsi

Add ECSPI5 and WDOG3 IP information to imx6sx device tree.

Signed-off-by: Nitin Garg <nitin.garg@freescale.com>
[Original patch taken from git://git.freescale.com/imx/linux-2.6-imx.git]
Signed-off-by: Biyao Zhai <biyao.zhai@windriver.com>
---
 arch/arm/boot/dts/imx6sx.dtsi |   22 ++++++++++++++++++++++
 1 files changed, 22 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx.dtsi b/arch/arm/boot/dts/imx6sx.dtsi
index 49ef514..235eece 100644
--- a/arch/arm/boot/dts/imx6sx.dtsi
+++ b/arch/arm/boot/dts/imx6sx.dtsi
@@ -972,6 +972,28 @@
 				status = "disabled";
                         };
 
+			wdog3: wdog@02288000 {
+				compatible = "fsl,imx6sx-wdt", "fsl,imx21-wdt";
+				reg = <0x02288000 0x4000>;
+				interrupts = <0 11 0x04>;
+				clocks = <&clks IMX6SX_CLK_DUMMY>;
+				status = "disabled";
+			};
+
+			ecspi5: ecspi@0228c000 {
+				#address-cells = <1>;
+				#size-cells = <0>;
+				compatible = "fsl,imx6sx-ecspi", "fsl,imx51-ecspi";
+				reg = <0x0228c000 0x4000>;
+				interrupts = <0 18 0x04>;
+				clocks = <&clks IMX6SX_CLK_ECSPI5>,
+					 <&clks IMX6SX_CLK_ECSPI5>;
+				clock-names = "ipg", "per";
+				dmas = <&sdma 11 7 1>, <&sdma 12 7 2>;
+				dma-names = "rx", "tx";
+				status = "disabled";
+			};
+
 			sema4: sema4@02290000 { /* sema4 */
 				compatible = "fsl,imx6sx-sema4";
 				reg = <0x02290000 0x4000>;
