From b547fc0bec4f5b923d1c7eccf01f31cd0dec08ed Mon Sep 17 00:00:00 2001
From: Robby Cai <R63905@freescale.com>
Date: Thu, 20 Mar 2014 20:35:25 +0800
Subject: [PATCH 0344/1074] ENGR00300658-5 ARM: dts: imx6sx: Add clock device
 node

on imx6sx need to enable display_axi, dcic and csi clock.
display_axi, dcic is not needed on imx6sl.

Signed-off-by: Robby Cai <R63905@freescale.com>
[Original patch taken from git://git.freescale.com/imx/linux-2.6-imx.git]
Signed-off-by: Biyao Zhai <biyao.zhai@windriver.com>
---
 arch/arm/boot/dts/imx6sl.dtsi |    4 ++++
 arch/arm/boot/dts/imx6sx.dtsi |    8 ++++++++
 2 files changed, 12 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sl.dtsi b/arch/arm/boot/dts/imx6sl.dtsi
index 82c3eb5..7cafbea 100644
--- a/arch/arm/boot/dts/imx6sl.dtsi
+++ b/arch/arm/boot/dts/imx6sl.dtsi
@@ -1026,6 +1026,10 @@
 				compatible = "fsl,imx6sl-csi";
 				reg = <0x020e4000 0x4000>;
 				interrupts = <0 7 0x04>;
+				clocks = <&clks IMX6SL_CLK_DUMMY>,
+					<&clks IMX6SL_CLK_DUMMY>,
+					<&clks IMX6SL_CLK_DUMMY>;
+				clock-names = "disp-axi", "csi_mclk", "dcic";
 				status = "disabled";
 			};
 
diff --git a/arch/arm/boot/dts/imx6sx.dtsi b/arch/arm/boot/dts/imx6sx.dtsi
index a6d50f8..3336a54 100644
--- a/arch/arm/boot/dts/imx6sx.dtsi
+++ b/arch/arm/boot/dts/imx6sx.dtsi
@@ -713,6 +713,10 @@
 					compatible = "fsl,imx6sx-csi", "fsl,imx6sl-csi";
 					reg = <0x02214000 0x4000>;
 					interrupts = <0 7 0x04>;
+					clocks = <&clks IMX6SX_CLK_DISPLAY_AXI>,
+						<&clks IMX6SX_CLK_CSI>,
+						<&clks IMX6SX_CLK_DCIC1>;
+					clock-names = "disp-axi", "csi_mclk", "dcic";
 					status = "disabled";
 				};
 
@@ -720,6 +724,10 @@
 					compatible = "fsl,imx6sx-csi", "fsl,imx6sl-csi";
 					reg = <0x0221c000 0x4000>;
 					interrupts = <0 41 0x04>;
+					clocks = <&clks IMX6SX_CLK_DISPLAY_AXI>,
+						<&clks IMX6SX_CLK_CSI>,
+						<&clks IMX6SX_CLK_DCIC2>;
+					clock-names = "disp-axi", "csi_mclk", "dcic";
 					status = "disabled";
 				};
 
