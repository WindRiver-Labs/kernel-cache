index 7eb22fd..c4ecc22 100644
--- a/arch/arm/boot/dts/imx6sx.dtsi
+++ b/arch/arm/boot/dts/imx6sx.dtsi
@@ -390,6 +390,12 @@
 				clocks = <&clks IMX6SX_CLK_USBPHY2>;
 				fsl,anatop = <&anatop>;
 			};
+
+			usbphy_nop1: usbphy_nop1 {
+				compatible = "usb-nop-xceiv";
