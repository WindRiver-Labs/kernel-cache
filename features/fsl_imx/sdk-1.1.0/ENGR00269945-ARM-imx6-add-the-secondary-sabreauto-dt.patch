@@ -315,7 +314,7 @@
 	#address-cells = <2>;
 	#size-cells = <1>;
 	ranges = <0 0 0x08000000 0x08000000>;
-	status = "disabled"; /* pin conflict with SPI NOR */
+	status = "disabled"; /* pin conflict with ecspi1, i2c3 and uart3 */
 
 	nor@0,0 {
 		compatible = "cfi-flash";
