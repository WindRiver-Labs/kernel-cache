+++ b/arch/arm/boot/dts/imx6qdl-sabreauto.dtsi
@@ -155,7 +155,6 @@
 	cs-gpios = <&gpio3 19 0>;
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_ecspi1_1>;
-	status = "disabled"; /* pin conflict with WEIM NOR */
 
 	flash: m25p80@0 {
 		#address-cells = <1>;
@@ -290,7 +289,7 @@
 &gpmi {
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_gpmi_nand_1>;
-	status = "okay";
+	status = "disabled"; /* pin conflict with uart3 */
 };
 
