From 2ab02a79d8f1e7fd9d6d40503ce056978397ebd7 Mon Sep 17 00:00:00 2001
From: Robby Cai <R63905@freescale.com>
Date: Wed, 19 Feb 2014 18:18:39 +0800
Subject: [PATCH 0279/1074] ENGR00299748-2 ARM: dts: imx: add pxp support for
 imx6sx 17x17 arm2 board

- add pxp resources
- add a dummy clock for imx6sl/imx6dl

Signed-off-by: Robby Cai <R63905@freescale.com>
[Original patch taken from git://git.freescale.com/imx/linux-2.6-imx.git]
Signed-off-by: Biyao Zhai <biyao.zhai@windriver.com>
---
 arch/arm/boot/dts/imx6dl.dtsi           |    4 ++--
 arch/arm/boot/dts/imx6sl.dtsi           |    4 ++--
 arch/arm/boot/dts/imx6sx-17x17-arm2.dts |    4 ++++
 arch/arm/boot/dts/imx6sx.dtsi           |   11 +++++++++++
 4 files changed, 19 insertions(+), 4 deletions(-)

diff --git a/arch/arm/boot/dts/imx6dl.dtsi b/arch/arm/boot/dts/imx6dl.dtsi
index 31b334a..bf3a013 100644
--- a/arch/arm/boot/dts/imx6dl.dtsi
+++ b/arch/arm/boot/dts/imx6dl.dtsi
@@ -83,8 +83,8 @@
 				compatible = "fsl,imx6dl-pxp-dma";
 				reg = <0x020f0000 0x4000>;
 				interrupts = <0 98 0x04>;
-				clocks = <&clks 133>;
-				clock-names = "pxp-axi";
+				clocks = <&clks 133>, <&clks 0>;
+				clock-names = "pxp-axi", "disp-axi";
 				status = "disabled";
 			};
 
diff --git a/arch/arm/boot/dts/imx6sl.dtsi b/arch/arm/boot/dts/imx6sl.dtsi
index 87ee351..4b15437 100644
--- a/arch/arm/boot/dts/imx6sl.dtsi
+++ b/arch/arm/boot/dts/imx6sl.dtsi
@@ -1047,8 +1047,8 @@
 				compatible = "fsl,imx6sl-pxp-dma", "fsl,imx6dl-pxp-dma";
 				reg = <0x020f0000 0x4000>;
 				interrupts = <0 98 0x04>;
-				clocks = <&clks 111>;
-				clock-names = "pxp-axi";
+				clocks = <&clks IMX6SL_CLK_PXP_AXI>, <&clks IMX6SL_CLK_DUMMY>;
+				clock-names = "pxp-axi", "disp-axi";
 				status = "disabled";
 			};
 
diff --git a/arch/arm/boot/dts/imx6sx-17x17-arm2.dts b/arch/arm/boot/dts/imx6sx-17x17-arm2.dts
index c0bef11..ea34d7f 100644
--- a/arch/arm/boot/dts/imx6sx-17x17-arm2.dts
+++ b/arch/arm/boot/dts/imx6sx-17x17-arm2.dts
@@ -119,6 +119,10 @@
 	status = "okay";
 };
 
+&pxp {
+	status = "okay";
+};
+
 &uart1 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_uart1_1>;
diff --git a/arch/arm/boot/dts/imx6sx.dtsi b/arch/arm/boot/dts/imx6sx.dtsi
index c5dfb75..59ed77c 100644
--- a/arch/arm/boot/dts/imx6sx.dtsi
+++ b/arch/arm/boot/dts/imx6sx.dtsi
@@ -418,6 +418,17 @@
 					clock-names = "pix", "axi", "disp_axi";
 					status = "disabled";
 				};
+
+				pxp: pxp@02218000 {
+					compatible = "fsl,imx6sx-pxp-dma", "fsl,imx6sl-pxp-dma", "fsl,imx6dl-pxp-dma";
+					reg = <0x02218000 0x4000>;
+					interrupts = <0 8 0x04>;
+					clocks = <&clks IMX6SX_CLK_PXP_AXI>,
+						<&clks IMX6SX_CLK_DISPLAY_AXI>;
+					clock-names = "pxp-axi", "disp-axi";
+					status = "disabled";
+				};
+
 				spba@0223c000 {
 					reg = <0x0223c000 0x4000>;
 				};
-- 
