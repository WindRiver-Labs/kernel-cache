From 8f889a15a530eb4d43d670ee40c236cf3e1682fa Mon Sep 17 00:00:00 2001
From: Anson Huang <b20788@freescale.com>
Date: Thu, 4 Dec 2014 09:51:27 +0800
Subject: [PATCH 1047/1543] MLK-9955-3 arm: imx: add HAVE_IMX_AMP for imx6sx

commit e1495e7db794254fe4042d8e66f093fe2ad91d89 from
git://git.freescale.com/imx/linux-2.6-imx.git

add HAVE_IMX_AMP and select by default for i.MX6SX.

Signed-off-by: Anson Huang <b20788@freescale.com>
---
 arch/arm/mach-imx/Kconfig |    4 ++++
 1 files changed, 4 insertions(+), 0 deletions(-)

diff --git a/arch/arm/mach-imx/Kconfig b/arch/arm/mach-imx/Kconfig
index 0f5e507..001f277 100644
--- a/arch/arm/mach-imx/Kconfig
+++ b/arch/arm/mach-imx/Kconfig
@@ -62,6 +62,9 @@ config HAVE_IMX_MMDC
 config HAVE_IMX_SRC
 	def_bool y if SMP
 
+config HAVE_IMX_AMP
+	bool
+
 config IMX_HAVE_IOMUX_V1
 	bool
 
@@ -817,6 +820,7 @@ config SOC_IMX6SL
 config SOC_IMX6SX
 	bool "i.MX6 SoloX support"
 	select PINCTRL_IMX6SX
+	select HAVE_IMX_AMP
 	select SOC_IMX6
 
 	help
