define KFEATURE_DESCRIPTION "Configure options for Windriver preempt-rt"
define KFEATURE_COMPATIBILITY all

kconf non-hardware wr-rt.cfg

# improvements to rt_period scheduler handling to avoid RCU splats
patch sched-rt-don-t-try-to-balance-rt_runtime-when-it-is-.patch
patch sched-make-RT_RUNTIME_SHARE-false-by-default.patch
patch rt-make-it-clear-that-disabling-the-RT-throttling-ch.patch
patch rt-don-t-have-the-throttling-message-be-implicitly-o.patch
patch sched-rt-add-warnings-if-runtime-checking-has-been-d.patch

# these were in kvm-rt ; but for better bisection we put them
# here, so that the rt baseline is more functional in a kvm
# usecase w/o sleeping-while-atomic splats etc.
patch kvm-Use-simple-wait-queue-for-timer-interrupt-inject.patch
patch kvm-rt-swait_head_has_waiters-is-now-swaitqueue_acti.patch
patch kvm-ppc-convert-openpic-to-raw-lock.patch
patch powerpc-convert-kvm-to-use-simple-wait-queue-support.patch
patch uio-Use-simple-wait-queue-for-read.patch
patch uio-fix-compile-warning-for-RT_FULL.patch
patch uio-re-export-uio_event_notify-removed-by-swait-patc.patch

patch mips-rt-Replace-pagefault_-to-raw-version.patch
patch rt_mutex-check-whether-the-waiters-tree-is-NULL-when.patch
patch usb-use-nort-variant-to-replace-local_irq_disable-lo.patch
patch perf-No-need-to-test-the-irqs_disabled-in-hrtimer-ca.patch
patch kdb-vt_console-Fix-the-calltrace-of-spinlock-on-RT-k.patch
patch set-DMA_API_DEBUG-feature-depending-on-PREEMPT_RT_FU.patch
patch rt-cpufreq-check-whether-cpufreq_rwsem-is-locked-bef.patch
patch netpoll-guard-the-access-to-dev-npinfo-with-rcu_read.patch
