From 010b81ca9da375ebf5f45da38e69ccd1cbe5c807 Mon Sep 17 00:00:00 2001
From: David Daney <david.daney@cavium.com>
Date: Fri, 18 Jan 2013 12:46:51 -0800
Subject: [PATCH 326/337] MIPS: Don't select SYS_SUPPORTS_HOTPLUG_CPU for
 CPU_CAVIUM_OCTEON

Based On SDK 3.0.0-482

It breaks rebooting (and suspend probably doesn't work either).

Signed-off-by: David Daney <david.daney@cavium.com>
Signed-off-by: Corey Minyard <cminyard@mvista.com>
Signed-off-by: Jack Tan <jack.tan@windriver.com>
---
 arch/mips/Kconfig |    2 +-
 1 files changed, 1 insertions(+), 1 deletions(-)

diff --git a/arch/mips/Kconfig b/arch/mips/Kconfig
index a62d766..0fc1889 100644
--- a/arch/mips/Kconfig
+++ b/arch/mips/Kconfig
@@ -2580,7 +2580,7 @@ config ARCH_HIBERNATION_POSSIBLE
 
 config ARCH_SUSPEND_POSSIBLE
 	def_bool y
-	depends on SYS_SUPPORTS_HOTPLUG_CPU || !SMP
+	depends on (SYS_SUPPORTS_HOTPLUG_CPU || !SMP) && !CPU_CAVIUM_OCTEON
 
 source "kernel/power/Kconfig"
 
