-	sys	sys_ni_syscall		0	/* sys_get_mempolicy */
-	sys	sys_ni_syscall		0	/* 4270 sys_set_mempolicy */
+	sys	sys_get_mempolicy	5
+	sys	sys_set_mempolicy	3	/* 4270 */
 	sys	sys_mq_open		4
 	sys	sys_mq_unlink		1
 	sys	sys_mq_timedsend	5
