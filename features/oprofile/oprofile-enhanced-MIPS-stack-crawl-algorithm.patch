+	d2printf("  ** %p: Bottomed out; i = %u **\n", pcCur, i);
+	/* Still here?  Something's wrong.. give up. */
+
+	res_frame->spLocation.location = LOCATION_UNKNOWN;
+	res_frame->pcLocation.location = LOCATION_UNKNOWN;
+
+	return false;
+}
