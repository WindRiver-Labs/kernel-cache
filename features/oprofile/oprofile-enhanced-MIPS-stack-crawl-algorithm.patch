+					    ("  %p: discovered jump to register - reverse op\n",
+					     pcCur - 1);
+					reverseOperation = true;
+					break;
+				}
+
+				nextInst[0] =
+				    *(tInst *) instruction(pcCur + 1,
+							   client_arg);
+				nextInst[1] =
+				    *(tInst *) instruction(pcCur + 2,
+							   client_arg);
+
+				localPrevInst[0] =
+				    *(tInst *) instruction(pcCur - 2,
+							   client_arg);
+				localPrevInst[1] =
+				    *(tInst *) instruction(pcCur - 3,
+							   client_arg);
