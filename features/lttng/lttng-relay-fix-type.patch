 		long *o_begin, long *o_end, long *o_old,
-		long *before_hdr_pad, long *size)
+		size_t *before_hdr_pad, size_t *size)
 {
 	*o_begin = local_read(&ltt_buf->offset);
 	*o_old = *o_begin;
