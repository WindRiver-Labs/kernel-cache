From 612a9e672989b30754766dad57d83f64e9cd5d43 Mon Sep 17 00:00:00 2001
From: auto commit <unknown@unknown>
Date: Tue, 15 Jul 2008 14:57:07 -0400
Subject: [PATCH] LTTng instrumentation printk no imv

Printk should not use immediate values because it is called from lockdep.

Signed-off-by: Mathieu Desnoyers <mathieu.desnoyers@polymtl.ca>
---
 kernel/kernel-trace.c |    4 ++--
 kernel/printk.c       |    4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/kernel/kernel-trace.c b/kernel/kernel-trace.c
index c4dd275..25c2250 100644
--- a/kernel/kernel-trace.c
+++ b/kernel/kernel-trace.c
@@ -176,7 +176,7 @@ static void probe_timer_timeout(struct task_struct *p)
 
 static void probe_kernel_printk(void *retaddr)
 {
-	trace_mark(kernel_printk, "ip %p", retaddr);
+	_trace_mark(kernel_printk, "ip %p", retaddr);
 }
 
 static void probe_kernel_vprintk(void *retaddr, char *buf, int len)
@@ -201,7 +201,7 @@ static void probe_kernel_vprintk(void *retaddr, char *buf, int len)
 			mark_len--;
 		saved_char = mark_buf[mark_len];
 		mark_buf[mark_len] = '\0';
-		trace_mark(kernel_vprintk, "loglevel %c string %s ip %p",
+		_trace_mark(kernel_vprintk, "loglevel %c string %s ip %p",
 			loglevel, mark_buf, retaddr);
 		mark_buf[mark_len] = saved_char;
 	}
diff --git a/kernel/printk.c b/kernel/printk.c
index 626c358..b4e5018 100644
--- a/kernel/printk.c
+++ b/kernel/printk.c
@@ -616,7 +616,7 @@ asmlinkage int printk(const char *fmt, ...)
 	int r;
 
 	va_start(args, fmt);
-	trace_kernel_printk(__builtin_return_address(0));
+	_trace_kernel_printk(__builtin_return_address(0));
 	r = vprintk(fmt, args);
 	va_end(args);
 
@@ -694,7 +694,7 @@ asmlinkage int vprintk(const char *fmt, va_list args)
 	raw_local_irq_save(flags);
 	this_cpu = smp_processor_id();
 
-	trace_kernel_vprintk(__builtin_return_address(0),
+	_trace_kernel_vprintk(__builtin_return_address(0),
 		printk_buf, printed_len);
 
 	/*
