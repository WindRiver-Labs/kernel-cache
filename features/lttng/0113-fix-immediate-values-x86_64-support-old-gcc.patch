diff --git a/kernel/Makefile b/kernel/Makefile
index fb07961..651e39c 100644
--- a/kernel/Makefile
+++ b/kernel/Makefile
@@ -85,7 +85,7 @@ obj-$(CONFIG_RELAY) += relay.o
