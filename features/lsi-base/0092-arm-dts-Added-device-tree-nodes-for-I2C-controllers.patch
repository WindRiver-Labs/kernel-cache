Subject: [PATCH 092/175] arm/dts: Added device tree nodes for I2C controllers.

git.yoctoproject.org/git/linux-yocto-3.10
commit 6d5673b45e93206affd0c502418ca935ee493f66 standard/axxia/base.

Signed-off-by: Anders Berg <anders.berg@lsi.com>
---
 arch/arm/boot/dts/axm55xx.dts |   41 +++++++++++++++++++++++++++++++++++++++++
 1 files changed, 41 insertions(+), 0 deletions(-)

diff --git a/arch/arm/boot/dts/axm55xx.dts b/arch/arm/boot/dts/axm55xx.dts
index 5ba1824..07a3cb4 100644
--- a/arch/arm/boot/dts/axm55xx.dts
+++ b/arch/arm/boot/dts/axm55xx.dts
@@ -280,6 +280,47 @@
 				     <0 53 4>;
 		};
 	};
+
+        I2C0: i2c@0x02010084000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+                compatible = "lsi,api2c";
+                device_type = "i2c";
+                port = <0>;
+                reg = <0x20 0x10084000 0x00 0x1000>;
+		interrupts = <0 19 4>;
+        };
+
+        I2C1: i2c@0x02010085000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+                compatible = "lsi,api2c";
+                device_type = "i2c";
+                port = <1>;
+                reg = <0x20 0x10085000 0x00 0x1000>;
+		interrupts = <0 20 4>;
+        };
+
+        I2C2: i2c@0x02010086000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+                compatible = "lsi,api2c";
+                device_type = "i2c";
+                port = <2>;
+                reg = <0x20 0x10086000 0x00 0x1000>;
+		interrupts = <0 21 4>;
+        };
+
+        SMB: i2c@0x02010087000 {
+		#address-cells = <1>;
+		#size-cells = <0>;
+                compatible = "lsi,api2c";
+                device_type = "i2c";
+                port = <3>;
+                bus_name = "smb";
+                reg = <0x20 0x10087000 0x00 0x1000>;
+		interrupts = <0 22 4>;
+        };
 };
 
