From d8a51f0d55803f78ffa9a928e30f88630396c158 Mon Sep 17 00:00:00 2001
From: David Mercado <david.mercado@windriver.com>
Date: Tue, 19 Nov 2013 11:31:10 -0500
Subject: [PATCH 129/159] LSI AXM55XX: Add VGIC and virtual timer entries in
 DTS file

git.yoctoproject.org/git/linux-yocto-3.10
commit 9c50fed1365735d9de7453e4a92889febdc5caee standard/axxia/base.

Add vgic and virtual timer entries in axm55xx.dts file.

Signed-off-by: David Mercado <david.mercado@windriver.com>
---
 arch/arm/boot/dts/axm55xx.dts |    6 +++++-
 1 files changed, 5 insertions(+), 1 deletions(-)

diff --git a/arch/arm/boot/dts/axm55xx.dts b/arch/arm/boot/dts/axm55xx.dts
index 20d56cd..88f10ea 100644
--- a/arch/arm/boot/dts/axm55xx.dts
+++ b/arch/arm/boot/dts/axm55xx.dts
@@ -199,6 +199,8 @@
 		interrupt-controller;
 		reg = <0x20 0x01001000 0 0x1000>,  /* gic dist base */
 		      <0x20 0x01002000 0 0x100>,   /* gic cpu base */
+		      <0x20 0x01004000 0 0x2000>,  /* vgic control */
+		      <0x20 0x01006000 0 0x2000>,  /* vgic cpu base */
 		      <0x20 0x10030000 0 0x100>,   /* axm IPI mask reg base */
 		      <0x20 0x10040000 0 0x20000>; /* axm IPI send reg base */
 	};
@@ -206,7 +208,9 @@
 	timer {
 		compatible = "arm,armv7-timer";
 		interrupts = <1 13 0xf08>,
-			     <1 14 0xf08>;
+			     <1 14 0xf08>,
+			     <1 11 0xf08>,
+			     <1 10 0xf08>;
 	};
 
 
